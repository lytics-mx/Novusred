<odoo>
    <template id="external_layout_bubble_inherit_style" inherit_id="web.external_layout_bubble">
        <xpath expr="//head" position="inside">
            <style>
                @media print {
                    .only-first-page {
                        display: block;
                    }
                    .only-first-page:not(:first-of-type) {
                        display: none !important;
                    }
                }
            </style>
        </xpath>
    </template>
</odoo>