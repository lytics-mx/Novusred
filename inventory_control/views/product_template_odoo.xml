<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar campos después de categ_id -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="brand_type_id"/>
                <field name="discount_percentage" readonly="1"/>
                <field name="fixed_discount" readonly="1"/>
                <field name="discounted_price" readonly="1"/>
                <field name="free_shipping" readonly="1" />
                <!-- <field name="product_model_id" />             -->
                <field name="product_model"/>
            </xpath>
            
            <!-- Campo de documentos técnicos -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Documentos técnicos">
                    <group>
                        <field name="technical_document_ids" widget="many2many_binary" options="{'mimetype': 'application/*'}"/>
                    </group>
                </page>
                <page string="Imágenes adicionales">
                    <group>
                        <field name="product_image_ids" mode="kanban">
                            <kanban>
                                <field name="image_1920"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click">
                                            <field name="image_1920" widget="image"/>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_kanban_inherit" model="ir.ui.view">
        <field name="name">product.template.kanban.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'oe_kanban_details')]" position="inside">
                <div>
                    <span><strong>Modelo:</strong> <t t-esc="record.product_model.value"/></span>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_search_inherit" model="ir.ui.view">
        <field name="name">product.template.search.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='categ_id']" position="after">
                <filter string="Tipo de Marca" name="filter_by_brand_type" context="{'group_by': 'brand_type_id'}"/> 
                <filter string="Sin imagen" name="filter_by_image_1920" domain="[('image_1920', '=', False)]"/>
                <filter string="Modelo del Producto" name="filter_by_product_model" domain="[('product_model', 'ilike', '%')]" context="{'group_by': 'product_model'}"/>
            </xpath>
        </field>
    </record>
    <record id="view_product_template_list_inherit" model="ir.ui.view">
        <field name="name">product.template.list.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="product_model" string="Modelo del Producto"/>
            </xpath>
        </field>
    </record>

    
</odoo>