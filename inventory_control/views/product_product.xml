<odoo>
    <record id="view_product_product_list_inherit" model="ir.ui.view">
        <field name="name">product.product.list.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="product_model" string="Modelo del Producto"/>
            </xpath>
        </field>
    </record>
</odoo>
