<odoo>
    <template id="report_invoice_document_inherit_cfdi_top" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row mb-4">
                <div class="col-5">
                    <div id="cfdi_data" class="table-responsive">
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Versión:</strong></td>
                                <td><span t-field="o.l10n_mx_edi_cfdi_version"/></td>
                            </tr>
                            <tr>
                                <td><strong>Folio Fiscal:</strong></td>
                                <td><span t-field="o.l10n_mx_edi_cfdi_uuid"/></td>
                            </tr>
                            <tr>
                                <td><strong>No. de serie del CSD del Emisor:</strong></td>
                                <td><span t-field="o.l10n_mx_edi_cfdi_certificado"/></td>
                            </tr>
                            <tr>
                                <td><strong>Fecha y hora de emisión:</strong></td>
                                <td><span t-field="o.l10n_mx_edi_cfdi_date"/></td>
                            </tr>
                            <tr>
                                <td><strong>Fecha y hora de Certificación:</strong></td>
                                <td><span t-field="o.l10n_mx_edi_cfdi_tfd_date"/></td>
                            </tr>
                            <tr>
                                <td><strong>Uso de CFDI:</strong></td>
                                <td><span t-field="o.l10n_mx_edi_usage"/></td>
                            </tr>
                            <tr>
                                <td><strong>Régimen fiscal:</strong></td>
                                <td><span t-field="o.company_id.l10n_mx_edi_fiscal_regime"/></td>
                            </tr>
                            <tr>
                                <td><strong>Tipo de CFDI:</strong></td>
                                <td><span t-field="o.l10n_mx_edi_cfdi_type"/></td>
                            </tr>
                            <tr>
                                <td><strong>Serie y Folio:</strong></td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>