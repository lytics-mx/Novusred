<odoo>
    <template id="report_invoice_document_inherit_remove_terms" inherit_id="account.report_invoice_document">
        <!-- Quitar "Términos de pago" -->
        <xpath expr="//span[@id='payment_terms_note_id']" position="replace"/>
        <!-- Quitar "Payment Communication" -->
        <xpath expr="//p[@name='payment_communication']" position="replace"/>
        <!-- Elimina este xpath si da error -->
        <!-- <xpath expr="//div[@name='comment']" position="replace"/> -->
    </template>

    <!-- Agrega los datos fiscales después de la tabla de totales -->
    <template id="report_invoice_document_inherit_fiscal_data" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='payment_term']" position="before">
            <t t-if="o.l10n_mx_edi_cfdi_uuid">
                <table class="table table-sm mt-3" style="width: 100%;">
                    <tr>
                        <td><strong>Folio Fiscal (UUID):</strong></td>
                        <td><span t-field="o.l10n_mx_edi_cfdi_uuid"/></td>
                    </tr>
                    <tr>
                        <td><strong>No. Certificado SAT:</strong></td>
                        <td><span t-field="o.l10n_mx_edi_cfdi_sat_cert_number"/></td>
                    </tr>
                    <tr>
                        <td><strong>No. Certificado Emisor:</strong></td>
                        <td><span t-field="o.l10n_mx_edi_cfdi_cert_number"/></td>
                    </tr>
                    <tr>
                        <td><strong>Fecha Timbrado:</strong></td>
                        <td><span t-field="o.l10n_mx_edi_cfdi_timbre_time"/></td>
                    </tr>
                </table>
            </t>
        </xpath>
    </template>
</odoo>