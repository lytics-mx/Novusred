<odoo>
    <data noupdate="1">
        <!-- Cron job para actualizar list_price con discounted_price -->
        <record id="ir_cron_update_list_price" model="ir.cron">
            <field name="name">Actualizar List Price</field>
            <field name="model_id" ref="model_product_template"/> <!-- Referencia al modelo -->
            <field name="state">code</field>
            <field name="code">model._cron_update_list_price()</field> <!-- Método a ejecutar -->
            <field name="interval_number">1</field> <!-- Intervalo de tiempo -->
            <field name="interval_type">days</field> <!-- Tipo de intervalo (días) -->
            <field name="active">True</field> <!-- Activar el cron job -->
        </record>
    </data>
</odoo>