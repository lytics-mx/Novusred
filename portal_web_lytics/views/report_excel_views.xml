<odoo>
    <record id="action_reporte_excel" model="ir.actions.server">
        <field name="name">Generar Reporte Excel</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">
            action = env.ref('portal_web_lytics.reporte_excel').report_action(records)
        </field>
    </record>

    <record id="view_product_form_inherit" model="ir.ui.view">
        <field name="name">product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <header>
                <button name="action_reporte_excel" type="action" string="Exportar Excel" class="btn-primary"/>
            </header>
        </field>
    </record>
</odoo>