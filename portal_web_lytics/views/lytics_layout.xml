<odoo>
    <!-- Custom Search Box Template -->
    <template id="lytics_search_box" name="Lytics Search Box">
        <form class="o_searchbar_form" action="/search" method="get" style="width: 100%; max-width: 400px;">
            <div class="input-group" style="border-radius: 30px; background-color: #FFFAF4;">
                <input type="search" 
                       name="search" 
                       class="form-control"
                       placeholder="Search..." 
                       t-att-data-search-type="'all'"
                       t-att-data-limit="'5'"
                       t-att-data-display-image="'true'"
                       t-att-data-display-description="'true'"
                       style="border: none; border-radius: 30px;"/>
                <input name="order" type="hidden" value="name asc"/>
            </div>
        </form>
    </template>

    <!-- Main Layout Template -->
    <template id="lytics_custom_layout" name="Lytics Custom Layout">
        <html>
            <head>
                <title>Lytics Custom Page</title>
            </head>
            <body>
                <!-- Navbar -->
                <nav style="background-color: #1E90FF; padding: 10px; margin: 0; position: fixed; width: 100%; top: 0; left: 0;">
                    <div class="container">
                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Logo and Menu -->
                            <div class="d-flex align-items-center">
                                <img src="/portal_web_lytics/static/src/img/logo.png" alt="Logo" style="height: 40px; margin-right: 20px;"/>
                                <div class="nav-links">
                                    <a href="/" style="color: white; margin-right: 20px; text-decoration: none;">Home</a>
                                    <a href="/about" style="color: white; margin-right: 20px; text-decoration: none;">About</a>
                                    <a href="/contactus" style="color: white; text-decoration: none;">Contact</a>
                                </div>
                            </div>
                            
                            <!-- Search Bar -->
                            <t t-call="lytics_search_box"/>

                            <!-- User Tools -->
                            <div class="d-flex gap-3 align-items-center">
                                <a href="/web/login" style="color: white;"><i class="fa fa-user"></i></a>
                                <a href="/shop/wishlist" style="color: white;"><i class="fa fa-heart"></i></a>
                                <a href="/shop/cart" style="color: white;"><i class="fa fa-shopping-cart"></i></a>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Main Content -->
                <main>
                    <t t-raw="0"/>
                </main>

                <!-- Footer -->
                <footer style="margin-top: 20px; text-align: center;">
                    <p>&#169; 2024 Lytics. All rights reserved.</p>
                </footer>
            </body>
        </html>
    </template>
</odoo>