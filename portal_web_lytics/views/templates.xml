<odoo>
    <template id="lytics_base_template" name="Lytics Base Template">
        <div class="lytics-container">
            <t t-raw="0"/>
        </div>
    </template>

    <template id="lytics_template" name="Lytics Template" inherit_id="lytics_base_template">
        <xpath expr="//div[@class='lytics-container']" position="inside">
            <header class="lytics-header" style="background-color: #f8f9fa; padding: 10px;">
                <div class="container">
                    <h1>Lytics Header</h1>
                    <nav>
                        <ul style="list-style: none; display: flex; gap: 10px;">
                            <li><a href="/" style="text-decoration: none;">Home</a></li>
                            <li><a href="/about" style="text-decoration: none;">About</a></li>
                            <li><a href="/contact" style="text-decoration: none;">Contact</a></li>
                        </ul>
                    </nav>
                </div>
            </header>
            <main>
                <h1>Welcome to Lytics</h1>
                <p>This is a custom page for Lytics.</p>
            </main>
            <footer class="lytics-footer" style="background-color: #f8f9fa; padding: 10px; margin-top: 20px;">
                <div class="container">
                    <p>&#169; 2025 Lytics. All rights reserved.</p>
                </div>
            </footer>
        </xpath>
    </template>
</odoo>