<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para el modelo free.shipping.campaign -->
    <record id="view_free_shipping_campaign_list" model="ir.ui.view">
        <field name="name">free.shipping.campaign.list</field>
        <field name="model">free.shipping.campaign</field>
        <field name="arch" type="xml">
            <tree create="true" delete="true">
                <field name="name"/>
                <field name="active"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para el modelo free.shipping.campaign -->
    <record id="view_free_shipping_campaign_search" model="ir.ui.view">
        <field name="name">free.shipping.campaign.search</field>
        <field name="model">free.shipping.campaign</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="active"/>
            </search>
        </field>
    </record>

    <!-- Vista de formulario para el modelo free.shipping.campaign -->
    <record id="view_free_shipping_campaign_form" model="ir.ui.view">
        <field name="name">free.shipping.campaign.form</field>
        <field name="model">free.shipping.campaign</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre de la campaña"/>
                        <h1><field name="name" placeholder="Nombre de la campaña"/></h1>
                    </div>
                    <group>
                        <field name="active"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista kanban para el modelo free.shipping.campaign -->
    <record id="view_free_shipping_campaign_kanban" model="ir.ui.view">
        <field name="name">free.shipping.campaign.kanban</field>
        <field name="model">free.shipping.campaign</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="active"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div>Activo: <field name="active"/></div>
                            <div>Inicio: <field name="start_date"/></div>
                            <div>Fin: <field name="end_date"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción para abrir el modelo free.shipping.campaign -->
    <record id="action_free_shipping_campaign" model="ir.actions.act_window">
        <field name="name">Campañas de Envío Gratis</field>
        <field name="res_model">free.shipping.campaign</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- Menú para "Campañas de Envío Gratis" debajo de "Catálogo" en Comercio Electrónico -->
    <menuitem id="menu_free_shipping_campaign"
              name="Campañas de Envío Gratis"
              action="action_free_shipping_campaign"
              parent="website.menu_website_global_configuration"
              sequence="27"/>
</odoo>
