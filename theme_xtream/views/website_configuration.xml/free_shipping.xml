<odoo>
<!-- Menú y vista para Free Shipping -->
<record id="view_free_shipping_tree" model="ir.ui.view">
    <field name="name">free.shipping.list</field>
    <field name="model">free.shipping</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="product_ids"/>
        </list>
    </field>
</record>

<record id="view_free_shipping_form" model="ir.ui.view">
    <field name="name">free.shipping.form</field>
    <field name="model">free.shipping</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button string="Actualizar Productos" name="action_toggle_free_shipping" type="object" class="oe_highlight"/>
            </header>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="action_free_shipping" model="ir.actions.act_window">
    <field name="name">Envió gratis</field>
    <field name="res_model">free.shipping</field>
    <field name="view_mode">list,form</field>
</record>

<!-- Menú para "Free Shipping" debajo de "Catálogo" en Comercio Electrónico -->
<menuitem id="menu_free_shipping_line"
          name="Free Shipping"
          action="action_free_shipping"
          parent="website.menu_website_global_configuration"
          sequence="27"/>
</odoo>
