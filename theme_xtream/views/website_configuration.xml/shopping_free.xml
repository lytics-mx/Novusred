<odoo>
<!-- MenÃº y vista para Shopping Free -->
<record id="view_shopping_free_tree" model="ir.ui.view">
    <field name="name">shopping.free.list</field>
    <field name="model">shopping.free</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="product_ids"/>
        </list>
    </field>
</record>

<record id="view_shopping_free_form" model="ir.ui.view">
    <field name="name">shopping.free.form</field>
    <field name="model">shopping.free</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="action_shopping_free" model="ir.actions.act_window">
    <field name="name">Shopping Free</field>
    <field name="res_model">shopping.free</field>
    <field name="view_mode">list,form</field>
</record>

<menuitem id="menu_shopping_free"
          name="Shopping Free"
          parent="menu_banner_image_line"
          action="action_shopping_free"
          sequence="27"/>
</odoo>
