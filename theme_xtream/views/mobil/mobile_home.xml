<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_view_product_xtream_mobile" inherit_id="theme_xtream.xtream_inicio">
        <xpath expr="//div[@id='wrap']" position="inside">
                <!-- Agregar la referencia al CSS -->
                <t t-set="head">
                    <link rel="stylesheet" href="/theme_xtream/static/src/css/home.css"/>
                </t>
                <!-- Aquí va el contenido para móvil -->
                <div id="wrap-mobile" class="oe_structure oe_empty d-block d-md-none" style="font-family: 'Questrial', sans-serif;">
                    <!-- Banner principal móvil -->
                    <t t-set="active_banner" t-value="request.env['banner.image.line'].sudo().search([('is_active_carousel', '=', True), ('name', '=', 'home')], limit=1)" />
                    <t t-if="active_banner">
                        <t t-if="len(active_banner.general_images) == 1">
                            <div style="position: relative;">
                                <img t-att-src="'/web/image/' + str(active_banner.general_images[0].id)" alt="General Image" style="width: 100%; height: auto; object-fit: cover;" />
                                <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 60px;"></div>
                            </div>
                        </t>
                        <t t-elif="len(active_banner.general_images) > 1">
                            <div id="generalImagesCarouselMobile" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <t t-foreach="active_banner.general_images" t-as="image" t-key="image.id">
                                        <div t-att-class="'carousel-item' + (' active' if image == active_banner.general_images[0] else '')" style="position: relative;">
                                            <img t-att-src="'/web/image/' + str(image.id)" alt="General Image" style="width: 100%; height: auto; object-fit: cover;" />
                                            <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 60px;"></div>
                                        </div>
                                    </t>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#generalImagesCarouselMobile" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#generalImagesCarouselMobile" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div style="position: relative;">
                            <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" alt="Default Image" style="width: 100%; height: auto; object-fit: cover;" />
                            <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 60px;"></div>
                        </div>
                    </t>

                    <!-- Banner métodos de pago seguros -->
                    <div class="container mt-3 px-2">
                        <a href="/payment_policies">
                            <img src="/theme_xtream/static/src/img/home/bannerhome.png" alt="Métodos de pago seguros" class="img-fluid w-100" style="border-radius: 10px; background: transparent;" />
                        </a>
                    </div>

                    <!-- Sugerencias personalizadas -->
                    <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                        <t t-set="viewed_categories" t-value="request.env['website.track'].sudo().search([
                            ('visitor_id', '=', request.env['website.visitor']._get_visitor_from_request().id),
                            ('product_id', '!=', False)
                        ]).mapped('product_id.categ_id')" />
                        <t t-set="suggested_products" t-value="request.env['product.template'].sudo().search([
                            ('categ_id', 'in', viewed_categories.ids),
                            ('website_published', '=', True),
                            ('qty_available', '>', 1)
                        ], limit=6)" />
                        <t t-if="suggested_products">
                            <div class="container mt-3 px-2">
                                <h2 style="font-family: 'Questrial', sans-serif; font-size: 20px;">De acuerdo a tu última vista</h2>
                                <div class="row row-cols-2 g-2">
                                    <t t-foreach="suggested_products" t-as="product">
                                        <div class="col">
                                            <a t-att-href="product.website_url" class="card h-100 shadow-sm product-card" style="text-decoration: none;">
                                                <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" class="card-img-top" style="height: 120px; object-fit: contain;" />
                                                <div class="card-body p-2">
                                                    <span class="fw-bold" style="font-size: 18px;">$<t t-esc="'{:,}'.format(int(product.discounted_price if product.discounted_price &lt; product.list_price else product.list_price))" /></span>
                                                    <h6 class="card-title mb-1 text-truncate" style="font-size: 0.85rem;"><t t-esc="product.name" /></h6>
                                                    <t t-if="product.free_shipping">
                                                        <span class="text-orange" style="font-size: 13px;">Envío gratis</span>
                                                    </t>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </t>

                    <!-- Ofertas -->
                    <t t-set="discounted_products" t-value="request.env['product.template'].sudo().search([
                        ('website_published', '=', True),
                        ('product_tag_ids', '!=', False),
                        ('qty_available', '>', 1)
                    ], order='create_date desc', limit=6)" />
                    <t t-if="discounted_products">
                        <div class="container mt-3 px-2">
                            <h2 style="font-family: 'Questrial', sans-serif; font-size: 20px;">Ofertas</h2>
                            <div class="row row-cols-2 g-2">
                                <t t-foreach="discounted_products" t-as="product">
                                    <div class="col">
                                        <a t-att-href="product.website_url" class="card h-100 shadow-sm product-card" style="text-decoration: none;">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" class="card-img-top" style="height: 120px; object-fit: contain;" />
                                            <div class="card-body p-2">
                                                <span class="fw-bold" style="font-size: 18px;">$<t t-esc="'{:,}'.format(int(product.discounted_price if product.discounted_price &lt; product.list_price else product.list_price))" /></span>
                                                <h6 class="card-title mb-1 text-truncate" style="font-size: 0.85rem;"><t t-esc="product.name" /></h6>
                                                <t t-if="product.free_shipping">
                                                    <span class="text-orange" style="font-size: 13px;">Envío gratis</span>
                                                </t>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>

                    <!-- También pueden interesarte -->
                    <div class="container mt-3 px-2">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 20px;">También pueden interesarte</h2>
                        <t t-set="interest_products" t-value="request.env['product.template'].sudo().search([
                            ('website_published', '=', True),
                            ('sale_ok', '=', True),
                            ('qty_available', '>', 1)
                        ], order='website_sequence, create_date desc', limit=6)" />
                        <t t-if="interest_products">
                            <div class="row row-cols-2 g-2">
                                <t t-foreach="interest_products" t-as="product">
                                    <div class="col">
                                        <a t-att-href="product.website_url" class="card h-100 shadow-sm product-card" style="text-decoration: none;">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" class="card-img-top" style="height: 120px; object-fit: contain;" />
                                            <div class="card-body p-2">
                                                <span class="fw-bold" style="font-size: 18px;">$<t t-esc="'{:,}'.format(int(product.discounted_price if product.discounted_price &lt; product.list_price else product.list_price))" /></span>
                                                <h6 class="card-title mb-1 text-truncate" style="font-size: 0.85rem;"><t t-esc="product.name" /></h6>
                                                <t t-if="product.free_shipping">
                                                    <span class="text-orange" style="font-size: 13px;">Envío gratis</span>
                                                </t>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>

                    <!-- Descubre -->
                    <div class="container mt-3 px-2">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 20px;">Descubre</h2>
                        <t t-set="active_product_banner" t-value="request.env['banner.image.line'].sudo().search([('is_active_product_carousel', '=', True)], limit=1)" />
                        <t t-if="active_product_banner and active_product_banner.product_images">
                            <div class="row g-2">
                                <t t-foreach="active_product_banner.product_images[:2]" t-as="image" t-key="image.id">
                                    <div class="col-12">
                                        <img t-att-src="'/web/image/' + str(image.id)" alt="Product Image" class="img-fluid w-100" style="object-fit: cover;" />
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>

                    <!-- Marcas -->
                    <div class="container mt-3 px-2">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 20px;">Marcas</h2>
                        <t t-set="brands" t-value="request.env['brand.type'].sudo().search([
                            ('icon_image', '!=', False),
                            ('cover_image', '!=', False),
                            ('active', '=', True)
                        ], limit=6)" />
                        <div class="row g-2 justify-content-center">
                            <t t-foreach="brands" t-as="brand" t-key="brand.id">
                                <div class="col-6 d-flex justify-content-center align-items-stretch">
                                    <div class="position-relative text-center w-100 d-flex flex-column h-100" style="background-color: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.10); min-height: 180px;">
                                        <img t-att-src="'data:image/png;base64,' + brand.cover_image.decode('utf-8')" alt="Portada de la Marca" style="width: 100%; height: 60px; object-fit: cover;" />
                                        <div style="background-color: transparent; padding: 5px; margin-top: -43px; width: 60px; height: 60px; margin-left: auto; margin-right: auto; border-radius: 50%; overflow: hidden; display: flex; align-items: center; justify-content: center;">
                                            <img t-att-src="'data:image/png;base64,' + brand.icon_image.decode('utf-8')" alt="Ícono de la Marca" style="width: 100%; height: 100%; object-fit: contain; display: block; background: transparent; border: none;" />
                                        </div>
                                        <div style="margin-top: 5px;">
                                            <span style="font-family: 'Questrial', sans-serif; font-size: 13px; font-weight: bold;">
                                                <t t-esc="brand.name" />
                                            </span>
                                        </div>
                                        <div style="margin-top: auto; margin-bottom: 5px;">
                                            <a t-att-href="'/brand/' + (brand.name or '').replace(' ', '').lower()" style="font-family: 'Questrial', sans-serif; font-size: 12px; color: #6c757d; text-decoration: none;">
                                                Ver marca
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>

                    <!-- Categorías populares -->
                    <div class="container mt-3 px-2">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 20px;">Categorías populares</h2>
                        <t t-set="categories" t-value="request.env['product.category'].sudo().search([('is_visible_in_menu', '=', True)], limit=6)" />
                        <div class="row row-cols-2 g-2">
                            <t t-foreach="categories" t-as="category">
                                <div class="col">
                                    <div style="text-align: center; background: #fff; min-height: 90px; display: flex; flex-direction: column; align-items: center; justify-content: center; border-radius: 12px;">
                                        <a t-att-href="'/subcategory?category_id=' + str(category.id)">
                                            <img t-att-src="'/web/image/product.category/' + str(category.id) + '/icon'" class="d-block mx-auto" t-att-alt="category.name" style="width: 40px; height: 40px; object-fit: contain; margin-bottom: 5px;" />
                                            <p style="font-family: 'Questrial', sans-serif; font-size: 13px; color: #333; margin: 0;">
                                                <t t-esc="category.name" />
                                            </p>
                                        </a>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>

                    <!-- Recompensas, Pago Seguro, Envíos -->
                    <div class="container mt-3 px-2">
                        <div class="row text-center">
                            <div class="col-4">
                                <img src="/theme_xtream/static/src/img/home/carrito.png" alt="Recompensas por Comprar" style="width: 35px; height: auto; margin-bottom: 5px;" />
                                <h5 style="font-family: 'Questrial', sans-serif; font-size: 13px; font-weight: bold; color: #333;">Recompensas</h5>
                                <p style="font-family: 'Questrial', sans-serif; font-size: 11px; color: #666;">Compra y gana bonificación a tu monedero electrónico.</p>
                            </div>
                            <div class="col-4">
                                <img src="/theme_xtream/static/src/img/home/escudo.png" alt="Pago Seguro" style="width: 35px; height: auto; margin-bottom: 5px;" />
                                <h5 style="font-family: 'Questrial', sans-serif; font-size: 13px; font-weight: bold; color: #333;">Pago Seguro</h5>
                                <p style="font-family: 'Questrial', sans-serif; font-size: 11px; color: #666;">Métodos de pago muy seguros para tu comodidad.</p>
                            </div>
                            <div class="col-4">
                                <img src="/theme_xtream/static/src/img/home/mano.png" alt="Envíos" style="width: 35px; height: auto; margin-bottom: 5px;" />
                                <h5 style="font-family: 'Questrial', sans-serif; font-size: 13px; font-weight: bold; color: #333;">Envíos</h5>
                                <p style="font-family: 'Questrial', sans-serif; font-size: 11px; color: #666;">Todo es por envío, no entregamos en oficinas.</p>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
    </template>
</odoo>