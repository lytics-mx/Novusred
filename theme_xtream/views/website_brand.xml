<odoo>
    <template id="website_brand" name="Brand Page">
        <t t-call="website.layout">
            <div class="container">                              
                <div class="row">
                    <div class="col-lg-3">
                        <h4>Etiquetas</h4>
                        <ul class="nav flex-column">
                            <t t-foreach="request.env['product.tag'].search([])" t-as="tag">
                                <li class="nav-item">
                                    <div class="form-check">
                                        <input type="checkbox" 
                                               class="form-check-input tag-checkbox" 
                                               t-att-value="tag.id"
                                               t-att-id="'tag_%s' % tag.id"/>
                                        <label class="form-check-label" t-att-for="'tag_%s' % tag.id">
                                            <t t-esc="tag.name"/>
                                        </label>
                                    </div>
                                </li>
                            </t>
                        </ul>
                    </div>
                    <div class="col-lg-9">
                        <!-- Contenedor para los productos -->
                        <div id="product-list">
                            <t t-foreach="request.env['product.template'].search([('website_published', '=', True)])" t-as="product">
                                <div class="product-item">
                                    <h5><t t-esc="product.name"/></h5>
                                    <p><t t-esc="product.list_price"/> USD</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const checkboxes = document.querySelectorAll('.tag-checkbox');
                    checkboxes.forEach(checkbox => {
                        checkbox.addEventListener('change', function () {
                            const selectedTags = Array.from(checkboxes)
                                .filter(cb => cb.checked)
                                .map(cb => cb.value)
                                .join(',');
                            fetch(`/shop?tags=${selectedTags}`, {
                                method: 'GET',
                                headers: {
                                    'X-Requested-With': 'XMLHttpRequest'
                                }
                            })
                            .then(response => response.text())
                            .then(html => {
                                document.getElementById('product-list').innerHTML = html;
                            });
                        });
                    });
                });
            </script>
        </t>
    </template>
</odoo>