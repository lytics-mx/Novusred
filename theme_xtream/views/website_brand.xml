<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_brand" name="Marcas">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <t t-set="active_brand_banner" t-value="request.env['banner.image.line'].sudo().search([('is_active_brand_carousel', '=', True)], limit=1)" />
                <t t-if="active_brand_banner">
                    <t t-if="len(active_brand_banner.brand_images) == 1">
                        <!-- Single image, no carousel -->
                        <div style="position: relative;">
                            <img t-att-src="'/web/image/' + str(active_brand_banner.brand_images[0].id)" 
                                 alt="Brand Image" 
                                 style="width: 100%; height: auto; object-fit: cover;" />
                            <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                        </div>
                    </t>
                    <t t-elif="len(active_brand_banner.brand_images) > 1">
                        <!-- Carousel for multiple images -->
                        <div id="brandImagesCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <t t-foreach="active_brand_banner.brand_images" t-as="image" t-key="image.id">
                                    <div t-att-class="'carousel-item' + (' active' if image == active_brand_banner.brand_images[0] else '')" style="position: relative;">
                                        <img t-att-src="'/web/image/' + str(image.id)" 
                                             alt="Brand Image" 
                                             style="width: 100%; height: auto; object-fit: cover;" />
                                        <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                                    </div>
                                </t>
                            </div>
                            <!-- Carousel controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#brandImagesCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#brandImagesCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <!-- Default image if no active brand banner -->
                    <div style="position: relative;">
                        <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" 
                             alt="Default Image" 
                             style="width: 100%; height: auto; object-fit: cover;" />
                        <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                    </div>
                </t>
                <!-- Nuestras Mejores Marcas -->
                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">NUESTRAS MEJORES MARCAS</h2>
                    </div>
                    <t t-set="brands" t-value="request.env['brand.type'].sudo().search([
                        ('icon_image', '!=', False),
                        ('active', '=', True)
                    ], limit=4)" />
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <t t-foreach="brands" t-as="brand" t-key="brand.id">
                            <div class="position-relative text-center" style="width: 150px; background-color: white; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
                                <!-- Ícono de la marca (icon_image) -->
                                <div style="padding: 10px;">
                                    <img t-att-src="'data:image/png;base64,' + brand.icon_image.decode('utf-8')"
                                         alt="Ícono de la Marca"
                                         style="width: 100%; height: auto; object-fit: contain;" />
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <!-- Encuentra lo que buscas -->
                <section class="find-what-you-need text-center py-5">
                    <h2>Encuentra lo que buscas</h2>
                    <div class="container">
                        <div class="row justify-content-center">
                            <t t-foreach="[{'src': '/theme_xtream/static/src/img/ofertas-barra/etiqueta.png', 'alt': 'Todas las ofertas', 'text': 'Todas las ofertas'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/relampago.png', 'alt': 'Ofertas relámpago', 'text': 'Ofertas relámpago'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/etiqueta3.png', 'alt': 'Menos de $500', 'text': 'Menos de $500'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/reloj.png', 'alt': 'Hasta las 3 del día', 'text': 'Hasta las 3 del día'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/relampago3.png', 'alt': 'Ofertas relámpago', 'text': 'Ofertas relámpago'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/reloj3.png', 'alt': 'Hasta las 3 del día', 'text': 'Hasta las 3 del día'}]" t-as="icon">
                                <div class="col text-center mx-3">
                                    <div style="width: 100px; height: 100px; border-radius: 50%; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                        <img t-att-src="icon['src']" t-att-alt="icon['alt']" class="img-fluid" style="width: 50px; height: 50px;" />
                                    </div>
                                    <p t-esc="icon['text']" style="font-size: 14px; margin-top: 10px;"></p>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <!-- Mejores Ofertas -->
                <section class="best-offers py-5">
                    <h2 class="text-center">Mejores Ofertas</h2>
                    <div class="container">
                        <div class="row">
                            <t t-foreach="products" t-as="product">
                                <div class="col-md-3">
                                    <div class="card">
                                        <img t-att-src="'/web/image/' + str(product.image_id)" class="card-img-top" alt="Product Image" />
                                        <div class="card-body">
                                            <h5 class="card-title" t-esc="product.name"></h5>
                                            <p class="card-text" t-esc="product.price"></p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <!-- Más Categorías -->
                <section class="more-categories py-5">
                    <h2 class="text-center">Más Categorías</h2>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4"><img src="/theme_xtream/static/src/img/categories/category1.png" alt="Category 1" class="img-fluid" /></div>
                            <div class="col-md-4"><img src="/theme_xtream/static/src/img/categories/category2.png" alt="Category 2" class="img-fluid" /></div>
                            <div class="col-md-4"><img src="/theme_xtream/static/src/img/categories/category3.png" alt="Category 3" class="img-fluid" /></div>
                        </div>
                    </div>
                </section>

                <!-- Productos a Precio Especial -->
                <section class="special-price-products py-5">
                    <h2 class="text-center">Productos a Precio Especial</h2>
                    <div class="container">
                        <div class="row">
                            <t t-foreach="special_products" t-as="product">
                                <div class="col-md-3">
                                    <div class="card">
                                        <img t-att-src="'/web/image/' + str(product.image_id)" class="card-img-top" alt="Product Image" />
                                        <div class="card-body">
                                            <h5 class="card-title" t-esc="product.name"></h5>
                                            <p class="card-text" t-esc="product.price"></p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
             
                                            
            </div>
        </t>
    </template>
</odoo>