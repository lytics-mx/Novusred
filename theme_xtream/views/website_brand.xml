<odoo>
    <template id="website_brand" name="Brand Page">
        <t t-call="website.layout">
            <div class="container">                              
                <div class="row">
                    <!-- Sidebar con etiquetas -->
                    <div class="col-lg-3">
                        <h4>Etiquetas</h4>
                        <ul class="nav flex-column">
                            <t t-foreach="request.env['product.tag'].search([])" t-as="tag">
                                <li class="nav-item">
                                    <div class="form-check">
                                        <input type="checkbox" 
                                               class="form-check-input tag-checkbox" 
                                               t-att-value="tag.id"
                                               t-att-id="'tag_%s' % tag.id"/>
                                        <label class="form-check-label" t-att-for="'tag_%s' % tag.id">
                                            <t t-esc="tag.name"/>
                                        </label>
                                    </div>
                                </li>
                            </t>
                        </ul>
                    </div>
                    <!-- Contenedor de productos -->
                    <div class="col-lg-9">
                        <div id="product-list" class="row">
                            <t t-foreach="request.env['product.template'].search([('website_published', '=', True)])" t-as="product">
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card h-100">
                                        <a t-att-href="'/shop/product/%s' % slug(product)">
                                            <img class="card-img-top" t-att-src="'/web/image/product.template/%s/image_1024' % product.id" t-att-alt="product.name"/>
                                        </a>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <a t-att-href="'/shop/product/%s' % slug(product)" t-esc="product.name"/>
                                            </h5>
                                            <p class="card-text">
                                                <span t-field="product.list_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Script para manejar el filtrado dinÃ¡mico -->
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const checkboxes = document.querySelectorAll('.tag-checkbox');
                    const productList = document.getElementById('product-list');

                    checkboxes.forEach(checkbox => {
                        checkbox.addEventListener('change', function () {
                            const selectedTags = Array.from(checkboxes)
                                .filter(cb => cb.checked)
                                .map(cb => cb.value)
                                .join(',');

                            fetch(`/brand/filter?tags=${selectedTags}`, {
                                method: 'GET',
                                headers: {
                                    'X-Requested-With': 'XMLHttpRequest'
                                }
                            })
                            .then(response => response.text())
                            .then(html => {
                                productList.innerHTML = html;
                            });
                        });
                    });
                });
            </script>
        </t>
    </template>
</odoo>