<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_brand" name="Marcas">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <t t-set="active_brand_banner" t-value="request.env['banner.image.line'].sudo().search([('is_active_brand_carousel', '=', True)], limit=1)" />
                <t t-if="active_brand_banner">
                    <t t-if="len(active_brand_banner.brand_images) == 1">
                        <!-- Single image, no carousel -->
                        <div style="position: relative;">
                            <img t-att-src="'/web/image/' + str(active_brand_banner.brand_images[0].id)" 
                                 alt="Brand Image" 
                                 style="width: 100%; height: auto; object-fit: cover;" />
                            <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                        </div>
                    </t>
                    <t t-elif="len(active_brand_banner.brand_images) > 1">
                        <!-- Carousel for multiple images -->
                        <div id="brandImagesCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <t t-foreach="active_brand_banner.brand_images" t-as="image" t-key="image.id">
                                    <div t-att-class="'carousel-item' + (' active' if image == active_brand_banner.brand_images[0] else '')" style="position: relative;">
                                        <img t-att-src="'/web/image/' + str(image.id)" 
                                             alt="Brand Image" 
                                             style="width: 100%; height: auto; object-fit: cover;" />
                                        <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                                    </div>
                                </t>
                            </div>
                            <!-- Carousel controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#brandImagesCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#brandImagesCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <!-- Default image if no active brand banner -->
                    <div style="position: relative;">
                        <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" 
                             alt="Default Image" 
                             style="width: 100%; height: auto; object-fit: cover;" />
                        <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                    </div>
                </t>
                <!-- Nuestras Mejores Marcas -->
                <section class="our-brands text-center py-5">
                    <h2>Nuestras Mejores Marcas</h2>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-3"><img src="/theme_xtream/static/src/img/brands/microsoft.png" alt="Microsoft" class="img-fluid" /></div>
                            <div class="col-3"><img src="/theme_xtream/static/src/img/brands/lg.png" alt="LG" class="img-fluid" /></div>
                            <div class="col-3"><img src="/theme_xtream/static/src/img/brands/lenovo.png" alt="Lenovo" class="img-fluid" /></div>
                            <div class="col-3"><img src="/theme_xtream/static/src/img/brands/epson.png" alt="Epson" class="img-fluid" /></div>
                        </div>
                    </div>
                </section>

                <!-- Encuentra lo que buscas -->
                <section class="find-what-you-need text-center py-5">
                    <h2>Encuentra lo que buscas</h2>
                    <div class="container">
                        <div class="row">
                            <div class="col"><i class="icon-clock"></i><p>De cortes precisos</p></div>
                            <div class="col"><i class="icon-settings"></i><p>Equipos de calidad</p></div>
                            <div class="col"><i class="icon-bolt"></i><p>Optimiza tu rendimiento</p></div>
                            <div class="col"><i class="icon-check"></i><p>Aprovecha las ofertas</p></div>
                            <div class="col"><i class="icon-truck"></i><p>Envíos rápidos</p></div>
                        </div>
                    </div>
                </section>

                <!-- Mejores Ofertas -->
                <section class="best-offers py-5">
                    <h2 class="text-center">Mejores Ofertas</h2>
                    <div class="container">
                        <div class="row">
                            <t t-foreach="products" t-as="product">
                                <div class="col-md-3">
                                    <div class="card">
                                        <img t-att-src="'/web/image/' + str(product.image_id)" class="card-img-top" alt="Product Image" />
                                        <div class="card-body">
                                            <h5 class="card-title" t-esc="product.name"></h5>
                                            <p class="card-text" t-esc="product.price"></p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <!-- Más Categorías -->
                <section class="more-categories py-5">
                    <h2 class="text-center">Más Categorías</h2>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4"><img src="/theme_xtream/static/src/img/categories/category1.png" alt="Category 1" class="img-fluid" /></div>
                            <div class="col-md-4"><img src="/theme_xtream/static/src/img/categories/category2.png" alt="Category 2" class="img-fluid" /></div>
                            <div class="col-md-4"><img src="/theme_xtream/static/src/img/categories/category3.png" alt="Category 3" class="img-fluid" /></div>
                        </div>
                    </div>
                </section>

                <!-- Productos a Precio Especial -->
                <section class="special-price-products py-5">
                    <h2 class="text-center">Productos a Precio Especial</h2>
                    <div class="container">
                        <div class="row">
                            <t t-foreach="special_products" t-as="product">
                                <div class="col-md-3">
                                    <div class="card">
                                        <img t-att-src="'/web/image/' + str(product.image_id)" class="card-img-top" alt="Product Image" />
                                        <div class="card-body">
                                            <h5 class="card-title" t-esc="product.name"></h5>
                                            <p class="card-text" t-esc="product.price"></p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
             
                                            
            </div>
        </t>
    </template>
</odoo>