<odoo>
    <template id="website_brand" name="Brand Page">
        <t t-call="website.layout">
            <div class="container">                              
                <div class="row">
                    <div class="col-lg-3">
                        <h4>Etiquetas</h4>
                        <div class="list-group mt-4">
                            <t t-foreach="request.env['product.tag'].search([])" t-as="tag">
                                <div class="form-check">
                                    <input type="checkbox" 
                                           class="form-check-input tag-filter" 
                                           t-att-id="'tag_' + str(tag.id)"
                                           t-att-value="tag.id"
                                           name="tag_filter"/>
                                    <label class="form-check-label" t-att-for="'tag_' + str(tag.id)">
                                        <t t-esc="tag.name"/>
                                    </label>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div id="products-container" class="row row-cols-1 row-cols-md-3 g-4">
                            <t t-foreach="request.env['product.template'].search([('website_published', '=', True)])" t-as="product">
                                <div class="col">
                                    <div class="card h-100 oe_product_cart">
                                        <t t-if="product.image_1920">
                                            <img t-att-src="'/web/image/product.template/%s/image_1920' % product.id" class="card-img-top" alt="Product Image"/>
                                        </t>
                                        <div class="card-body">
                                            <h5 class="card-title"><t t-esc="product.name"/></h5>
                                            <p class="card-text">
                                                <span t-field="product.list_price" t-options="{'widget': 'monetary', 'display_currency': request.env.company.currency_id}"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
