<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="lg_products_page" name="LG Products">
        <t t-call="website.layout">
            <t t-set="grid_block_name">Grid</t>
            <t t-set="product_block_name">Product</t>
            <t t-set="navClass">light</t>

            <div id="wrap" class="js_sale o_wsale_products_page">
                <div class="oe_structure" id="oe_structure_website_sale_products_1"/>
                <div class="container oe_website_sale pt-2">
                    <div class="row o_wsale_products_main_row">
                        <div id="products_grid" class="col-12">
                            <div class="products_header btn-toolbar flex-nowrap align-items-center justify-content-between gap-3 mb-3">
                                <h1>LG Products</h1>
                                
                                <t t-if="is_view_active('website_sale.add_grid_or_list_option')" t-call="website_sale.add_grid_or_list_option">
                                    <t t-set="_classes" t-value="d-flex"/>
                                </t>
                            </div>

                            <div class="o_wsale_products_grid_table_wrapper pt-3">
                                <t t-set="products" t-value="request.env['product.template'].sudo().search([
                                    ('website_published', '=', True),
                                    ('brand_type_id.name', '=', 'LG')
                                ])" />
                                
                                <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                                    <t t-foreach="products" t-as="product">
                                        <div class="oe_product g-col-6 g-col-md-4 g-col-lg-3">
                                            <div class="o_wsale_product_grid_wrapper position-relative h-100">
                                                <t t-call="website_sale.products_item"/>
                                            </div>
                                        </div>
                                    </t>
                                </section>
                            </div>

                            <div t-if="not products" class="text-center text-muted mt128 mb256">
                                <h3 class="mt8">No LG products found</h3>
                                <p>There are currently no LG products available.</p>
                            </div>
                            
                            <div class="products_pager d-flex justify-content-center pt-5 pb-3">
                                <t t-call="website.pager"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure" id="oe_structure_website_sale_products_2"/>
            </div>
        </t>
    </template>
</odoo>