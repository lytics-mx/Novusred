<odoo>
    <template id="website_brand" name="Brand Page">
        <t t-call="website.layout">
            <div class="container">                              
                <div class="row">
                    <div class="col-lg-3">
                        <h4>Etiquetas</h4>
                        <div class="list-group mt-4">
                            <t t-foreach="request.env['product.tag'].search([])" t-as="tag">
                                <div class="form-check">
                                    <input type="checkbox" 
                                           class="form-check-input" 
                                           t-att-id="'tag_' + str(tag.id)"
                                           t-att-value="tag.id"
                                           name="tag_filter"
                                           t-att-checked="str(tag.id) in request.params.get('tags', '').split(',')" />
                                    <label class="form-check-label" t-att-for="'tag_' + str(tag.id)">
                                        <t t-esc="tag.name"/>
                                    </label>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="oe_structure" id="oe_structure_website_brand_1"/>
                        <div class="product-list mt-4">
                            <t t-set="selected_tags" t-value="[int(tag) for tag in request.params.get('tags', '').split(',') if tag]"/>
                            <t t-foreach="request.env['product.template'].search([('product_tag_ids', 'in', selected_tags)] if selected_tags else [])" t-as="product">
                                <div class="product-item">
                                    <h5><t t-esc="product.name"/></h5>
                                    <p><t t-esc="product.description_sale or ''"/></p>
                                    <p><strong>Precio:</strong> <t t-esc="product.list_price"/> â‚¬</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>