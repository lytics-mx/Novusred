<odoo>
    <template id="product_details" inherit_id="website_sale.product">
        <xpath expr="//div[@class='product_attributes']" position="inside">
            <div class="product_attribute">
                <span class="attribute_label">Marca:</span>
                <span class="attribute_value">
                    <t t-esc="product.brand_website"/>
                </span>
            </div>
        </xpath>
    </template>
</odoo>