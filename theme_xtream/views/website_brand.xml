<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="lg_products_page" name="LG Products">
        <t t-call="website.layout">
            <div id="wrap" class="js_sale">
                <div class="oe_structure"/>
                <div class="container oe_website_sale">
                    <div class="row">
                        <div class="col-12">
                            <div style="text-align: left;">
                                <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">LG</h2>
                            </div>
                            <div class="o_wsale_products_grid_table_wrapper">
                                <div class="products_pager form-inline justify-content-center">
                                    <t t-call="website_sale.products_categories"/>
                                </div>
                                <div id="products_grid" class="o_wsale_products_grid_table_wrapper">
                                    <t t-set="products" t-value="request.env['product.template'].sudo().search([
                                        ('website_published', '=', True),
                                        ('brand_type_id.name', '=', 'LG')
                                    ])" />
                                    <div class="row">
                                        <t t-foreach="products" t-as="product">
                                            <t t-call="website_sale.products_item"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
</odoo>