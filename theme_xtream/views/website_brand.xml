<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_brand" name="Marcas">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <t t-set="active_brand_banner" t-value="request.env['banner.image.line'].sudo().search([('is_active_brand_carousel', '=', True)], limit=1)" />
                <t t-if="active_brand_banner">
                    <t t-if="len(active_brand_banner.brand_images) == 1">
                        <!-- Single image, no carousel -->
                        <div style="position: relative;">
                            <img t-att-src="'/web/image/' + str(active_brand_banner.brand_images[0].id)" 
                                 alt="Brand Image" 
                                 style="width: 100%; height: auto; object-fit: cover;" />
                            <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                        </div>
                    </t>
                    <t t-elif="len(active_brand_banner.brand_images) > 1">
                        <!-- Carousel for multiple images -->
                        <div id="brandImagesCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <t t-foreach="active_brand_banner.brand_images" t-as="image" t-key="image.id">
                                    <div t-att-class="'carousel-item' + (' active' if image == active_brand_banner.brand_images[0] else '')" style="position: relative;">
                                        <img t-att-src="'/web/image/' + str(image.id)" 
                                             alt="Brand Image" 
                                             style="width: 100%; height: auto; object-fit: cover;" />
                                        <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                                    </div>
                                </t>
                            </div>
                            <!-- Carousel controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#brandImagesCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#brandImagesCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <!-- Default image if no active brand banner -->
                    <div style="position: relative;">
                        <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" 
                             alt="Default Image" 
                             style="width: 100%; height: auto; object-fit: cover;" />
                        <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 100px;"></div>
                    </div>
                </t>
                
                <div style="height: 50px;"></div>

                <!-- Nuestras Mejores Marcas -->
                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px; text-align: center;">NUESTRAS MEJORES MARCAS</h2>
                    </div>
                    <div style="height: 30px;"></div>
                    
                    <t t-set="brands" t-value="request.env['brand.type'].sudo().search([
                        ('icon_image', '!=', False),
                        ('active', '=', True)
                    ], limit=4)" />
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <t t-foreach="brands" t-as="brand" t-key="brand.id">
                            <div class="position-relative text-center" style="width: 150px; background-color: white; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
                                <!-- Ícono de la marca (icon_image) -->
                                <div style="padding: 10px;">
                                    <img t-att-src="'data:image/png;base64,' + brand.icon_image.decode('utf-8')"
                                         alt="Ícono de la Marca"
                                         style="width: 100%; height: auto; object-fit: contain;" />
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <div style="height: 50px;"></div>

                <!-- Encuentra lo que buscas -->
                <section class="find-what-you-need text-center py-5">
                    <h2 style="font-size: 25px; text-align: center;">Encuentra lo que buscas</h2>
                    <div class="container">
                        <div style="height: 30px;"></div>

                        <div class="row justify-content-center">
                            <t t-foreach="[{'src': '/theme_xtream/static/src/img/ofertas-barra/etiqueta.png', 'alt': 'Todas las ofertas', 'text': 'Todas las ofertas'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/relampago.png', 'alt': 'Ofertas relámpago', 'text': 'Ofertas relámpago'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/etiqueta3.png', 'alt': 'Menos de $500', 'text': 'Menos de $500'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/reloj.png', 'alt': 'Hasta las 3 del día', 'text': 'Hasta las 3 del día'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/relampago3.png', 'alt': 'Ofertas relámpago', 'text': 'Ofertas relámpago'},
                                           {'src': '/theme_xtream/static/src/img/ofertas-barra/reloj3.png', 'alt': 'Hasta las 3 del día', 'text': 'Hasta las 3 del día'}]" t-as="icon">
                                <div class="col text-center mx-3">
                                    <div style="width: 100px; height: 100px; border-radius: 50%; background-color: #ffffff; display: flex; align-items: center; justify-content: center; margin: 0 auto; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                                        <img t-att-src="icon['src']" t-att-alt="icon['alt']" class="img-fluid" style="width: 50px; height: 50px;" />
                                    </div>
                                    <p t-esc="icon['text']" style="font-size: 14px; margin-top: 10px;"></p>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <!-- Mejores Ofertas -->
                <section class="best-offers py-5">
                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Ofertas</h2>
                    </div>
                    <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                        <t t-set="discounted_products" t-value="request.env['product.template'].sudo().search([
                            ('website_published', '=', True),
                            ('product_tag_ids', '!=', False)
                        ], order='create_date desc', limit=10)" />
                        
                        <t t-if="len(discounted_products) > 5">
                            <div id="offersCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <div class="row row-cols-2 row-cols-md-5 g-3">
                                            <t t-foreach="discounted_products[:5]" t-as="product">
                                                <div class="col">
                                                    <!-- Card structure -->
                                                    <div class="card h-100 shadow-sm product-card" style="background-color: #ffffff; border-radius: 8px; padding: 15px; border: 1px solid #ffffff; position: relative; overflow: hidden; transition: transform 0.3s ease;">
                                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                                            <t t-if="product.product_tag_ids and product.product_tag_ids[0].end_date">
                                                                <div class="countdown-timer position-absolute" 
                                                                    style="font-size: 0.9rem; color:rgb(90, 89, 88); top: 10px; right: 10px; background: rgba(255,255,255,0.9); padding: 5px; border-radius: 4px;">
                                                                    <i class="fa fa-clock-o me-1"></i>
                                                                    Termina en:
                                                                    <t t-esc="request.env['product.template'].browse(product.id).get_time_remaining().get(product.id)" />
                                                                </div>
                                                            </t>
                                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                                class="card-img-top"
                                                                style="height: 200px; object-fit: contain; padding: 10px;" />
                                                        </a>
                                                        <div class="card-body d-flex flex-column" style="background-color: #ffffff; position: relative;">
                                                            <t t-if="product.product_tag_ids">
                                                                <div class="d-flex justify-content-start mb-2">
                                                                    <span class="badge bg-primary" style="display: inline-block; border-radius: 0;">
                                                                        <t t-esc="product.product_tag_ids[0].name if product.product_tag_ids else ''"/>
                                                                    </span>
                                                                </div>
                                                            </t>
<!-- 
                                                            <div class="mb-2">
                                                                <span class="text-muted" style="font-size: 0.9rem;">
                                                                    por: <t t-esc="product.brand_type_id.name"/>
                                                                </span>
                                                            </div> -->
                                                            <div class="mt-auto">
                                                                <t t-if="product.discounted_price &lt; product.list_price">                                                                
                                                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                                                        <span class="text-decoration-line-through text-muted">
                                                                            $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                                        </span>
                                                                        <span class="text-danger fw-bold" style="font-size: 0.9rem;">
                                                                            <t t-if="product.discount_percentage">
                                                                                <span style="font-size: 18px; font-weight: normal;">
                                                                                    <t t-esc="int(product.discount_percentage)" />% OFF
                                                                                </span>
                                                                            </t>
                                                                            <t t-elif="product.fixed_discount">
                                                                                <span style="font-size: 18px; font-weight: normal;">
                                                                                    -$<t t-esc="'{:,}'.format(int(product.fixed_discount))" /> MXN
                                                                                </span>
                                                                            </t>   
                                                                        </span>
                                                                    </div>
                                                                    <span class="text-dark fw-bold d-block" style="font-size: 25px;">
                                                                        $<t t-esc="'{:,}'.format(int(product.discounted_price))" />
                                                                    </span>
                                                                    <t t-if="product.product_tag_ids">
                                                                        <span class="text-muted" style="font-size: 12px; font-weight: bold;">
                                                                            Ahorra $<t t-esc="'{:,}'.format(int(product.list_price - product.discounted_price))" />
                                                                        </span>
                                                                    </t>                                                                  
                                                                </t>
                                                                <t t-else="">
                                                                    <span class="fw-bold d-block" style="margin-top: auto; font-size: 25px;">
                                                                        $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                                    </span>
                                                                </t>

                                                                <div class="mt-1">
                                                                    <span class="text-orange" style="color: #FF5207; font-size: 0.9rem; font-weight: bold; font-style: italic;">
                                                                        Envío gratis
                                                                    </span>
                                                                </div>
                                                            </div>

                                                            <div class="product-name-container" style="max-height: 0; overflow: hidden; transition: max-height 0.3s ease;">
                                                                <h6 class="card-title mb-2 text-truncate product-name" style="font-size: 0.9rem; white-space: normal;">
                                                                    <t t-esc="product.name.upper()" />
                                                                </h6>
                                                            
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <div class="row row-cols-2 row-cols-md-5 g-3">
                                            <t t-foreach="discounted_products[5:]" t-as="product">
                                                <div class="col">
                                                    <!-- Card structure -->
                                                    <div class="card h-100 shadow-sm product-card" style="background-color: #ffffff; border-radius: 8px; padding: 15px; border: 1px solid #ffffff; position: relative; overflow: hidden; transition: transform 0.3s ease;">
                                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                                            <t t-if="product.product_tag_ids and product.product_tag_ids[0].end_date">
                                                                <div class="countdown-timer position-absolute" 
