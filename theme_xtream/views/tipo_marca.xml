<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_brand_type_tree" model="ir.ui.view">
        <field name="name">brand.type.tree</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_brand_type_form" model="ir.ui.view">
        <field name="name">brand.type.form</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para Tipos de Producto -->
    <record id="action_product_type" model="ir.actions.act_window">
        <field name="name">Tipos de Producto</field>
        <field name="res_model">product.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Agregar el menú debajo de "Números de serie/lote" -->
    <menuitem id="menu_product_type"
        name="Tipos de Productos"
        action="action_product_type"
        parent="stock.menu_product_variant_config_stock"
        sequence="25"/>
</odoo>
