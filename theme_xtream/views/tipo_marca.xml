<odoo>
    <record id="view_brand_type_tree" model="ir.ui.view">
        <field name="name">brand.type.tree</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="supplier_id"/>
            </tree>
        </field>
    </record>

    <record id="view_brand_type_form" model="ir.ui.view">
        <field name="name">brand.type.form</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="supplier_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_brand_type" model="ir.actions.act_window">
        <field name="name">Tipos de Marca</field>
        <field name="res_model">brand.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_brand_type_root" name="Tipos de Marca" parent="stock.menu_stock_root" sequence="10"/>
    <menuitem id="menu_brand_type" name="Tipos de Marca" parent="menu_brand_type_root" action="action_brand_type"/>
</odoo>