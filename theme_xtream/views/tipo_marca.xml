<odoo>
    <!-- Vista de lista para tipos de marca -->
    <record id="view_brand_type_tree" model="ir.ui.view">
        <field name="name">brand.type.tree</field>
        <field name="model">brand.type</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="supplier_id"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para tipos de marca -->
    <record id="view_brand_type_form" model="ir.ui.view">
        <field name="name">brand.type.form</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="supplier_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>