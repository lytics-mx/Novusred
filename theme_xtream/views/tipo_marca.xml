<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_brand_type_tree" model="ir.ui.view">
        <field name="name">brand.type.tree</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <list> <!-- Cambiado de <tree> a <list> -->
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_brand_type_form" model="ir.ui.view">
        <field name="name">brand.type.form</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_type" model="ir.actions.act_window">
        <field name="name">Tipos de Marca</field>
        <field name="res_model">brand.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <!-- Menú principal "Productos" -->
    <menuitem id="menu_product_root"
              name="Productos"
              sequence="1"/>

    <!-- Submenú "Tipos de Marca" bajo "Productos" -->
    <menuitem id="menu_brand_type"
              name="Tipos de Marca"
              action="action_brand_type"
              parent="menu_product_root"
              groups="stock.group_stock_manager"
              sequence="2"/>
</odoo>
