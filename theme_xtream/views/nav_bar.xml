<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom container-fluid" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <div class="row align-items-center">
                    <div class="col">
                        <nav class="navbar navbar-expand-lg">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            
                            <div class="collapse navbar-collapse" id="navbarContent">
                                <!-- Enlaces principales con Categorías -->
                                <div class="navbar-nav mx-auto text-center">
                                    <!-- Categorías Dropdown -->
                                    <div class="dropdown nav-item">
                                        <button class="btn dropdown-toggle-no-caret mx-3 my-2 my-md-0" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                                            Categorías
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                                            <!-- Aquí puedes añadir las subcategorías -->
                                        </ul>
                                    </div>
                                    <a href="/shop" class="nav-link mx-3 my-2 my-md-0" style="color: white; text-decoration: none;">Tienda</a>
                                    <a href="/" class="nav-link mx-3 my-2 my-md-0" style="color: white; text-decoration: none;">Ofertas</a>
                                    <a href="/" class="nav-link mx-3 my-2 my-md-0" style="color: white; text-decoration: none;">Marcas</a>
                                    <a href="/shop/cart" class="nav-link mx-3 my-2 my-md-0" style="color: white; text-decoration: none;">Historial</a>
                                    <a href="/about" class="nav-link mx-3 my-2 my-md-0" style="color: white; text-decoration: none;">Nosotros</a>
                                    <a href="/contactus" class="nav-link mx-3 my-2 my-md-0" style="color: white; text-decoration: none;">Contacto</a>
                                    
                                    <span class="nav-item" style="margin: 0 30px;"></span>
                                    
                                    <a href="/web/login" class="nav-link mx-2" style="color: white;">Usuario</a>
                                    <a href="/my/home" class="nav-link">
                                        <img src="/theme_xtream/static/src/img/logos/user.png" alt="Icon 1" class="mx-2" style="height: 30px;"/>
                                    </a>
                                    <a href="/my/notifications" class="nav-link">
                                        <img src="/theme_xtream/static/src/img/logos/noti.png" alt="Icon 2" class="mx-2" style="height: 24px;"/>
                                    </a>
                                    <a href="/shop/cart" class="nav-link">
                                        <img src="/theme_xtream/static/src/img/logos/carrito.png" alt="Icon 3" class="mx-2" style="height: 24px;"/>
                                    </a>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
