<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom d-flex justify-content-center align-items-center" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <!-- Categorías Dropdown -->
                <div class="dropdown mx-2">
                    <button class="btn dropdown-toggle-no-caret" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                        Categorías
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                        <!-- Aquí puedes añadir las subcategorías -->
                    </ul>
                </div>

                <!-- Enlaces principales -->
                <div class="d-flex align-items-center">
                    <a href="/shop" class="mx-2" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Tienda</a>
                    <a href="/" class="mx-2" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Ofertas</a>
                    <a href="/" class="mx-2" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Marcas</a>
                    <a href="/shop/cart" class="mx-2" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Historial</a>
                    <a href="/about" class="mx-2" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Nosotros</a>
                    <a href="/contactus" class="mx-2" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Contacto</a>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
