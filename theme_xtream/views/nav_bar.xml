<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <div class="o_navbar_custom container-fluid" style="background-color:rgb(255, 255, 255); padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <div class="row align-items-center">
                    <div class="col">
                        <nav class="navbar navbar-expand-lg">
                            <!-- Logo -->
                            <a class="navbar-brand me-3" href="/">
                                <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                            </a>
                            
                            <!-- Search Bar -->
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <form class="d-flex flex-grow-1 mx-3" action="/shop" method="get">
                                    <div class="input-group">
                                        <input type="search" name="search" class="form-control" placeholder="Buscar productos..." aria-label="Search"/>
                                        <button class="btn btn-outline-secondary" type="submit">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                           
                        </nav>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
