<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default" priority="999">
        <xpath expr="//header" position="before">
            <header class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container d-flex justify-content-center">
                        <!-- Logo -->
                        <a class="navbar-brand me-3" href="/">
                            <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                        </a>
                        <!-- Navbar links -->
                        <div class="d-flex align-items-center">
                            <form class="d-flex" action="/shop" method="get">
                                <div class="input-group" style="max-width: 550px;">
                                    <input type="search" name="search" class="form-control" 
                                           placeholder="Buscar..." aria-label="Search" 
                                           style="border-radius: 25px; font-size: 20px; height: 60px;"/>
                                    <button class="btn btn-outline-secondary" type="submit" 
                                            style="border-radius: 25px; height: 60px;">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>
</odoo>
