<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default" priority="999">
        <xpath expr="//header" position="before">
            <header class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100">
                            <!-- Search bar and logo container -->
                            <div class="d-flex align-items-center" style="width: 70%;">
                                <form class="d-flex me-3" action="/shop" method="get" style="width: 100%;">
                                    <div class="input-group">
                                        <input type="search" name="search" class="form-control" 
                                               placeholder="Buscar productos..." aria-label="Search" 
                                               style="border-radius: 20px; font-size: 14px; height: 36px;"/>
                                        <button class="btn btn-outline-secondary" type="submit" 
                                                style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <!-- Logo -->
                                <a class="navbar-brand" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>
</odoo>