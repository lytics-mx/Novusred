<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default" priority="999">
        <xpath expr="//header" position="before">
            <header class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container">
                        <!-- Logo -->
                        <a class="navbar-brand me-3" href="/">
                            <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                        </a>
                        <!-- Toggle button for mobile -->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <!-- Navbar links -->
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <form class="d-flex mx-3" action="/shop" method="get">
                                <div class="input-group" style="max-width: 300px;">
                                    <input type="search" name="search" class="form-control rounded-start" 
                                           placeholder="Buscar productos..." aria-label="Search" 
                                           style="border-radius: 20px 0 0 20px;"/>
                                    <button class="btn btn-outline-secondary" type="submit" 
                                            style="border-radius: 0 20px 20px 0;">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>
</odoo>
