<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom container-fluid" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <div class="row align-items-center">
                    <!-- Botón hamburguesa para móvil -->
                    <div class="col d-lg-none">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon" style="color: white;">☰</span>
                        </button>
                    </div>

                    <!-- Contenido del navbar -->
                    <div class="col collapse navbar-collapse" id="navbarContent">
                        <div class="d-lg-flex justify-content-center w-100">
                            <!-- Categorías Dropdown -->
                            <div class="dropdown d-block">
                                <button class="btn dropdown-toggle-no-caret mx-3 my-2 my-lg-0" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                                    Categorías
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                                    <!-- Aquí puedes añadir las subcategorías -->
                                </ul>
                            </div>
                            <a href="/shop" class="d-block mx-3 my-2 my-lg-0" style="color: white; text-decoration: none;">Tienda</a>
                            <a href="/" class="d-block mx-3 my-2 my-lg-0" style="color: white; text-decoration: none;">Ofertas</a>
                            <a href="/" class="d-block mx-3 my-2 my-lg-0" style="color: white; text-decoration: none;">Marcas</a>
                            <a href="/shop/cart" class="d-block mx-3 my-2 my-lg-0" style="color: white; text-decoration: none;">Historial</a>
                            <a href="/about" class="d-block mx-3 my-2 my-lg-0" style="color: white; text-decoration: none;">Nosotros</a>
                            <a href="/contactus" class="d-block mx-3 my-2 my-lg-0" style="color: white; text-decoration: none;">Contacto</a>
                            
                            <div class="d-block d-lg-inline-block" style="margin: 0 30px;">
                                <a href="/web/login" class="mx-2" style="color: white; text-decoration: none;">Usuario</a>
                                <a href="/my/home">
                                    <img src="/theme_xtream/static/src/img/logos/user.png" alt="Icon 1" class="mx-2" style="height: 30px;"/>
                                </a>
                                <a href="/my/notifications">
                                    <img src="/theme_xtream/static/src/img/logos/noti.png" alt="Icon 2" class="mx-2" style="height: 24px;"/>
                                </a>
                                <a href="/shop/cart">
                                    <img src="/theme_xtream/static/src/img/logos/carrito.png" alt="Icon 3" class="mx-2" style="height: 24px;"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
