<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <div class="container">
                    <nav class="navbar navbar-expand-lg navbar-dark p-0">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        
                        <div class="collapse navbar-collapse" id="navbarContent">
                            <!-- Categorías Dropdown -->
                            <div class="dropdown mx-2">
                                <button class="btn dropdown-toggle-no-caret" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                                    Categorías
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                                    <!-- Aquí puedes añadir las subcategorías -->
                                </ul>
                            </div>

                            <!-- Enlaces principales -->
                            <div class="navbar-nav mx-auto">
                                <a href="/shop" class="nav-link mx-3" style="color: white; text-decoration: none;">Tienda</a>
                                <a href="/" class="nav-link mx-3" style="color: white; text-decoration: none;">Ofertas</a>
                                <a href="/" class="nav-link mx-3" style="color: white; text-decoration: none;">Marcas</a>
                                <a href="/shop/cart" class="nav-link mx-3" style="color: white; text-decoration: none;">Historial</a>
                                <a href="/about" class="nav-link mx-3" style="color: white; text-decoration: none;">Nosotros</a>
                                <a href="/contactus" class="nav-link mx-3" style="color: white; text-decoration: none;">Contacto</a>
                            </div>

                            <!-- Iconos del lado derecho -->
                            <div class="d-flex align-items-center">
                                <a href="#" class="nav-link mx-2">
                                    <img src="/theme_xtream/static/src/img/logos/icon1.png" alt="Icon 1" height="24"/>
                                </a>
                                <a href="#" class="nav-link mx-2">
                                    <img src="/theme_xtream/static/src/img/logos/icon2.png" alt="Icon 2" height="24"/>
                                </a>
                                <a href="#" class="nav-link mx-2">
                                    <img src="/theme_xtream/static/src/img/logos/icon3.png" alt="Icon 3" height="24"/>
                                </a>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
