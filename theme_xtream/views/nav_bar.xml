<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom container-fluid" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <div class="row align-items-center">
                    <!-- Botón hamburguesa para móviles -->
                    <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation" style="border: none; color: white;">
                        <i class="fa fa-bars"></i>
                    </button>
                    
                    <!-- Enlaces principales con Categorías -->
                    <div class="col text-center collapse navbar-collapse" id="navbarContent">
                        <!-- Resto del contenido igual -->
                        <div class="dropdown d-inline-block">
                            <button class="btn dropdown-toggle-no-caret mx-3 my-2 my-md-0" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                                Categorías
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                                <!-- Aquí puedes añadir las subcategorías -->
                            </ul>
                        </div>
                        <a href="/shop" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Tienda</a>
                        <a href="/" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Ofertas</a>
                        <a href="/" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Marcas</a>
                        <a href="/shop/cart" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Historial</a>
                        <a href="/about" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Nosotros</a>
                        <a href="/contactus" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Contacto</a>
                        
                        <span style="margin: 0 30px;"></span>
                        
                        <a href="/web/login" class="mx-2" style="color: white; font-family: 'Questrial', sans-serif; text-decoration: none;">Usuario</a>
                        <a href="/my/home">
                            <img src="/theme_xtream/static/src/img/logos/user.png" alt="Icon 1" class="mx-2" style="height: 30px;"/>
                        </a>
                        <a href="/my/notifications">
                            <img src="/theme_xtream/static/src/img/logos/noti.png" alt="Icon 2" class="mx-2" style="height: 24px;"/>
                        </a>
                        <a href="/shop/cart">
                            <img src="/theme_xtream/static/src/img/logos/carrito.png" alt="Icon 3" class="mx-2" style="height: 24px;"/>
                        </a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
