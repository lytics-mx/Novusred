<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <header class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Logo first -->
                                <a class="navbar-brand me-3" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                                </a>
                                <!-- Search bar after logo -->
                                <form class="d-flex flex-grow-1" action="/search_redirect" method="get" style="width: 100%;">
                                    <div class="input-group w-100 align-items-center">
                                        <input type="search" name="search" class="form-control"
                                               placeholder="Buscar productos, marcas o categorías..." aria-label="Search"
                                               style="border-radius: 20px; font-size: 14px; height: 36px;"/>
                                        <span id="searchTypeIcon" class="input-group-text" style="border-radius: 20px 0 0 20px; background: transparent; border: none; font-size: 18px;">
                                            <i class="fa fa-list"></i>
                                        </span>
                                        <select name="search_type" id="searchTypeSelect" class="form-select" style="max-width: 120px; border-radius: 0 20px 20px 0; font-size: 14px; height: 36px;">
                                            <option value="all" data-icon="fa-list">Todo</option>
                                            <option value="brand" data-icon="fa-tag">Marca</option>
                                            <option value="category" data-icon="fa-folder">Categoría</option>
                                        </select>
                                        <button class="btn btn-outline-secondary" type="submit"
                                                style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        var select = document.getElementById('searchTypeSelect');
                                        var iconSpan = document.getElementById('searchTypeIcon').querySelector('i');
                                        select.addEventListener('change', function() {
                                            var selected = select.options[select.selectedIndex];
                                            var icon = selected.getAttribute('data-icon');
                                            iconSpan.className = 'fa ' + icon;
                                        });
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>
</odoo>