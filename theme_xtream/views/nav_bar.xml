<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom container-fluid" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <div class="row justify-content-between align-items-center">
                    <!-- Enlaces principales con Categorías (Lado izquierdo) -->
                    <div class="col-auto">
                        <!-- Categorías Dropdown -->
                        <div class="dropdown d-inline-block">
                            <button class="btn dropdown-toggle-no-caret mx-3" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                                Categorías
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                                <!-- Aquí puedes añadir las subcategorías -->
                            </ul>
                        </div>
                        <a href="/shop" class="mx-3" style="color: white; text-decoration: none;">Tienda</a>
                        <a href="/" class="mx-3" style="color: white; text-decoration: none;">Ofertas</a>
                        <a href="/" class="mx-3" style="color: white; text-decoration: none;">Marcas</a>
                        <a href="/shop/cart" class="mx-3" style="color: white; text-decoration: none;">Historial</a>
                        <a href="/about" class="mx-3" style="color: white; text-decoration: none;">Nosotros</a>
                        <a href="/contactus" class="mx-3" style="color: white; text-decoration: none;">Contacto</a>
                    </div>

                    <!-- Iconos (Lado derecho) -->
                    <div class="col-auto text-end">
                        <div class="d-flex align-items-center">
                            <a href="/web/login" class="mx-2" style="color: white; text-decoration: none;">Usuario</a>
                            <img src="/theme_xtream/static/src/img/logos/user.png" alt="Icon 1" class="mx-2" style="height: 30px;"/>
                            <img src="/theme_xtream/static/src/img/logos/noti.png" alt="Icon 2" class="mx-2" style="height: 24px;"/>
                            <img src="/theme_xtream/static/src/img/logos/carrito.png" alt="Icon 3" class="mx-2" style="height: 24px;"/>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
