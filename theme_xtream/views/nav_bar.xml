<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom d-flex justify-content-center align-items-center" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <!-- Categorías Dropdown -->
                <div class="dropdown mx-2">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                        Categorías <i class="fa fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                        <!-- Aquí puedes añadir las subcategorías -->
                    </ul>
                </div>

                <!-- Enlaces principales -->
                <div class="d-flex align-items-center text-white">
                    <a href="/ofertas" class="btn btn-link mx-2" style="font-family: 'Questrial', sans-serif; color: white !important; text-decoration: none;" onmouseover="this.style.color='#FFD700'" onmouseout="this.style.color='white'">Tienda</a>
                    <a href="/ofertas" class="btn btn-link mx-2" style="font-family: 'Questrial', sans-serif; color: white !important; text-decoration: none;" onmouseover="this.style.color='#FFD700'" onmouseout="this.style.color='white'">Ofertas</a>
                    <a href="/marcas" class="btn btn-link mx-2" style="font-family: 'Questrial', sans-serif; color: white !important; text-decoration: none;" onmouseover="this.style.color='#FFD700'" onmouseout="this.style.color='white'">Marcas</a>
                    <a href="/historial" class="btn btn-link mx-2" style="font-family: 'Questrial', sans-serif; color: white !important; text-decoration: none;" onmouseover="this.style.color='#FFD700'" onmouseout="this.style.color='white'">Historial</a>
                    <a href="/nosotros" class="btn btn-link mx-2" style="font-family: 'Questrial', sans-serif; color: white !important; text-decoration: none;" onmouseover="this.style.color='#FFD700'" onmouseout="this.style.color='white'">Nosotros</a>
                    <a href="/contacto" class="btn btn-link mx-2" style="font-family: 'Questrial', sans-serif; color: white !important; text-decoration: none;" onmouseover="this.style.color='#FFD700'" onmouseout="this.style.color='white'">Contacto</a>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
