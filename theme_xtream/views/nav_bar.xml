<odoo>
    <template id="viewed_products_template" name="Productos Publicados">
        <div class="viewed-products container-fluid" style="margin-top: 30px;">
            <h3 style="text-align: center; font-size: 20px; margin-bottom: 20px;">Productos Disponibles</h3>
            <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                    <!-- Itera sobre los productos publicados -->
                    <t t-foreach="request.env['product.template'].sudo().search([('website_published', '=', True)], limit=10)" t-as="product">
                        <div class="oe_product g-col-6 g-col-md-4 g-col-lg-3">
                            <div class="o_wsale_product_grid_wrapper position-relative h-100">
                                <!-- Llama al template de productos de la tienda -->
                                <t t-call="website_sale.products_item">
                                    <t t-set="product" t-value="product" />
                                    <t t-set="ppr" t-value="4" /> <!-- Productos por fila -->
                                    <t t-set="td_product" t-value="{'x': 1, 'y': 1}" /> <!-- TamaÃ±o del producto -->
                                </t>
                            </div>
                        </div>
                    </t>
                </section>
            </div>
        </div>
    </template>
</odoo>