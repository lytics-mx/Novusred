<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom container-fluid" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <div class="row align-items-center">
                    <!-- Categorías Dropdown -->
                    <div class="col-auto dropdown text-center text-md-start">
                        <button class="btn dropdown-toggle-no-caret" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white;">
                            Categorías
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                            <!-- Aquí puedes añadir las subcategorías -->
                        </ul>
                    </div>

                    <!-- Enlaces principales -->
                    <div class="col text-center">
                        <a href="/shop" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Tienda</a>
                        <a href="/" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Ofertas</a>
                        <a href="/" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Marcas</a>
                        <a href="/shop/cart" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Historial</a>
                        <a href="/about" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Nosotros</a>
                        <a href="/contactus" class="mx-3 my-2 my-md-0" style="color: white; text-decoration: none; font-family: 'Questrial', sans-serif;">Contacto</a>
                    </div>

                    <!-- Iconos -->
                    <div class="col-auto text-end">
                        <img src="/theme_xtream/static/src/img/logos/icon1.png" alt="Icon 1" class="mx-2" style="height: 24px;"/>
                        <img src="/theme_xtream/static/src/img/logos/icon2.png" alt="Icon 2" class="mx-2" style="height: 24px;"/>
                        <img src="/theme_xtream/static/src/img/logos/icon3.png" alt="Icon 3" class="mx-2" style="height: 24px;"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>