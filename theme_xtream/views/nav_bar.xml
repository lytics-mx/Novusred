<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <div class="o_navbar_custom d-flex align-items-center" style="background-color: #5081FF; padding: 8px; font-family: 'Questrial', sans-serif; font-size: 18px;">
                <!-- Categorías Dropdown -->
                <div class="dropdown me-3">
                    <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownCategorias" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Questrial', sans-serif; color: white; border-color: white; font-size: 18px;">
                        Categorías <i class="fa fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownCategorias">
                        <!-- Aquí puedes añadir las subcategorías -->
                    </ul>
                </div>

                <!-- Enlaces principales -->
                <div class="d-flex align-items-center">
                    <a href="/ofertas" class="btn btn-link text-white" style="font-family: 'Questrial', sans-serif; font-size: 18px;">Ofertas</a>
                    <a href="/marcas" class="btn btn-link text-white" style="font-family: 'Questrial', sans-serif; font-size: 18px;">Marcas</a>
                    <a href="/historial" class="btn btn-link text-white" style="font-family: 'Questrial', sans-serif; font-size: 18px;">Historial</a>
                    <a href="/nosotros" class="btn btn-link text-white" style="font-family: 'Questrial', sans-serif; font-size: 18px;">Nosotros</a>
                    <a href="/contacto" class="btn btn-link text-white" style="font-family: 'Questrial', sans-serif; font-size: 18px;">Contacto</a>
                </div>

                <!-- Spacer -->
                <div class="flex-grow-1"></div>
            </div>
        </xpath>
    </template>
</odoo>
