<odoo>
    <template id="theme_xtream.descubre" name="Descubre">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <section class="s_text_block pt40 pb40" data-snippet="s_text_block">
                    <div class="container">
                        <h1 style="text-align: center; font-family: 'Questrial', sans-serif;">DESCUBRE</h1>
                        <p style="font-family: 'Questrial', sans-serif; text-align: justify;">Explora nuestras categorías destacadas y encuentra los productos que necesitas.</p>
                        <hr style="border-top: 1px solid #ddd;"/>
                        
                        <div class="row">
                            <div class="col-12 text-center">
                                <img src="/theme_xtream/static/src/img/home/01 slider.png" alt="Slider" style="width: 100%; height: auto; border-radius: 10px; object-fit: cover;" />
                            </div>
                        </div>
                        
                        <hr style="border-top: 1px solid #ddd;"/>
                        <p style="font-family: 'Questrial', sans-serif; text-align: justify;">Descubre más productos en nuestra tienda y aprovecha nuestras promociones exclusivas.</p>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>