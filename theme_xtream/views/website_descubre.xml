<odoo>
    <!-- Acción para abrir el modelo de imágenes -->
    <record id="banner_images_action" model="ir.actions.act_window">
        <field name="name">Imágenes</field>
        <field name="res_model">banner.images</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Aquí puedes gestionar las imágenes generales y de productos.
            </p>
        </field>
    </record>

    <!-- Menú para "Imágenes" debajo de "Cintas de opciones del producto" -->
    <menuitem id="menu_banner_images"
              name="Imágenes"
              action="banner_images_action"
              parent="website_sale.menu_catalog"
              sequence="60"/>
</odoo>