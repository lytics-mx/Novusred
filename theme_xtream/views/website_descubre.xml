<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para el modelo banner.image.line -->
    <record id="banner_image_line_tree" model="ir.ui.view">
        <field name="name">banner.image.line.tree</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para el modelo banner.image.line -->
    <record id="banner_image_line_form" model="ir.ui.view">
        <field name="name">banner.image.line.form</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Imágenes Generales">
                            <field name="general_images" widget="many2many_binary"/>
                        </page>
                        <page string="Imágenes de Productos">
                            <field name="product_images" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el modelo banner.image.line -->
    <record id="banner_image_line_action" model="ir.actions.act_window">
        <field name="name">Imágenes</field>
        <field name="res_model">banner.image.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú para "Imágenes" debajo de "Cintas de opciones del producto" -->
    <menuitem id="menu_banner_image_line"
              name="Imágenes"
              action="banner_image_line_action"
              parent="website.menu_website_global_configuration"
              sequence="26"/>
</odoo>