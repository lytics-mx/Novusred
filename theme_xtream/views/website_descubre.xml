<odoo>
    <!-- Acción para abrir el modelo de imágenes -->
    <record id="banner_images_action" model="ir.actions.act_window">
        <field name="name">Imágenes</field>
        <field name="res_model">banner.image.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Aquí puedes gestionar las imágenes generales y de productos.
            </p>
        </field>
    </record>

    <!-- Menú para "Imágenes" debajo de "Cintas de opciones del producto" -->
    <menuitem id="menu_banner_images"
              name="Imágenes"
              action="banner_images_action"
              parent="website_sale.menu_catalog"
              sequence="60"/>

    <!-- Vista de árbol para el modelo banner.image.line -->
    <record id="view_banner_image_line_tree" model="ir.ui.view">
        <field name="name">banner.image.line.tree</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="general_images"/>
                <field name="product_images"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para el modelo banner.image.line -->
    <record id="view_banner_image_line_form" model="ir.ui.view">
        <field name="name">banner.image.line.form</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="general_images" widget="many2many_binary"/>
                        <field name="product_images" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>