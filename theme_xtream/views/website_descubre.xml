<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de árbol para el modelo banner.image.line -->
    <record id="banner_image_line_list" model="ir.ui.view">
        <field name="name">banner.image.line.list</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Acción para abrir el modelo banner.image.line -->
    <record id="banner_image_line_action" model="ir.actions.act_window">
        <field name="name">Imágenes</field>
        <field name="res_model">banner.image.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú para "Imágenes" en la configuración de comercio electrónico -->
    <menuitem id="menu_banner_image_line"
              name="Imágenes"
              action="banner_image_line_action"
              sequence="60"/>
</odoo>