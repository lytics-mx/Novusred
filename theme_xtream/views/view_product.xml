<odoo>
    <template id="product_detail_template" inherit_id="website.layout">
        <xpath expr="//main" position="inside">
            <div class="container mt-5">
                <div class="row">
                    <!-- Product Images -->
                    <div class="col-md-6">
                        <div class="product-images">
                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                 class="img-fluid main-image" 
                                 alt="Product Image" 
                                 style="height: 400px; object-fit: contain; padding: 10px;" />
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="col-md-6">
                        <h1 class="product-title" style="font-size: 1.5rem; font-weight: bold;">
                            <t t-esc="product.name" />
                        </h1>
                        <p class="product-serial-number">
                            <strong>NÃºmero de serie:</strong> <span t-field="product.default_code" />
                        </p>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>