<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para el modelo banner.image.line -->
    <record id="view_banner_image_line_list" model="ir.ui.view">
        <field name="name">banner.image.line.list</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <list create="true" delete="true">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Vista de búsqueda para el modelo banner.image.line -->
    <record id="view_banner_image_line_search" model="ir.ui.view">
        <field name="name">banner.image.line.search</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Vista de formulario para el modelo banner.image.line -->
    <record id="view_banner_image_line_form" model="ir.ui.view">
        <field name="name">banner.image.line.form</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre"/>
                        <h1><field name="name" placeholder="Nombre del conjunto de imágenes"/></h1>
                    </div>
                    <notebook>
                        <page string="Imágenes Generales">
                            <group>
                                <!-- Checkbox arriba -->
                                <field name="is_active_carousel"/>
                            </group>
                            <group>
                                <!-- Imágenes abajo -->
                                <field name="general_images" widget="many2many_binary"/>
                            </group>
                        </page>
                        <page string="Sección de Descubre">
                            <group>
                                <!-- Checkbox arriba -->
                                <field name="is_active_product_carousel"/>
                            </group>
                            <group>
                                <!-- Imágenes abajo -->
                                <field name="product_images" widget="many2many_binary"/>
                            </group>
                        </page>
                        


                        <!--<page string="Imágenes de Marcas">
                            <group>
                                <field name="is_active_brand_carousel"/>
                            </group>
                            <group>
                                <field name="brand_images" widget="many2many_binary"/>
                            </group>
                        </page>
                        
