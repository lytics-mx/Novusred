                                       options="{'no_create': True, 'no_create_edit': True}"
                                       placeholder="Selecciona las categorías a mostrar en el menú"/>
                            </group>
                            <group string="Información">
                                <div class="text-muted">
                                    <p><strong>Importante:</strong></p>
                                    <p>• El número de categorías seleccionadas debe coincidir con el número de imágenes subidas</p>
                                    <p>• Si subes 5 imágenes, debes seleccionar exactamente 5 categorías</p>
                                    <p>• Cada imagen se asociará con una categoría en el orden seleccionado</p>
                                </div>
                            </group>
                        </page> -->
                                                
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista kanban para el modelo banner.image.line -->
    <record id="view_banner_image_line_kanban" model="ir.ui.view">
        <field name="name">banner.image.line.kanban</field>
        <field name="model">banner.image.line</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="general_images"/>
                <field name="product_images"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div>Imágenes Generales: <field name="general_images"/></div>
                            <div>Imágenes de Productos: <field name="product_images"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción para abrir el modelo banner.image.line -->
    <record id="action_banner_image_line" model="ir.actions.act_window">
        <field name="name">Imágenes</field>
        <field name="res_model">banner.image.line</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <!-- Menú para "Imágenes" debajo de "Catálogo" en Comercio Electrónico -->
    <menuitem id="menu_banner_image_line"
              name="Imágenes"
              action="action_banner_image_line"
              parent="website.menu_website_global_configuration"
              sequence="26"/>
</odoo>