<odoo>
    <template id="product_details_template" name="Product Details">
        <t t-call="website.layout">
            <div class="container">
                <h1>Detalles del Producto</h1>
                <div class="product-details">
                    <img t-att-src="product_info['image_url']" alt="Imagen del producto" class="product-image"/>
                    <h2 t-esc="product_info['name']"></h2>
                </div>
                <div class="purchase-details">
                    <h3>Detalles de la Compra</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Cantidad</th>
                                <th>Fecha de Compra</th>
                                <th>Fecha de Entrega</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="purchase_details" t-as="detail">
                                <td t-esc="detail['quantity']"></td>
                                <td t-esc="detail['purchase_date']"></td>
                                <td t-esc="detail['delivery_date']"></td>
                                <td t-esc="detail['state']"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>
