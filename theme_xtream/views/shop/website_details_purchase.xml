<odoo>
    <template id="product_details_template" name="Product Details">
        <t t-call="website.layout">
            <div class="container mt-5">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb mb-0" style="background: transparent;">
                        <li class="breadcrumb-item" style="font-size: 23px; color: #000;">
                            <a href="/delivered_products" class="text-buy" style="text-decoration: none; font-size: 23px; color: #000;">Compras</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page" style="font-size: 23px; color: #000;">Estado de la compra</li>
                    </ol>
                </nav>

                <div class="row">
                    <!-- Izquierda -->
                    <div class="col-md-8">
                        <!-- Producto -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body d-flex align-items-center">
                                <img t-att-src="product_info['image_url']" alt="Imagen del producto" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover; margin-right: 16px;"/>
                                <div>
                                    <h5 class="mb-1" t-esc="product_info['name']"></h5>
                                    <p class="text-muted mb-1" t-esc="product_info['brand']"></p>
                                    <span class="text-muted">1 unidad</span>
                                </div>
                            </div>
                        </div>
                        <!-- Seguimiento -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body">
                                <h5 class="mb-3">Llega en uno o dos días</h5>
                                <ul class="list-unstyled" style="position: relative; padding-left: 30px;">
                                    <t t-foreach="purchase_details[0]['tracking_states']" t-as="state">
                                        <li t-if="state == purchase_details[0]['state']" class="text-primary" style="position: relative; padding-left: 30px;">
                                            <span class="circle"></span>
                                            <span class="line"></span>
                                            <t t-esc="state"/>
                                        </li>
                                        <li t-if="state != purchase_details[0]['state']" class="text-muted" style="position: relative; padding-left: 30px;">
                                            <span class="circle"></span>
                                            <span class="line"></span>
                                            <t t-esc="state"/>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                        <style>
                            .text-primary {
                                color: #2B65FB !important;
                            }
                        
                            ul.list-unstyled {
                                position: relative;
                                padding-left: 30px; /* Ajusta el espacio para los puntos y líneas */
                            }
                        
                            ul.list-unstyled li {
                                position: relative;
                                padding-left: 30px; /* Espaciado entre el texto y los puntos */
                                font-size: 14px; /* Tamaño de fuente ajustado */
                            }
                        
                            ul.list-unstyled li .circle {
                                position: absolute;
                                left: 0;
                                top: 50%;
                                transform: translateY(-50%);
                                width: 10px; /* Tamaño del círculo */
                                height: 10px;
                                border-radius: 50%;
                            }
                        
                            ul.list-unstyled li .line {
                                position: absolute;
                                left: 5px;
                                top: 50%;
                                transform: translateY(-50%);
                                width: 2px; /* Grosor de la línea */
                                height: 30px; /* Altura de la línea */
                            }
                        
                            ul.list-unstyled li.text-primary .circle {
                                background-color: blue; /* Color del círculo activo */
                            }
                        
                            ul.list-unstyled li.text-primary .line {
                                background-color: blue; /* Color de la línea activa */
                            }
                        
                            ul.list-unstyled li.text-muted .circle {
                                background-color: gray; /* Color del círculo inactivo */
                            }
                        
                            ul.list-unstyled li.text-muted .line {
                                background-color: gray; /* Color de la línea inactiva */
                            }
                        
                            ul.list-unstyled li:last-child .line {
                                display: none; /* Oculta la línea para el último elemento */
                            }
                        </style>



                        <!-- Chat -->
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body" style="background-color: #fff;">
                                <h5 class="mb-3" style="font-size: 16px;">Mensajes</h5>
                                <hr class="my-2"/>
                                <div class="d-flex align-items-center">
                                    <img t-att-src="product_info['brand_image_url']" alt="Marca" class="img-fluid rounded-circle" style="width: 40px; height: 40px; margin-right: 16px;"/>
                                    <div>
                                        <span style="font-size: 16px; font-weight: 500;" t-esc="product_info['brand']"></span>
                                        <br/>
                                        <a href="#" class="text-primary" style="font-size: 14px;">Enviar mensaje</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Derecha -->
                    <div class="col-md-4">
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body">
                                <h5 class="mb-3">Detalle de la compra</h5>
                                <p class="text-muted mb-3" t-esc="purchase_details[0]['purchase_date']"></p>
                                <hr/>
                                <div class="d-flex justify-content-between">
                                    <span>Producto</span>
                                    <span class="text-danger" t-esc="purchase_details[0]['price']"></span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Envío</span>
                                    <span class="text-success">Gratis</span>
                                </div>
                                <hr/>
                                <div class="d-flex justify-content-between fw-bold">
                                    <span>Total</span>
                                    <span class="text-danger" t-esc="purchase_details[0]['total']"></span>
                                </div>
                                <a href="#" class="text-primary mt-3 d-block">Detalles del pago y envío ^</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>