<odoo>
    <template id="product_details_template" name="Product Details">
        <t t-call="website.layout">
            <div class="container mt-5">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb mb-0" style="background: transparent;">
                        <li class="breadcrumb-item" style="font-size: 23px; color: #000;">
                            <a href="/delivered_products" class="text-buy" style="text-decoration: none; font-size: 23px; color: #000;">Compras</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page" style="font-size: 23px; color: #000;">Estado de la compra</li>
                    </ol>
                </nav>

                <div class="row">
                    <!-- Izquierda -->
                    <div class="col-md-8">
                        <!-- Producto -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body d-flex align-items-center">
                                <img t-att-src="product_info['image_url']" alt="Imagen del producto" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover; margin-right: 16px;"/>
                                <div>
                                    <h5 class="mb-1" t-esc="product_info['name']"></h5>
                                    <p class="text-muted mb-1" t-esc="product_info['brand']"></p>
                                    <span class="text-muted">1 unidad</span>
                                </div>
                            </div>
                        </div>
                        <!-- Seguimiento -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body">
                                <h5 class="mb-3" style="font-size: 18px;">Llega en uno o dos días</h5>
                                <div class="d-flex">
                                    <!-- Timeline -->
                                    <div style="display: flex; flex-direction: column; align-items: center; margin-right: 16px; margin-top: 5px;">
                                        <t t-foreach="purchase_details[0]['tracking_states']" t-as="state" t-index="idx">
                                            <div style="display: flex; flex-direction: column; align-items: center;">
                                                <div t-if="idx == 0" style="height: 0;"></div>
                                                <div t-if="idx &gt; 0" style="width: 4px; height: 24px; background: <t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) &gt;= idx'>#0057FF</t><t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) &lt; idx'>#e0e0e0</t>; border-radius: 2px;"></div>
                                                <span style="
                                                    display: inline-block;
                                                    width: 12px;
                                                    height: 12px;
                                                    border-radius: 50%;
                                                    background: <t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) &gt;= idx'>#0057FF</t><t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) &lt; idx'>#e0e0e0</t>;
                                                    border: 2px solid #fff;
                                                "></span>
                                            </div>
                                        </t>
                                    </div>
                                    <!-- States -->
                                    <div style="display: flex; flex-direction: column; justify-content: flex-start;">
                                        <t t-foreach="purchase_details[0]['tracking_states']" t-as="state" t-index="idx">
                                            <span style="
                                                font-size: 13px;
                                                margin-bottom: 16px;
                                                color: <t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) &gt;= idx'>#222</t><t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) &lt; idx'>#bdbdbd</t>;
                                                font-weight: <t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) == idx'>500</t><t t-if='purchase_details[0][&quot;tracking_states&quot;].index(purchase_details[0][&quot;state&quot;]) != idx'>400</t>;
                                            ">
                                                <t t-esc="state"/>
                                            </span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Chat -->
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body" style="background-color: #fff;">
                                <h5 class="mb-3" style="font-size: 16px;">Mensajes</h5>
                                <hr class="my-2"/>
                                <div class="d-flex align-items-center">
                                    <img t-att-src="product_info['brand_image_url']" alt="Marca" class="img-fluid rounded-circle" style="width: 40px; height: 40px; margin-right: 16px;"/>
                                    <div>
                                        <span style="font-size: 16px; font-weight: 500;" t-esc="product_info['brand']"></span>
                                        <br/>
                                        <a href="#" class="text-primary" style="font-size: 14px;">Enviar mensaje</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Derecha -->
                    <div class="col-md-4">
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body">
                                <h5 class="mb-3">Detalle de la compra</h5>
                                <p class="text-muted mb-3" t-esc="purchase_details[0]['purchase_date']"></p>
                                <hr/>
                                <div class="d-flex justify-content-between">
                                    <span>Producto</span>
                                    <span class="text-danger" t-esc="purchase_details[0]['price']"></span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Envío</span>
                                    <span class="text-success">Gratis</span>
                                </div>
                                <hr/>
                                <div class="d-flex justify-content-between fw-bold">
                                    <span>Total</span>
                                    <span class="text-danger" t-esc="purchase_details[0]['total']"></span>
                                </div>
                                <a href="#" class="text-primary mt-3 d-block">Detalles del pago y envío ^</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>