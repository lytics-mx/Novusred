<odoo>
    <template id="product_details_template" name="Product Details">
        <t t-call="website.layout">
            <div class="container mt-5">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb mb-0" style="background: transparent;">
                        <li class="breadcrumb-item" style="font-size: 23px; color: #000;">
                            <a href="/delivered_products" class="text-buy" style="text-decoration: none; font-size: 23px; color: #000;">Compras</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page" style="font-size: 23px; color: #000;">Estado de la compra</li>
                    </ol>
                </nav>

                <div class="row">
                    <!-- Izquierda -->
                    <div class="col-md-8">
                        <!-- Producto -->
                        <t t-foreach="purchase_details" t-as="detail">
                            <div class="card mb-4 shadow-sm" style="border: none;">
                                <div class="card-body d-flex align-items-center">
                                    <img t-att-src="product_info['image_url']" alt="Imagen del producto" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover; margin-right: 16px;"/>
                                    <div>
                                        <h5 class="mb-1" t-esc="product_info['name']"></h5>
                                        <p class="text-muted mb-1" t-esc="product_info['brand']"></p>
                                        <span class="text-muted"><t t-esc="detail['quantity']"/> unidad</span>
                                    </div>
                                </div>
                            </div>
                            <!-- Seguimiento -->
                            <div class="card mb-4 shadow-sm" style="border: none;">
                                <div class="card-body">
                                    <h5 class="mb-3">Llega en uno o dos días</h5>
                                    <ul class="list-unstyled" style="position: relative; padding-left: 30px;">
                                        <t t-foreach="detail['tracking_states']" t-as="state">
                                            <li t-if="detail['tracking_states'].index(state) &lt;= detail['state_index']" class="text-primary" style="position: relative; padding-left: 30px;">
                                                <span class="circle"></span>
                                                <span class="line"></span>
                                                <t t-esc="state"/>
                                                <t t-if="state == 'Entregado' and detail['state'] == 'done'">
                                                    <span class="badge bg-success ms-2">Entregado</span>
                                                </t>
                                            </li>
                                            <li t-if="detail['tracking_states'].index(state) &gt; detail['state_index']" class="text-muted" style="position: relative; padding-left: 30px;">
                                                <span class="circle"></span>
                                                <span class="line"></span>
                                                <t t-esc="state"/>
                                            </li>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </div>
                    <!-- Derecha -->
                    <div class="col-md-4">
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body">
                                <h5 class="mb-3">Detalle de la compra</h5>
                                <t t-foreach="purchase_details" t-as="detail">
                                    <p class="text-muted mb-3" t-esc="detail['purchase_date']"></p>
                                    <hr/>
                                    <div class="d-flex justify-content-between">
                                        <span>Producto</span>
                                        <span class="text-danger" t-esc="detail['price']"></span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span>Envío</span>
                                        <span class="text-success">Gratis</span>
                                    </div>
                                    <hr/>
                                    <div class="d-flex justify-content-between fw-bold">
                                        <span>Total</span>
                                        <span class="text-danger" t-esc="detail['total']"></span>
                                    </div>
                                    <a href="#" class="text-primary mt-3 d-block">Detalles del pago y envío ^</a>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>