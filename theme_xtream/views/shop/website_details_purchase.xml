<odoo>
    <template id="product_details_template" name="Product Details">
        <t t-call="website.layout">
            <div class="container mt-5">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb mb-0" style="background: transparent;">
                        <li class="breadcrumb-item" style="font-size: 23px; color: #000;">
                            <a href="/delivered_products" class="text-buy" style="text-decoration: none; font-size: 23px; color: #000;">Compras</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page" style="font-size: 23px; color: #000;">Estado de la compra</li>
                    </ol>
                </nav>

                <div class="row">
                    <!-- Izquierda -->
                    <div class="col-md-8">
                        <!-- Producto -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body d-flex align-items-center">
                                <img t-att-src="product_info['image_url']" alt="Imagen del producto" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover; margin-right: 16px;"/>
                                <div>
                                    <h5 class="mb-1" t-esc="product_info['name']"></h5>
                                    <p class="text-muted mb-1" t-esc="product_info['brand']"></p>
                                    <span class="text-muted">1 unidad</span>
                                </div>
                            </div>
                        </div>
                        <!-- Seguimiento -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body">
                                <!-- Texto dinámico de llegada -->
                                <h5 class="mb-3">
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Llega mañana'">
                                        Llega mañana
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Llega hoy'">
                                        Llega hoy
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Fecha límite pasada'">
                                        Fecha límite pasada
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Llega la siguiente semana'">
                                        Llega la siguiente semana
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] not in ['Llega mañana', 'Llega hoy', 'Fecha límite pasada', 'Llega la siguiente semana']">
                                        <t t-esc="purchase_details[0]['days_remaining']"/>
                                    </t>
                                </h5>                              
                                <ul class="list-unstyled tracking-list">
                                    <t t-foreach="purchase_details[0]['tracking_states']" t-as="state">
                                        <li t-if="purchase_details[0]['tracking_states'].index(state) &lt;= purchase_details[0]['state_index']" class="text-primary">
                                            <span class="circle"></span>
                                            <t t-if="purchase_details[0]['tracking_states'].index(state) != 0">
                                                <span class="fat-line"></span>
                                            </t>
                                            <t t-esc="state"/>
                                            <t t-if="state == 'Entregado' and purchase_details[0]['state'] == 'done'">
                                                <span class="badge bg-success ms-2">Entregado</span>
                                            </t>
                                        </li>
                                        <li t-if="purchase_details[0]['tracking_states'].index(state) &gt; purchase_details[0]['state_index']" class="text-muted">
                                            <span class="circle"></span>
                                            <t t-if="purchase_details[0]['tracking_states'].index(state) != 0">
                                                <span class="fat-line"></span>
                                            </t>
                                            <t t-esc="state"/>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                        <style>
                            .tracking-list {
                                padding-left: 20px;
                                margin: 0;
                            }
                            .tracking-list li {
                                position: relative;
                                padding-left: 30px;
                                font-size: 14px;
                                list-style: none;
                            }
                            .tracking-list li .circle {
                                position: absolute;
                                left: 0;
                                top: 50%;
                                transform: translateY(-50%);
                                width: 14px;
                                height: 14px;
                                border-radius: 50%;
                            }
                            .tracking-list li .fat-line {
                                position: absolute;
                                left: 3px;
                                top: 50%;
                                transform: translateY(-50%);
                                width: 8px;
                                height: 40px;
                                border-radius: 4px;
                            }
                            .tracking-list li.text-primary .circle {
                                background-color: #2B65FB;
                            }
                            .tracking-list li.text-primary .fat-line {
                                background-color: #2B65FB;
                            }
                            .tracking-list li.text-muted .circle {
                                background-color: #d3d3d3;
                            }
                            .tracking-list li.text-muted .fat-line {
                                background-color: #d3d3d3;
                            }
                            .tracking-list li:last-child .fat-line {
                                display: none;
                            }
                        </style>



                        <!-- Chat -->
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body" style="background-color: #fff;">
                                <h5 class="mb-3" style="font-size: 16px;">Mensajes</h5>
                                <hr class="my-2"/>
                                <div class="d-flex align-items-center">
                                    <img t-att-src="product_info['brand_image_url']" alt="Marca" class="img-fluid rounded-circle" style="width: 40px; height: 40px; margin-right: 16px;"/>
                                    <div>
                                        <span style="font-size: 16px; font-weight: 500;" t-esc="product_info['brand']"></span>
                                        <br/>
                                        <a href="#" class="text-primary" style="font-size: 14px;">Enviar mensaje</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Derecha -->
                    <div class="col-md-4">
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body">
                                <h5 class="mb-3">Detalle de la compra</h5>
                                <p class="text-muted mb-3" t-esc="purchase_details[0]['purchase_date']"></p>
                                <hr/>
                                <div class="d-flex justify-content-between">
                                    <span>Producto</span>
                                    <span class="text-danger" t-esc="purchase_details[0]['price']"></span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Envío</span>
                                    <span class="text-success">Gratis</span>
                                </div>
                                <hr/>
                                <div class="d-flex justify-content-between fw-bold">
                                    <span>Total</span>
                                    <span class="text-danger" t-esc="purchase_details[0]['total']"></span>
                                </div>
                                <a href="#" class="text-primary mt-3 d-block">Detalles del pago y envío ^</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>