<odoo>
    <template id="product_details_template" name="Detalles de compra">
        <t t-call="website.layout">
            <div class="container d-none d-md-block mt-5">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb mb-0" style="background: transparent;">
                        <li class="breadcrumb-item" style="font-size: 23px; color: #000;">
                            <a href="/delivered" class="text-buy" style="text-decoration: none; font-size: 23px; color: #000;">Compras</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page" style="font-size: 23px; color: #000;">Estado de la compra</li>
                    </ol>
                </nav>

                <div class="row">
                    <!-- Izquierda -->
                    <div class="col-md-8">
                        <!-- Producto -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body d-flex align-items-center" style="background-color: #fff;">
                                <div class="flex-grow-1">
                                    <!-- Mostrar el nombre del producto como enlace -->
                                    <h5 class="mb-1" style="font-size: 20px;">
                                        <a t-att-href="product_info['website_url']" class="text-decoration-none" style="color: #000;">                                        
                                            <t t-esc="product_info['name'][:72] + ('..' if len(product_info['name']) > 45 else '')"/>
                                        </a>
                                    </h5>
                                    <!-- <p class="text-muted mb-1" t-esc="product_info['brand']"></p> -->
                                    <!-- Mostrar la cantidad del producto con singular/plural -->
                                    <span class="text-muted">
                                        <t t-if="purchase_details[0]['quantity'] == 1">
                                            1 unidad
                                        </t>
                                        <t t-else="">
                                            <t t-esc="'%s unidades' % purchase_details[0]['quantity']"/>
                                        </t>
                                    </span>
                                </div>
                                <img t-att-src="product_info['image_url']" alt="Imagen del producto" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover; margin-left: 16px;"/>
                            </div>
                        </div>
                        <!-- Seguimiento -->
                        <div class="card mb-4 shadow-sm" style="border: none;">
                            <div class="card-body" style="background-color: #fff;">
                                <!-- Texto dinámico de llegada -->
                                <h5 class="mb-3">
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Llega mañana'">
                                        <span style="font-size: 22px;">Llega mañana</span>
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Llega hoy'">
                                        <span style="font-size: 22px;">Llega hoy</span>
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Fecha límite pasada'">
                                        <span style="font-size: 22px;">Fecha límite pasada</span>
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] == 'Llega la siguiente semana'">
                                        <span style="font-size: 22px;">Llega la siguiente semana</span>
                                    </t>
                                    <t t-if="purchase_details[0]['days_remaining'] not in ['Llega mañana', 'Llega hoy', 'Fecha límite pasada', 'Llega la siguiente semana']">
                                        <span style="font-size: 22px;" t-esc="purchase_details[0]['days_remaining']"/>
                                    </t>
                                </h5>                              
                                <ul class="list-unstyled tracking-list">
                                    <t t-foreach="purchase_details[0]['tracking_states']" t-as="state">
                                        <li t-if="purchase_details[0]['tracking_states'].index(state) &lt;= purchase_details[0]['state_index']" class="text-primary">
                                            <span class="circle"></span>
                                            <t t-if="purchase_details[0]['tracking_states'].index(state) != 0">
                                                <span class="fat-line"></span>
                                            </t>
                                            <t t-esc="state_translation[state]"/>
                                        </li>
                                        <li t-if="purchase_details[0]['tracking_states'].index(state) &gt; purchase_details[0]['state_index']" class="text-muted">
                                            <span class="circle"></span>
                                            <t t-if="purchase_details[0]['tracking_states'].index(state) != 0">
                                                <span class="fat-line"></span>
                                            </t>
                                            <t t-esc="state_translation[state]"/>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                        <style>
                            .tracking-list {
                                padding-left: 20px;
                                margin: 0;
                            }
                            .tracking-list li {
                                position: relative;
                                padding-left: 30px;
                                font-size: 14px;
                                list-style: none;
                            }
                            .tracking-list li .circle {
                                position: absolute;
                                left: 0;
                                top: 50%;
                                transform: translateY(-50%);
                                width: 14px;
                                height: 14px;
                                border-radius: 50%;
                            }
                            .tracking-list li .fat-line {
                                position: absolute;
                                left: 3px;
                                top: 50%;
                                transform: translateY(-50%);
                                width: 8px;
                                height: 40px;
                                border-radius: 4px;
                            }
                            .tracking-list li.text-primary .circle {
                                background-color: #2B65FB;
                            }
                            .tracking-list li.text-primary .fat-line {
                                background-color: #2B65FB;
                            }
                            .tracking-list li.text-muted .circle {
                                background-color: #d3d3d3;
                            }
                            .tracking-list li.text-muted .fat-line {
                                background-color: #d3d3d3;
                            }
                            .tracking-list li:last-child .fat-line {
                                display: none;
                            }
                        </style>



                        <!-- Chat -->
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body" style="background-color: #fff;">
                                <h5 class="mb-3" style="font-size: 16px;">Mensajes</h5>
                                <hr class="my-2"/>
                                <div class="d-flex align-items-center">
                                    <img t-att-src="product_info['brand_image_url']" alt="Marca" class="img-fluid rounded-circle" style="width: 40px; height: 40px; margin-right: 16px;"/>
                                    <div>
                                        <span style="font-size: 16px; font-weight: 500;" t-esc="product_info['brand']"></span>
                                        <br/>
                                        <!-- <a href="#" class="text-primary" style="font-size: 14px;">Enviar mensaje</a> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Derecha -->
                    <div class="col-md-4">
                        <div class="card shadow-sm" style="border: none;">
                            <div class="card-body" style="background-color: #fff;">
                                <h5 class="mb-3">Detalle de la compra</h5>
                                <p class="text-muted mb-3" style="color: #777777; font-size: 16px;" t-esc="purchase_details[0]['purchase_date']"></p>
                                <hr/>
                                <div class="d-flex justify-content-between">
                                    <span style="color: #777777; font-size: 16px;">Producto</span>
                                    <span style="color: #777777; font-size: 16px;" t-esc="purchase_details[0]['price']"></span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span style="color: #777777; font-size: 16px;">Cantidad</span>
                                    <span style="color: #777777; font-size: 16px;">
                                        <t t-if="int(purchase_details[0]['quantity']) == 1">
                                            1 unidad
                                        </t>
                                        <t t-else="">
                                            <t t-esc="str(int(purchase_details[0]['quantity'])) + ' unidades'"/>
                                        </t>
                                    </span>
                                </div>
                                <t t-if="product_info['free_shipping']">
                                    <div class="d-flex justify-content-between">
                                        <span style="color: #777777; font-size: 16px;">Envío</span>
                                        <span class="text-success" style="color: #FF3D00; font-size: 16px;">Gratis</span>
                                    </div>
                                </t>
                                <hr/>
                                <div class="d-flex justify-content-between">
                                    <span style="color: #777777; font-size: 16px;">Total</span>
                                    <span style="color: #777777; font-size: 16px;" t-esc="purchase_details[0]['total']"></span>
                                </div>
                                <a href="javascript:void(0);" class="text-primary mt-3 d-block" onclick="toggleShippingDetails()">
                                    Detalles del pago y envío <span id="toggle-icon">▽</span>
                                </a>                                
                                <!-- Contenedor oculto para los detalles del envío -->
                                <div id="shipping-details" style="display: none; margin-top: 15px;">
                                    <t t-if="shipping_details">
                                        <ul style="padding-left: 0; list-style: none;">
                                            <li style="color: #777777; font-size: 16px;">
                                                <strong>Domicilio:</strong>
                                                <span t-esc="shipping_details['partner_address']"/>
                                            </li>
                                            <t t-if="shipping_details.get('responsible')">
                                                <li style="color: #777777; font-size: 16px;">
                                                    <strong>Responsable:</strong>
                                                    <span t-esc="shipping_details['responsible']"/>
                                                </li>
                                            </t>
                                            <t t-if="shipping_details.get('carrier')">
                                                <li style="color: #777777; font-size: 16px;">
                                                    <strong>Transportista:</strong>
                                                    <span t-esc="shipping_details['carrier']"/>
                                                </li>
                                            </t>
                                            <t t-if="shipping_details.get('shipping_weight')">
                                                <li style="color: #777777; font-size: 16px;">
                                                    <strong>Peso del Paquete:</strong>
                                                    <span t-esc="shipping_details['shipping_weight']"/> kg
                                                </li>
                                            </t>
                                        </ul>
                                    </t>
                                </div>
                                
                                <script>
                                    function toggleShippingDetails() {
                                        const details = document.getElementById('shipping-details');
                                        const icon = document.getElementById('toggle-icon');
                                        if (details.style.display === 'none') {
                                            details.style.display = 'block';
                                            icon.textContent = '▽'; // Cambiar a flecha hacia abajo
                                        } else {
                                            details.style.display = 'none';
                                            icon.textContent = '▽'; // Cambiar a flecha hacia arriba
                                        }
                                    }
                                </script>                                                        
                            </div>
                        </div>
                    </div>
                </div>
                <div style="height: 45px;"></div>
            </div>


                   <div class="container d-block d-lg-none" style="padding: 0 8px;">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb mb-0" style="background: transparent; font-size: 18px;">
                        <li class="breadcrumb-item">
                            <a href="/delivered" class="text-buy" style="text-decoration: none; color: #000;">Compras</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page" style="color: #000;">Estado de la compra</li>
                    </ol>
                </nav>

                <!-- Producto -->
                <div class="card mb-3 shadow-sm" style="border: none;">
                    <div class="card-body d-flex align-items-center" style="background-color: #fff; flex-direction: row;">
                        <img t-att-src="product_info['image_url']" alt="Imagen del producto" class="img-fluid rounded" style="width: 60px; height: 60px; object-fit: cover; margin-right: 12px;"/>
                        <div class="flex-grow-1">
                            <h5 class="mb-1" style="font-size: 13px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; margin: 0;">
                                <a t-att-href="product_info['website_url']" class="text-decoration-none" style="color: #000; display: inline-block; max-width: 100%;">
                                    <t t-esc="product_info['name'][:29].upper() + ('..' if len(product_info['name']) > 29 else '')"/>
                                </a>
                            </h5>
                            <div style="font-size: 14px; color: #888; margin-top: 4px;">
                                <t t-if="product_info.get('discount_price')">
                                    <span style="text-decoration: line-through; margin-right: 6px;">$<t t-esc="product_info['price']"/></span>
                                    <span>$<t t-esc="product_info['discount_price']"/></span>
                                </t>
                                <t t-else="">
                                    <span>$<t t-esc="purchase_details[0].get('price', product_info.get('price', ''))"/></span>
                                </t>
                                <span style="margin-left: 8px;">
                                    <t t-if="int(purchase_details[0]['quantity']) == 1">
                                        | 1 unidad
                                    </t>
                                    <t t-else="">
                                        <t t-esc="'| %s unidades' % str(int(purchase_details[0]['quantity']))"/>
                                    </t>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Detalle de la compra -->
                <div class="card mb-3 shadow-sm" style="border: none;">
                    <div class="card-body" style="background-color: #fff;">
                        <h5 class="mb-2" style="font-size: 15px;">Detalle de la compra</h5>
                        <p class="text-muted mb-2" style="font-size: 14px;" t-esc="purchase_details[0]['purchase_date']"></p>
                        <hr/>
                        <div class="d-flex justify-content-between" style="font-size: 14px;">
                            <span>Producto</span>
                            <span>$<t t-esc="purchase_details[0]['price']"/></span>
                        </div>
                        <div class="d-flex justify-content-between" style="font-size: 14px;">
                            <span>Cantidad</span>
                            <span>
                                <t t-if="int(purchase_details[0]['quantity']) == 1">
                                    1 unidad
                                </t>
                                <t t-else="">
                                    <t t-esc="str(int(purchase_details[0]['quantity'])) + ' unidades'"/>
                                </t>
                            </span>
                        </div>
                        <t t-if="product_info['free_shipping']">
                            <div class="d-flex justify-content-between" style="font-size: 14px;">
                                <span>Envío</span>
                                <span class="text-success" style="color: #FF3D00;">Gratis</span>
                            </div>
                        </t>
                        <hr/>
                        <div class="d-flex justify-content-between" style="font-size: 14px;">
                            <span>Total</span>
                            <span>$<t t-esc="purchase_details[0]['total']"/></span>
                        </div>
                        <a href="javascript:void(0);" class="text-primary mt-2 d-block" onclick="toggleShippingDetailsMobile()" style="font-size: 14px;">
                            Detalles del pago y envío <span id="toggle-icon-mobile">▽</span>
                        </a>
                        <script>
                            function toggleShippingDetailsMobile() {
                                const details = document.getElementById('shipping-details-mobile');
                                const icon = document.getElementById('toggle-icon-mobile');
                                if (details.style.display === 'none' || details.style.display === '') {
                                    details.style.display = 'block';
                                    icon.textContent = '△';
                                } else {
                                    details.style.display = 'none';
                                    icon.textContent = '▽';
                                }
                            }
                        </script>
                        <div id="shipping-details-mobile" style="display: none; margin-top: 10px;">
                            <t t-if="shipping_details">
                                <ul style="padding-left: 0; list-style: none;">
                                    <li style="font-size: 14px;">
                                        <strong>Domicilio:</strong>
                                        <span t-esc="shipping_details['partner_address']"/>
                                    </li>
                                    <t t-if="shipping_details.get('responsible')">
                                        <li style="font-size: 14px;">
                                            <strong>Responsable:</strong>
                                            <span t-esc="shipping_details['responsible']"/>
                                        </li>
                                    </t>
                                    <t t-if="shipping_details.get('carrier')">
                                        <li style="font-size: 14px;">
                                            <strong>Transportista:</strong>
                                            <span t-esc="shipping_details['carrier']"/>
                                        </li>
                                    </t>
                                    <t t-if="shipping_details.get('shipping_weight')">
                                        <li style="font-size: 14px;">
                                            <strong>Peso del Paquete:</strong>
                                            <span t-esc="shipping_details['shipping_weight']"/> kg
                                        </li>
                                    </t>
                                </ul>
                            </t>
                        </div>
                        
                    </div>
                </div>

                <!-- Seguimiento -->
                <div class="card mb-3 shadow-sm" style="border: none;">
                    <div class="card-body" style="background-color: #fff;">
                        <h5 class="mb-2" style="font-size: 15px;">
                            <t t-if="purchase_details[0]['days_remaining'] == 'Llega mañana'">
                                Llega mañana
                            </t>
                            <t t-if="purchase_details[0]['days_remaining'] == 'Llega hoy'">
                                Llega hoy
                            </t>
                            <t t-if="purchase_details[0]['days_remaining'] == 'Fecha límite pasada'">
                                Fecha límite pasada
                            </t>
                            <t t-if="purchase_details[0]['days_remaining'] == 'Llega la siguiente semana'">
                                Llega la siguiente semana
                            </t>
                            <t t-if="purchase_details[0]['days_remaining'] not in ['Llega mañana', 'Llega hoy', 'Fecha límite pasada', 'Llega la siguiente semana']">
                                <span t-esc="purchase_details[0]['days_remaining']"/>
                            </t>
                        </h5>
                        <ul class="list-unstyled tracking-list-mobile">
                            <t t-foreach="purchase_details[0]['tracking_states']" t-as="state">
                                <li t-if="purchase_details[0]['tracking_states'].index(state) &lt;= purchase_details[0]['state_index']" class="text-primary">
                                    <span class="circle"></span>
                                    <t t-if="purchase_details[0]['tracking_states'].index(state) != 0">
                                        <span class="fat-line"></span>
                                    </t>
                                    <t t-esc="state_translation[state]"/>
                                </li>
                                <li t-if="purchase_details[0]['tracking_states'].index(state) &gt; purchase_details[0]['state_index']" class="text-muted">
                                    <span class="circle"></span>
                                    <t t-if="purchase_details[0]['tracking_states'].index(state) != 0">
                                        <span class="fat-line"></span>
                                    </t>
                                    <t t-esc="state_translation[state]"/>
                                </li>
                            </t>
                        </ul>
                    </div>
                </div>
                <style>
                    .tracking-list-mobile {
                        padding-left: 18px;
                        margin: 0;
                    }
                    .tracking-list-mobile li {
                        position: relative;
                        padding-left: 28px;
                        font-size: 13px;
                        list-style: none;
                        margin-bottom: 3px;
                    }
                    .tracking-list-mobile li .circle {
                        position: absolute;
                        left: 0;
                        top: 50%;
                        transform: translateY(-50%);
                        width: 12px;
                        height: 12px;
                        border-radius: 50%;
                    }
                    .tracking-list-mobile li .fat-line {
                        position: absolute;
                        left: 2px;
                        top: 50%;
                        transform: translateY(-50%);
                        width: 7px;
                        height: 32px;
                        border-radius: 4px;
                    }
                    .tracking-list-mobile li.text-primary .circle {
                        background-color: #2B65FB;
                    }
                    .tracking-list-mobile li.text-primary .fat-line {
                        background-color: #2B65FB;
                    }
                    .tracking-list-mobile li.text-muted .circle {
                        background-color: #d3d3d3;
                    }
                    .tracking-list-mobile li.text-muted .fat-line {
                        background-color: #d3d3d3;
                    }
                    .tracking-list-mobile li:last-child .fat-line {
                        display: none;
                    }
                </style>

                <!-- Chat -->
                <div class="card shadow-sm mb-3" style="border: none;">
                    <div class="card-body" style="background-color: #fff;">
                        <h5 class="mb-2" style="font-size: 15px;">Mensajes</h5>
                        <hr class="my-2"/>
                        <div class="d-flex align-items-center">
                            <img t-att-src="product_info['brand_image_url']" alt="Marca" class="img-fluid rounded-circle" style="width: 32px; height: 32px; margin-right: 12px;"/>
                            <div>
                                <span style="font-size: 14px; font-weight: 500;" t-esc="product_info['brand']"></span>
                                <br/>
                                <!-- <a href="#" class="text-primary" style="font-size: 13px;">Enviar mensaje</a> -->
                            </div>
                        </div>
                    </div>
                </div>
                <div style="height: 30px;"></div>
            </div>

        </t>
    </template>
</odoo>