<odoo>
    <template id="history_template" name="Historial de Productos Vistos">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div style="text-align: left;">
                    <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Historial</h2>
                </div>
                <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                    <!-- Verifica si hay productos en el historial -->
                    <t t-if="history">
                        <!-- Agrupa los productos por mes -->
                        <t t-set="grouped_history" t-value="{}" />
                        <t t-foreach="history" t-as="entry">
                            <t t-set="month" t-value="entry.viewed_at.strftime('%B %Y')" />
                            <t t-if="month not in grouped_history">
                                <t t-set="grouped_history[month]" t-value="[]" />
                            </t>
                            <t t-set="grouped_history[month]" t-value="grouped_history[month] + [entry]" />
                        </t>

                        <!-- Renderiza los productos agrupados por mes -->
                        <t t-foreach="grouped_history.items()" t-as="group">
                            <div class="mt-4">
                                <h3 style="font-family: 'Questrial', sans-serif; font-size: 20px; color: #333;">
                                    <t t-esc="group[0]" />
                                </h3>
                                <div class="row row-cols-2 row-cols-md-5 g-3">
                                    <t t-foreach="group[1]" t-as="entry">
                                        <div class="col">
                                            <div class="card h-100 shadow-sm" style="background-color: #ffffff; border-radius: 8px; padding: 15px; border: 1px solid #ffffff;">
                                                <a t-att-href="'/shop/product/' + str(entry.product_id.id)">
                                                    <img t-att-src="'/web/image/product.template/' + str(entry.product_id.id) + '/image_1920'" 
                                                         class="card-img-top"
                                                         style="height: 200px; object-fit: contain; padding: 10px;" />
                                                </a>
                                                <div class="card-body d-flex flex-column" style="background-color: #ffffff;">
                                                    <h6 class="card-title mb-2 text-truncate" style="max-height: 4.8em; overflow: hidden;">
                                                        <t t-esc="entry.product_id.name" />
                                                    </h6>
                                                    <div class="mt-auto">
                                                        <span class="text-muted" style="font-size: 0.8rem;">
                                                            Visto el: <t t-esc="entry.viewed_at.strftime('%d/%m/%Y %H:%M:%S')" />
                                                        </span>
                                                    </div>
                                                    <!-- BotÃ³n para eliminar -->
                                                    <a t-att-href="'/shop/history/remove/' + str(entry.id)" class="text-danger mt-2" style="font-size: 0.9rem;">
                                                        Eliminar
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </t>
                    <!-- Mensaje si no hay productos en el historial -->
                    <t t-else="">
                        <div class="text-center mt-5">
                            <h4 style="font-family: 'Questrial', sans-serif; color: #666;">No hay productos en tu historial.</h4>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>