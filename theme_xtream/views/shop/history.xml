<odoo>
    <template id="history_template" name="Historial de Productos Vistos">
        <section class="container mt-5">
            <h2>Historial de Productos Vistos</h2>
            <t t-if="history">
                <div class="o_wsale_products_grid_table_wrapper">
                    <form class="js_products" action="" method="post">
                        <div class="products_pager">
                            <div class="row">
                                <t t-foreach="history" t-as="entry">
                                    <t t-set="product" t-value="entry.product_id"/>
                                    <div t-attf-class="oe_product oe_list col-lg-12">
                                        <t t-call="website_sale.products_list_view">
                                            <t t-set="product" t-value="product"/>
                                        </t>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </form>
                </div>
            </t>
            <t t-else="">
                <p>No has visto ning√∫n producto recientemente.</p>
            </t>
        </section>
    </template>
</odoo>