<odoo>
    <template id="history_template" name="Historial">
        <t t-call="website.layout">
            <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-8">
                            <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Historial</h2>
                        </div>
                    </div>
                    <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                        <t t-if="grouped_history">
                            <t t-foreach="grouped_history.items()" t-as="month_products">
                                <div class="mb-4">
                                    <h4 class="mb-3" style="font-family: 'Questrial', sans-serif; color: #333;">
                                        <t t-esc="month_products[0]" />
                                    </h4>
                                    <div class="row row-cols-2 row-cols-md-5 g-3">
                                        <t t-foreach="month_products[1]" t-as="entry">
                                            <div class="col">
                                                <div class="card h-100 shadow-sm product-card">
                                                    <a t-att-href="'/shop/product/' + str(entry.product_id.id)">
                                                        <img t-att-src="'/web/image/product.template/' + str(entry.product_id.id) + '/image_1920'" class="card-img-top" />
                                                    </a>
                                                    <div class="card-body">
                                                        <div class="mt-auto">
                                                            <h6 class="card-title namehistory mb-2" style="font-size: 0.9rem;">
                                                                <t t-esc="entry.product_id.name.upper()" />
                                                            </h6>
                                                            <!-- Aquí puedes agregar más campos si los tienes en entry.product_id -->
                                                            <span class="fw-bold d-block" style="font-size: 25px;">
                                                                $<t t-esc="'{:,}'.format(int(entry.product_id.list_price))" />
                                                            </span>
                                                            <t t-if="product.free_shipping">
                                                                <div class="mt-0">
                                                                    <span class="text-orange" style="color: #FF5207; font-size: 0.9rem; font-weight: bold; font-style: italic;">
                                                                        Envío gratis
                                                                    </span>
                                                                </div>
                                                            </t>
                                                        </div>
                                                        <a t-att-href="'/shop/history/remove/' + str(entry.product_id.id)" 
                                                           t-att-data-product-id="entry.product_id.id"
                                                           class="text-blue mt-2 delete-history-item" 
                                                           style="font-size: 0.9rem; color: blue; display: inline-block; float: left;"
                                                           onclick="event.preventDefault(); 
                                                                   fetch('/shop/history/remove/' + $(this).data('product-id'))
                                                                   .then(response => {
                                                                       if (response.ok) {
                                                                           $(this).closest('.col').fadeOut();
                                                                       }
                                                                   });">
                                                            Eliminar
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </t>
                        </t>
                        <t t-else="">
                            <div class="text-center mt-5">
                                <h4 style="font-family: 'Questrial', sans-serif; color: #666;">No hay productos en tu historial.</h4>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
            <div class="oe_structure container mt-4" id="espacio_custom_block">
            </div>
        </t>
    </template>
</odoo>
