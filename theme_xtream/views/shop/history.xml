<odoo>
    <template id="history_template" name="Historial de Productos Vistos">
        <t t-call="website.layout">
            <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Historial</h2>
                    </div>
                    <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                        <!-- Obtener productos agrupados -->
                        <t t-set="grouped_products" t-value="request.env['website.track'].get_grouped_viewed_products()" />

                        <!-- Mostrar productos agrupados -->
                        <t t-foreach="grouped_products.items()" t-as="group">
                            <t t-if="group[1]">
                                <div class="container mt-4">
                                    <h3 style="font-family: 'Questrial', sans-serif; font-size: 20px;">
                                        <t t-esc="group[0]" />
                                    </h3>
                                    <div class="row row-cols-2 row-cols-md-5 g-3">
                                        <t t-foreach="group[1]" t-as="product">
                                            <div class="col">
                                                <div class="card h-100 shadow-sm product-card" style="background-color: #ffffff; border-radius: 8px; padding: 15px; border: 1px solid #ffffff; position: relative; overflow: hidden; transition: transform 0.3s ease;">
                                                    <a t-att-href="'/shop/product/' + str(product.id)">
                                                        <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                             class="card-img-top"
                                                             style="height: 200px; object-fit: contain; padding: 10px;" />
                                                    </a>
                                                    <div class="card-body d-flex flex-column">
                                                        <h6 class="card-title mb-2 text-truncate" style="font-size: 0.9rem;">
                                                            <t t-esc="product.name.upper()" />
                                                        </h6>
                                                        <span class="text-dark fw-bold d-block" style="font-size: 25px;">
                                                            $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                        </span>
                                                        <a t-att-href="'/shop/history/remove/' + str(product.id)" 
                                                           class="text-blue mt-2 delete-history-item" 
                                                           style="font-size: 0.9rem; color: blue;">
                                                            Eliminar
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </t>
                        </t>

                        <!-- Mensaje si no hay productos en el historial -->
                        <t t-if="not grouped_products['Hoy'] and not grouped_products['Enero'] and not grouped_products['Febrero']">
                            <div class="text-center mt-5">
                                <h4 style="font-family: 'Questrial', sans-serif; color: #666;">No hay productos en tu historial.</h4>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
            <div class="oe_structure container mt-4" id="espacio_custom_block">
                <!-- This empty div permite insertar bloques de contenido personalizados -->
            </div>
        </t>
    </template>
</odoo>