<odoo>
    <template id="history_template" name="Historial de Productos Vistos">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h2>Historial de Productos Vistos</h2>
                <t t-if="history">
                    <ul class="list-group">
                        <t t-foreach="history" t-as="product">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <a t-att-href="'/shop/product/%s' % product.product_id.id">
                                        <t t-esc="product.product_id.name"/>
                                    </a>
                                    <span class="text-muted">
                                        (Visto el <t t-esc="product.viewed_at.strftime('%d/%m/%Y %H:%M')"/>)
                                    </span>
                                </div>
                                <div>
                                    <t t-if="product.purchased">
                                        <span class="badge bg-success">Comprado</span>
                                    </t>
                                </div>
                            </li>
                        </t>
                    </ul>
                </t>
                <t t-else="">
                    <p>No has visto ni comprado ning√∫n producto recientemente.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>