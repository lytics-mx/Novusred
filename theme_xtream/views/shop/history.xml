<odoo>
    <template id="history_template" name="Historial">
        <t t-call="website.layout">
            <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-8">
                            <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Historial</h2>
                        </div>
                    </div>
                    
                    <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                        <t t-if="grouped_history">
                            <!-- Iterar por cada período -->
                            <t t-foreach="grouped_history.items()" t-as="period_data">
                                <t t-set="period_name" t-value="period_data[0]" />
                                <t t-set="period_products" t-value="period_data[1]" />
                                
                                <!-- Título del período -->
                                <div class="mb-3 mt-4">
                                    <h4 style="font-family: 'Questrial', sans-serif; font-size: 18px; color: #333; border-bottom: 1px solid #eee; padding-bottom: 8px;">
                                        <t t-esc="period_name" />
                                        <span class="text-muted" style="font-size: 14px; font-weight: normal;">
                                            (<t t-esc="len(period_products)" /> productos)
                                        </span>
                                    </h4>
                                </div>
                                
                                <!-- Productos del período -->
                                <div class="row row-cols-2 row-cols-md-5 g-3 mb-4">
                                    <t t-foreach="period_products" t-as="item">
                                        <t t-set="product" t-value="item['product']" />
                                        <div class="col">
                                            <div class="card h-100 shadow-sm product-card">
                                                <a t-att-href="'/shop/product/' + str(product.id)">
                                                    <!-- Imagen del producto -->
                                                    <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                         class="card-img-top" 
                                                         style="height: 200px; object-fit: contain;" />
                                                </a>
                                                
                                                <div class="card-body">
                                                    <div class="mt-auto">
                                                        <!-- Nombre del producto -->
                                                        <h6 class="card-title namehistory mb-2" style="font-size: 0.9rem;">
                                                            <t t-esc="product.name.upper()" />
                                                        </h6>
                                                        
                                                        <!-- Precios -->
                                                        <t t-if="product.discounted_price &lt; product.list_price">
                                                            <div class="d-flex align-items-center justify-content-between">
                                                                <span class="text-dark fw-bold" style="font-size: 25px;">
                                                                    $<t t-esc="'{:,}'.format(int(product.discounted_price))" />
                                                                </span>
                                                                <span class="text-danger" style="font-size: 18px; font-weight: normal;">
                                                                    <t t-if="product.discount_percentage">
                                                                        <t t-esc="int(product.discount_percentage)" />% OFF
                                                                    </t>
                                                                    <t t-elif="product.fixed_discount">
                                                                        -$<t t-esc="'{:,}'.format(int(product.fixed_discount))" /> MXN
                                                                    </t>
                                                                </span>
                                                            </div>
                                                            <div class="mt-0">
                                                                <span class="text-muted ms-2" style="font-size: 18px; text-decoration: line-through;">
                                                                    $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                                </span>
                                                            </div>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="fw-bold d-block" style="font-size: 25px;">
                                                                $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                            </span>
                                                        </t>
                                                        
                                                        <!-- Envío gratis -->
                                                        <t t-if="product.free_shipping">
                                                            <div class="mt-1">
                                                                <span class="text-orange" style="color: #FF5207; font-size: 0.9rem; font-weight: bold; font-style: italic;">
                                                                    Envío gratis
                                                                </span>
                                                            </div>
                                                        </t>
                                                    </div>

                                                    <!-- Botón eliminar -->
                                                    <a t-att-href="'/shop/history/remove/' + str(product.id)" 
                                                       t-att-data-product-id="product.id"
                                                       class="text-blue mt-2 delete-history-item" 
                                                       style="font-size: 0.9rem; color: #007bff; display: inline-block; float: left; text-decoration: none;"
                                                       onclick="event.preventDefault(); 
                                                               if(confirm('¿Estás seguro de eliminar este producto del historial?')) {
                                                                   fetch('/shop/history/remove/' + this.getAttribute('data-product-id'))
                                                                   .then(response => {
                                                                       if (response.ok) {
                                                                           this.closest('.col').style.transition = 'opacity 0.3s';
                                                                           this.closest('.col').style.opacity = '0';
                                                                           setTimeout(() => {
                                                                               this.closest('.col').remove();
                                                                           }, 300);
                                                                       }
                                                                   });
                                                               }">
                                                        <i class="fa fa-trash me-1"></i>Eliminar
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </t>
                        
                        <!-- Mensaje si no hay productos -->
                        <t t-else="">
                            <div class="text-center mt-5">
                                <h4 style="font-family: 'Questrial', sans-serif; color: #666;">No hay productos en tu historial.</h4>
                                <p class="text-muted">Empieza a explorar nuestros productos para ver tu historial aquí.</p>
                                <a href="/shop" class="btn btn-primary mt-3">Ir a la tienda</a>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
            
            <!-- Usuario no autenticado -->
            <t t-else="">
                <div class="container mt-5 text-center">
                    <h3>Inicia sesión para ver tu historial</h3>
                    <p class="text-muted">Necesitas iniciar sesión para ver los productos que has visitado.</p>
                    <a href="/web/login" class="btn btn-primary">Iniciar sesión</a>
                </div>
            </t>
        </t>
    </template>
</odoo>