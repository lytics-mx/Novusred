<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="delivered_template" name="Delivered and Pending Products">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h2 class="mb-4">Mis Compras</h2>
                <div class="row">
                    <t t-if="not delivered_products and not pending_products">
                        <div class="col-12 text-center">
                            <div class="card p-4 shadow-sm" style="background-color:rgb(255,255,255); border:none;">
                                <h4 class="mb-3">No tienes compras aún</h4>
                                <p class="mb-4">Por favor navega por nuestro catálogo y encuentra productos de Odoo que te interesen.</p>
                                <a href="/subcategory" class="btn btn-primary">Ir al catálogo</a>
                            </div>
                        </div>
                    </t>
                    <t t-foreach="delivered_products" t-as="product">
                        <t t-if="product['picking_state'] == 'done'">
                            <div class="col-12 mb-3">
                                <div class="card p-3 shadow-sm" style="background-color:rgb(255, 255, 255); border: none;">
                                    <!-- Fecha de compra -->
                                    <div class="d-flex flex-column align-items-start">
                                        <p class="text-muted mb-0" style="font-size: 1em; font-weight: bold;">
                                            <t t-esc="product['purchase_date']"/>
                                        </p>
                                    </div>
                                    <!-- Imagen del producto -->
                                    <div class="d-flex flex-row align-items-center mt-1">
                                        <div class="me-3" style="flex: 0 0 100px;">
                                            <img t-att-src="product['image_url']" alt="Imagen producto" class="img-fluid rounded" style="width: 100px; height: auto;" />
                                        </div>
                                        <!-- Detalles del producto -->
                                        <div class="flex-grow-1 me-3">
                                            <p class="text-success fw-bold mb-1">Entregado</p>
                                            <p class="mb-1">Entregado el: <t t-esc="product['delivery_date']"/></p>
                                            <p class="text-muted mb-1">
                                                <t t-esc="product['product_name']"/>
                                            </p>
                                            <p class="text-muted"><t t-esc="product['quantity']"/> Unidad</p>                                
                                        </div>
                                        <!-- Enviar mensaje -->
                                        <div class="me-3">
                                            <a href="#" class="btn btn-link text-primary">Enviar mensaje</a>
                                        </div>
                                        <!-- Botones -->
                                        <div class="d-flex flex-column" style="min-width: 150px;">
                                            <a t-att-href="'/product_details/%d' % product['product_id']" class="btn btn-primary mb-2">Ingresar</a>                                        
                                            <a href="#" class="btn btn-outline-primary">Comprar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-foreach="pending_products" t-as="product">
                        <div class="col-12 mb-3">
                            <div class="card p-3 shadow-sm" style="background-color:rgb(255, 255, 255); border: none;">
                                <!-- Fecha de compra -->
                                <div class="d-flex flex-column align-items-start">
                                    <p class="text-muted mb-0" style="font-size: 1em; font-weight: bold;">
                                        <t t-esc="product['purchase_date']"/>
                                    </p>
                                </div>
                                <!-- Imagen del producto -->
                                <div class="d-flex flex-row align-items-center mt-1">
                                    <div class="me-3" style="flex: 0 0 100px;">
                                        <img t-att-src="product['image_url']" alt="Imagen producto" class="img-fluid rounded" style="width: 100px; height: auto;" />
                                    </div>
                                    <!-- Detalles del producto -->
                                    <div class="flex-grow-1 me-3">
                                        <p class="text-warning fw-bold mb-1">Pendiente</p>
                                        <p class="mb-1">Fecha estimada de entrega: <t t-esc="product['scheduled_date']"/></p>
                                        <p class="text-muted mb-1">
                                            <t t-esc="product['product_name']"/>
                                        </p>
                                        <p class="text-muted"><t t-esc="product['quantity']"/> Unidad</p>                                
                                    </div>
                                    <!-- Enviar mensaje -->
                                    <div class="me-3">
                                        <a href="#" class="btn btn-link text-primary">Enviar mensaje</a>
                                    </div>
                                    <!-- Botones -->
                                    <div class="d-flex flex-column" style="min-width: 150px;">
                                        <a href="#" class="btn btn-primary mb-2">Ingresar</a>
                                        <a href="#" class="btn btn-outline-primary">Comprar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>