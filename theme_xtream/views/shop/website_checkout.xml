<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="checkout_template" name="Checkout Page">
        <t t-call="website.layout">
            <div class="container">
                <h1>Revisar Orden</h1>
                <div class="row">
                    <div class="col-md-6">
                        <h3>Direcci√≥n de Entrega</h3>
                        <p>
                            <t t-esc="partner.name"/><br/>
                            <t t-esc="partner.street"/><br/>
                            <t t-esc="partner.city"/>, <t t-esc="partner.state_id.name"/><br/>
                            <t t-esc="partner.zip"/>, <t t-esc="partner.country_id.name"/>
                        </p>
                        <a href="/shop/address/edit" class="btn btn-primary">Editar</a>
                    </div>
                    <div class="col-md-6">
                        <h3>Resumen de la Orden</h3>
                        <ul>
                            <li>Subtotal: <t t-esc="subtotal"/> </li>
                            <li>Impuestos: <t t-esc="taxes"/> </li>
                            <li>Total: <t t-esc="total"/> </li>
                        </ul>
                        <form method="POST" action="/shop/checkout/confirm">
                            <button type="submit" class="btn btn-success">Confirmar</button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>


