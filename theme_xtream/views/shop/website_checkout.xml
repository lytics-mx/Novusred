<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="delivered_template" name="Delivered and Pending Products">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h2 class="mb-4">Mis Compras</h2>
                <div class="row">
                    <!-- Productos ENTREGADOS -->
                    <t t-foreach="delivered_products" t-as="product">
                        <div class="col-12 mb-3">
                            <div class="card p-3 shadow-sm d-flex flex-row align-items-center justify-content-between">
                                <!-- Imagen del producto -->
                                <div class="me-3" style="flex: 0 0 100px;">
                                    <img t-att-src="product['image_url']" alt="Imagen producto" class="img-fluid rounded" style="width: 100px; height: auto;" />
                                </div>
                                <!-- Descripción -->
                                <div class="flex-grow-1">
                                    <p class="text-warning fw-bold mb-1" style="color: #ff6600 !important;">En camino</p>
                                    <p class="mb-1">Llega en dos o tres días</p>
                                    <p class="text-danger fw-bold mb-1" style="color: #ff3300 !important;"><em>Envío gratis</em></p>
                                    <p class="text-muted mb-1">
                                        <t t-esc="product['product_name']"/>
                                    </p>
                                    <p class="text-muted">1 Unidad</p>
                                </div>
                                <!-- Botones -->
                                <div class="text-end" style="min-width: 180px;">
                                    <a href="#" class="btn btn-link text-primary d-block mb-2" style="color: #3399ff !important;">Enviar mensaje</a>
                                    <a href="#" class="btn btn-primary w-100" style="background-color: #3399ff; border-color: #3399ff;">Ingresar</a>
                                </div>
                            </div>
                        </div>
                    </t>
                    <!-- Productos PENDIENTES -->
                    <t t-foreach="pending_products" t-as="product">
                        <div class="col-12 mb-3">
                            <div class="card p-3 shadow-sm d-flex flex-row align-items-center justify-content-between">
                                <!-- Imagen -->
                                <div class="me-3" style="flex: 0 0 100px;">
                                    <img t-att-src="product['image_url']" alt="Imagen producto" class="img-fluid rounded" style="width: 100px; height: auto;" />
                                </div>
                                <!-- Descripción -->
                                <div class="flex-grow-1">
                                    <p class="text-warning fw-bold mb-1" style="color: #ff6600 !important;">En camino</p>
                                    <p class="mb-1">Llega en dos o tres días</p>
                                    <p class="text-danger fw-bold mb-1" style="color: #ff3300 !important;"><em>Envío gratis</em></p>
                                    <p class="text-muted mb-1">
                                        <t t-esc="product['product_name']"/>
                                    </p>
                                    <p class="text-muted">1 Unidad</p>
                                </div>
                                <!-- Botones -->
                                <div class="text-end" style="min-width: 180px;">
                                    <a href="#" class="btn btn-link text-primary d-block mb-2" style="color: #3399ff !important;">Enviar mensaje</a>
                                    <a href="#" class="btn btn-primary w-100" style="background-color: #3399ff; border-color: #3399ff;">Ingresar</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
