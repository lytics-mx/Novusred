<odoo>
    <menuitem id="menu_ecommerce_root" name="Comercio Electrónico" sequence="10" groups="website.group_website_publisher"/>

    <!-- Submenú para Marcas -->
    <menuitem id="menu_brand_type"
              name="Marcas"
              parent="menu_ecommerce_root"
              action="action_brand_type"
              sequence="20"
              groups="website.group_website_publisher"/>

    <!-- Acción para gestionar Marcas -->
    <record id="action_brand_type" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">brand.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Aquí puedes gestionar las marcas asociadas con los productos.
            </p>
        </field>
    </record>
</odoo>