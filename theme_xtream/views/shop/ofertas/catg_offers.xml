<odoo>
    <template id="website_recursive_categories" name="Recursive Categories">
        <t t-foreach="children.filtered(lambda c: c.product_tmpl_ids.filtered(lambda p: p.website_published))" t-as="child">
            <div class="category-item">
                <div class="d-flex align-items-center">
                    <!-- Enlace a la categoría -->
                    <a t-att-href="'/shop/category/' + str(child.id) + '?offers=true'" class="category-link">
                        <t t-esc="child.name"/>
                    </a>
                </div>
            </div>
            <!-- Renderizar subcategorías al mismo nivel -->
            <t t-if="child.child_id">
                <t t-call="theme_xtream.website_recursive_categories">
                    <t t-set="children" t-value="child.child_id"/>
                </t>
            </t>
        </t>
    </template>
</odoo>