<odoo>
    <template id="website_recursive_categories" name="Recursive Categories">
        <t t-foreach="children" t-as="child">
            <t t-if="child.parent_id">  <!-- Only show categories with a parent -->
                <div class="category-item">
                    <div class="d-flex align-items-center">
                        <!-- Enlace a la categorÃ­a -->
                        <a t-att-href="'/offers?category_id=' + str(child.id)" class="category-link">
                            <t t-esc="child.name"/> <small>(<t t-esc="child.product_count"/>)</small>
                        </a>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>