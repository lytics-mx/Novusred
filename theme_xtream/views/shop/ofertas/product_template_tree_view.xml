<odoo>
    <record id="view_product_tag_form_inherit" model="ir.ui.view">
        <field name="name">product.tag.form.inherit</field>
        <field name="model">product.tag</field>
        <field name="inherit_id" ref="product.product_tag_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='visible_on_ecommerce']" position="after">
                <!-- Campo de descuento -->
                <field name="discount_value" />
            </xpath>
        </field>
    </record>
</odoo>