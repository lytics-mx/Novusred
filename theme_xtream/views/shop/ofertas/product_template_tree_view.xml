<odoo>
    <record id="view_product_tag_form" model="ir.ui.view">
        <field name="name">product.tag.form</field>
        <field name="model">product.tag</field>
        <field name="inherit_id" ref="product.view_product_tag_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Configuración de expiración">
                    <field name="expiration_date"/>
                    <field name="duration_hours"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="apply_weekends"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>