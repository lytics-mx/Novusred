<odoo>
    <record id="view_product_tag_form_inherit" model="ir.ui.view">
        <field name="name">product.tag.form.inherit</field>
        <field name="model">product.tag</field>
        <field name="inherit_id" ref="product.product_tag_form_view" />
        <field name="arch" type="xml">
            <!-- Agregar los campos de descuento después de visible_on_ecommerce -->
            <xpath expr="//field[@name='visible_on_ecommerce']" position="after">
                <field name="discount_percentage" />
                <field name="is_percentage" />
                <button name="toggle_retain_products" string="Retener Productos" type="object" class="oe_highlight"
                        attrs="{'invisible': [('retain_products', '=', True)]}"/>
                <button name="toggle_retain_products" string="No Retener Productos" type="object"
                        attrs="{'invisible': [('retain_products', '=', False)]}"/>
                <button name="reactivate_discount" string="Reactivar Descuento" type="object" class="oe_highlight"
                        attrs="{'invisible': ['|', ('retain_products', '=', False), ('stored_discount', '=', 0)]}"/>
            </xpath>
            <!-- Crear una nueva pestaña para la configuración de expiración -->
            <xpath expr="//notebook" position="inside">
                <page string="Configuración de expiración" name="expiration_config">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="offer_time_type"/>
                            <field name="flash_hours"
                                   modifiers='{"invisible": [["offer_time_type", "!=", "flash"]], "readonly": [["offer_time_type", "!=", "flash"]]}'/>                        </group>
                        <group>
                            <field name="recurrence_type" />
                            <field name="stored_discount" />
                        </group>
                    </group>
                </page>
                <!-- Crear una nueva pestaña para la configuración de Fin de semana -->



            </xpath>
        </field>
    </record>
</odoo>