<odoo>
    <record id="view_product_tag_form_inherit" model="ir.ui.view">
        <field name="name">product.tag.form.inherit</field>
        <field name="model">product.tag</field>
        <field name="inherit_id" ref="product.product_tag_form_view" />
        <field name="arch" type="xml">
            <!-- Agregar botones en el header -->
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="sync_discount" string="Sincronizar descuentos" type="object" class="btn-secondary"/>
                </header>
            </xpath>
            
            <!-- Agregar los campos de descuento después de visible_on_ecommerce -->
            <xpath expr="//field[@name='visible_on_ecommerce']" position="after">
                <field name="discount_percentage" />
                <field name="is_percentage" />
                <field name="is_active" />
            </xpath>
            
            <!-- Crear una nueva pestaña para la configuración de expiración -->
            <xpath expr="//notebook" position="inside">
                <page string="Configuración de expiración" name="expiration_config">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="offer_time_type"/>
                            <field name="flash_hours"
                                   invisible="offer_time_type != 'flash'"
                                   readonly="offer_time_type != 'flash'"/>
                        </group>
                        <group>
                            <field name="recurrence_type" />
                            <field name="recurrence_day" invisible="recurrence_type != 'weekly'"/>
                            <field name="recurrence_day_month" invisible="recurrence_type not in ('monthly','biweekly')"/>
                            <field name="recurrence_duration" invisible="recurrence_type == 'none'"/>
                            <field name="stored_discount" />
                            <field name="preserve_products"/>
                        </group>                      
                    </group>
                    <page string="Vista previa de calendario" name="calendar_preview_page">
                        <group>
                            <field name="calendar_preview" readonly="1" nolabel="1"/>
                        </group>
                    </page>                    
                    <!-- Mensajes de recurrencia eliminados porque dependen de enable_recurrence, que no existe en el modelo -->
                </page>
            </xpath>
        </field>
    </record>
</odoo>