<odoo>
    <record id="view_product_tag_form_inherit" model="ir.ui.view">
        <field name="name">product.tag.form.inherit</field>
        <field name="model">product.tag</field>
        <field name="inherit_id" ref="product.product_tag_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='visible_on_ecommerce']" position="after">
                <field name="discount_percentage" />
                <field name="is_percentage" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Configuración de expiración" name="expiration_config">
                    <group>
                        <field name="weekend_only" />
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>