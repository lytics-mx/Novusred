<odoo>
  <template id="website_cart_buy_now" inherit_id="website_sale.cart">
    <xpath expr="." position="replace">
      <t t-call="website.layout">
        <div id="wrap" class="oe_website_sale">
          <div class="container">
            <div class="row">
              <!-- Lado izquierdo: productos -->
              <div class="col-lg-8">
                <h2 class="mb-4" style="color:#00a650;">Vista previa de la orden</h2>
                <t t-set="order" t-value="website_sale_order"/>
                <t t-if="order and order.order_line">
                  <t t-foreach="order.order_line" t-as="line">
                    <div class="row align-items-center py-3 border-bottom">
                      <div class="col-2">
                        <img t-att-src="'/web/image/product.product/%d/image_128' % line.product_id.id"
                             class="img-fluid rounded" style="max-width:64px;"/>
                      </div>
                      <div class="col-6">
                        <a t-att-href="'/shop/product/%d' % line.product_id.product_tmpl_id.id"
                           class="fw-bold text-primary">
                          <t t-esc="line.product_id.display_name"/>
                        </a>
                        <div>
                          <a t-att-href="'/shop/cart/update?line_id=%d&amp;remove=1' % line.id"
                             class="text-muted small">Eliminar</a>
                          <span style="margin:0 8px;">|</span>
                          <a href="#" class="text-muted small">Guardar para despu√©s</a>
                        </div>
                      </div>
                      <div class="col-2 text-center">
                        <form t-att-action="'/shop/cart/update'" method="post" class="d-inline-flex">
                          <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                          <input type="hidden" name="line_id" t-att-value="line.id"/>
                          <button name="set_qty" t-att-value="line.product_uom_qty - 1"
                                  class="btn btn-link p-0" t-att-disabled="line.product_uom_qty &lt;= 1">-</button>
                          <input type="number" name="set_qty" t-att-value="line.product_uom_qty" min="1"
                                 class="form-control text-center mx-1" style="width:40px;"/>
                          <button name="set_qty" t-att-value="line.product_uom_qty + 1"
                                  class="btn btn-link p-0">+</button>
                        </form>
                      </div>
                      <div class="col-2 text-end">
                        <span class="fw-bold">
                          $ 
                          <t t-if="line.product_id.discounted_price">
                            <t t-esc="line.product_id.discounted_price * line.product_uom_qty"/>
                          </t>
                          <t t-else="">
                            <t t-esc="line.product_id.list_price * line.product_uom_qty"/>
                          </t>
                        </span>
                      </div>
                    </div>
                  </t>
                </t>
              </div>
              <!-- Lado derecho: resumen -->
              <div class="col-lg-4">
                <div class="card p-4">
                  <h4 class="mb-3">Resumen de la orden</h4>
                    <table class="table">
                    <tr>
                        <td>Subtotal:</td>
                        <td class="text-end">
                        <t t-set="subtotal" t-value="sum((line.product_id.discounted_price if line.product_id.discounted_price else line.product_id.list_price) * line.product_uom_qty for line in order.order_line)"/>
                        <t t-esc="subtotal"/>
                        </td>
                    </tr>
                    <tr>
                        <td>IVA (16% incluido):</td>
                        <td class="text-end">
                        <t t-set="iva" t-value="subtotal * 16 / 116"/>
                        <t t-esc="iva"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total:</strong></td>
                        <td class="text-end">
                        <t t-esc="subtotal"/>
                        </td>
                    </tr>
                    </table>
                  <a href="/shop/checkout" class="btn btn-primary btn-block">Finalizar compra</a>
                  <a href="/shop" class="btn btn-link btn-block mt-2">Continuar comprando</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </t>
    </xpath>
  </template>
</odoo>