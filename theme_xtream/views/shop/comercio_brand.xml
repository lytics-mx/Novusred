<odoo>
    <record id="view_product_template_inherit_ecommerce" model="ir.ui.view">
        <field name="name">product.template.inherit.ecommerce.brand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale.product_template"/> <!-- Cambia este ID si es necesario -->
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_details']" position="inside">
                <t t-if="product.brand_type_id">
                    <div class="product-brand">
                        <strong>Marca:</strong>
                        <span t-esc="product.brand_type_id.name"/>
                    </div>
                </t>
                <t t-if="product.icon_image">
                    <div class="product-icon">
                        <strong>Ícono:</strong>
                        <img t-att-src="image_data_uri(product.icon_image)" class="img-fluid" alt="Ícono del producto"/>
                    </div>
                </t>
                <t t-if="product.cover_image">
                    <div class="product-cover">
                        <strong>Portada:</strong>
                        <img t-att-src="image_data_uri(product.cover_image)" class="img-fluid" alt="Portada del producto"/>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
</odoo>