<odoo>
    <template id="custom_product_template" inherit_id="website_sale.product">
        <xpath expr="//div[@id='wrap']" position="inside">
            <div id="wrap" class="oe_structure">
                <div class="container">
                    <div class="row">
                        <!-- Product Images -->
                        <div class="col-md-6">
                            <div class="product-images">
                                <img t-att-src="product.image_1920" class="img-fluid main-image" alt="Product Image"/>
                                <div class="thumbnail-images mt-3">
                                    <t t-foreach="product.product_template_image_ids" t-as="image">
                                        <img t-att-src="image.image_1920" class="img-thumbnail" alt="Thumbnail"/>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <!-- Product Details -->
                        <div class="col-md-6">
                            <h1 t-field="product.name" class="product-title"></h1>
                            <p class="product-serial-number">
                                <strong>Número de serie:</strong> <span t-field="product.default_code"/>
                            </p>
                            <p class="product-price">
                                <span t-if="product.is_discounted">
                                    <span class="text-muted text-decoration-line-through" t-field="product.list_price"/>
                                    <span class="text-danger" t-field="product.discount_price"/>
                                    <span class="text-success">
                                        (<span t-field="product.discount_percentage"/>% OFF)
                                    </span>
                                </span>
                                <span t-else="" t-field="product.list_price"/>
                            </p>
                            <p class="product-savings">
                                <strong>Te ahorras:</strong> <span t-field="product.discount_fixed"/>
                            </p>
                            <p class="product-shipping">
                                <strong>Envío:</strong> Gratis
                            </p>
                            <p class="product-tags">
                                <strong>Etiquetas:</strong>
                                <t t-foreach="product.tag_ids" t-as="tag">
                                    <span class="badge bg-primary" t-field="tag.name"/>
                                </t>
                            </p>
                            <p class="product-stock">
                                <strong>En stock:</strong> <span t-field="product.qty_available"/> artículos
                            </p>
                            <p class="product-brand">
                                <strong>Marca:</strong> <span t-field="product.brand_id.name"/>
                            </p>
                            <div class="product-quantity mt-3">
                                <label for="quantity">Cantidad:</label>
                                <input type="number" id="quantity" name="quantity" min="1" max="product.qty_available" value="1" class="form-control w-25"/>
                            </div>
                            <div class="product-actions mt-4">
                                <button type="button" class="btn btn-primary btn-lg">Agregar al carrito</button>
                                <button type="button" class="btn btn-success btn-lg">Comprar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>