<odoo>
    <template id="offers_template" name="Productos en Oferta">
        <t t-call="website.layout">
            <div class="container mt-4">
                <!-- Sección de encabezado con texto e íconos -->
                <div class="d-flex align-items-center justify-content-between p-4 mb-4" style="background-color: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); margin-top: -32px; margin-bottom: 24px; width: 100vw; position: relative; left: 50%; transform: translateX(-50%);">
                    <!-- Texto Ofertas -->
                    <div class="d-flex align-items-center" style="flex: 1; justify-content: flex-end;">
                        <div class="text-end" style="max-width: 300px;">
                            <div class="text-center" style="margin-right: auto; margin-left: auto;">
                                <h2 class="mb-1" style="font-family: 'Questrial', sans-serif; font-size: 28px; font-weight: bold; letter-spacing: 0.5px;">Ofertas</h2>
                                <p class="mb-0" style="font-size: 14px; color: #6c757d;">¡Aquí verás las mejores ofertas!</p>
                            </div>
                        </div>
                    </div>
                    <!-- Iconos de tags -->
                    <div class="d-flex align-items-end justify-content-end flex-wrap" style="flex: 2;">
                        <div class="d-flex align-items-end justify-content-end flex-wrap w-100">
                            <t t-if="product_tags and product_tags|length > 0">
                                <t t-foreach="product_tags[:6]" t-as="tag" t-index="i">
                                    <div class="text-center mx-4" style="min-width: 90px; position: relative;">
                                        <img t-att-src="'/web/image/product.tag/' + str(tag.id) + '/image'"
                                             t-att-alt="tag.name"
                                             class="img-fluid mb-2"
                                             style="height: 60px; width: 60px; object-fit: contain; border: none; background: none; box-shadow: none;" />
                                        <div style="font-size: 14px; color: #222; font-family: 'Questrial', sans-serif; margin-top: 6px;">
                                            <t t-esc="tag.name" />
                                        </div>
                                        <t t-if="i == 0">
                                            <div style="height: 4px; background: #3b7cff; border-radius: 2px; width: 70%; margin: 0 auto; margin-top: 4px;"></div>
                                        </t>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <!-- Filtros de la izquierda -->
                    <div class="col-lg-3 col-md-4">
                        <div class="filters">
                            <!-- Todos -->
                            <div class="mb-3">
                                <h5>Todos</h5>
                                <ul class="list-unstyled">
                                    <li>
                                        <a t-att-href="'/offers%s' % ('?free_shipping=true' if free_shipping else '')">
                                            <span style="color: #848484;"><t t-esc="total_products" /></span> <span style="color: #848484;">productos</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        
                            <!-- Envío gratis -->
                            <div class="mb-3 p-3 border rounded-3 bg-white">
                                <h5 class="text-orange fw-bold" style="color: #FF5207; font-size: 16px; font-style: italic; background-color: white;">Envío gratis</h5>

                                <div class="form-check form-switch bg-white">
                                    <input class="form-check-input" type="checkbox" id="freeShippingToggle"
                                           t-att-checked="free_shipping"
                                           t-att-data-url="'/offers?free_shipping=' + ('true' if not free_shipping else 'false')" />
                                    <label class="form-check-label" for="freeShippingToggle" style="background-color: white;">
                                        Solo productos con envío gratis
                                    </label>
                                </div>
                            </div>
                            <script>
                                document.addEventListener('DOMContentLoaded', function() {
                                    var toggle = document.getElementById('freeShippingToggle');
                                    if (toggle) {
                                        toggle.addEventListener('change', function() {
                                            window.location.href = toggle.getAttribute('data-url');
                                        });
                                    }
                                });
                            </script>
                        
                            <!-- Tipos de oferta -->
                            <div class="mb-3">
                                <h5>Tipos de oferta</h5>
                                <ul class="list-unstyled">
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=day%s' % ('&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                            Oferta del día
                                        </a>
                                    </li>
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=flash%s' % ('&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                            Oferta relámpago
                                        </a>
                                    </li>
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=current%s' % ('&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                            <span>Ofertas activas ahora</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                                                    
                            <!-- Categorías -->
                            <div class="mb-3">
                                <h5>Categorías</h5>
                                <ul class="list-unstyled">
                                    <t t-foreach="categories_with_count" t-as="cat">
                                        <li>
                                            <a t-att-href="'/shop/category/all?offers=true&amp;category_id=%s%s' % (cat['id'], '&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                                <span t-esc="cat['name']"/> (<span t-esc="cat['product_count']"/>)
                                            </a>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                            
                            <!-- Filtro por precio -->
                            <div class="mb-2"></div>
                                <h5>Precio</h5>
                                
                                    <ul class="list-unstyled">
                                        <li>
                                            <a t-att-href="'/shop/category/all?min_price=0&amp;max_price=500%s' % ('&amp;free_shipping=true' if free_shipping else '')" class="d-flex justify-content-between" style="color: #848484;">
                                                <span>Hasta $500</span>
                                                <span class="text-muted">(<t t-esc="price_ranges['0_500']"/>)</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a t-att-href="'/shop/category/all?min_price=500&amp;max_price=1000%s' % ('&amp;free_shipping=true' if free_shipping else '')" class="d-flex justify-content-between" style="color: #848484;">
                                                <span>De $500 a $1000</span>
                                                <span class="text-muted">(<t t-esc="price_ranges['500_1000']"/>)</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a t-att-href="'/shop/category/all?min_price=1000%s' % ('&amp;free_shipping=true' if free_shipping else '')" class="d-flex justify-content-between" style="color: #848484;">
                                                <span>Más de $1000</span>
                                                <span class="text-muted">(<t t-esc="price_ranges['1000_plus']"/>)</span>
                                            </a>
                                        </li>
                                    </ul>
                                    <form method="get" action="/shop/category/all">
                                        <div class="d-flex align-items-center">
                                            <input type="number" class="form-control me-2 bg-white" id="minPrice" name="min_price" placeholder="Desde" style="background-color: #ffffff;" />
                                            <span class="me-2">—</span>
                                            <input type="number" class="form-control me-2 bg-white" id="maxPrice" name="max_price" placeholder="Hasta" style="background-color: #ffffff;" />
                                            <!-- Hidden input to maintain free_shipping parameter -->
                                            <t t-if="free_shipping">
                                                <input type="hidden" name="free_shipping" value="true"/>
                                            </t>
                                            <button type="submit" class="btn" style="background-color: #5a5a5a; color: white;">Buscar</button>
                                        </div>
                                    </form>
                            </div>
                    </div>
                    <!-- Productos en oferta aqui debe de corregirse el diseño-->
                    <div class="col-lg-9 col-md-8">
                        <div class="row gy-4" style="row-gap: 50px !important;">
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="col-12 col-md-6 col-lg-4 d-flex" style="margin-bottom: 0;">
                                    <div class="card h-100 shadow-sm product-card w-100" style="margin-bottom: 0; min-height: 40px;">
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                class="card-img-top" style="height: 260px; object-fit: contain;" />
                                        </a>
                                        <div class="card-body">
                                            <div class="mt-auto">
                                                <t t-if="product.discounted_price &lt; product.list_price">
                                                    <t t-if="product.product_tag_ids">
                                                        <div class="d-flex justify-content-start mb-2">
                                                            <span class="badge bg-primary" style="display: inline-block; border-radius: 0;">
                                                                <t t-esc="product.product_tag_ids[0].name if product.product_tag_ids else ''"/>
                                                            </span>
                                                        </div>
                                                    </t>
                                                    <div class="d-flex align-items-center justify-content-between">
                                                        <span class="text-dark fw-bold" style="font-size: 25px;">
                                                            $<t t-esc="'{:,}'.format(int(product.discounted_price))" />
                                                        </span>
                                                        <span class="text-danger" style="font-size: 18px; font-weight: normal;">
                                                            <t t-if="product.discount_percentage">
                                                                <t t-esc="int(product.discount_percentage)" />% OFF
                                                            </t>
                                                            <t t-elif="product.fixed_discount">
                                                                -$<t t-esc="'{:,}'.format(int(product.fixed_discount))" /> MXN
                                                            </t>
                                                        </span>
                                                    </div>
                                                    <div class="mt-0">
                                                        <span class="text-muted" style="font-size: 18px;">
                                                            $<t t-esc="'{:,}'.format(int(product.list_price - product.discounted_price))" /> descuento
                                                        </span>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <span class="fw-bold d-block" style="font-size: 25px;">
                                                        $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                    </span>
                                                </t>
                                                <t t-if="not product.product_tag_ids">
                                                    <div style="height: 29px;"></div>
                                                </t>
                                                <t t-if="product.free_shipping">
                                                    <div class="mt-0">
                                                        <span class="text-orange" style="color: #FF5207; font-size: 0.9rem; font-weight: bold; font-style: italic;">
                                                            Envío gratis
                                                        </span>
                                                    </div>
                                                </t>
                                            </div>
                                            <div class="product-name-container" style="max-height: 0; overflow: hidden; transition: max-height 0.3s ease;">
                                                <h6 class="card-title mb-2 text-truncate product-name" style="font-size: 0.9rem; white-space: normal;">
                                                    <t t-esc="product.name.upper()" />
                                                </h6>                                                            
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>

                </div>

            <div style="height: 105px;"></div>                
            </div>
        </t>
    </template>
</odoo>