<odoo>
    <template id="offers_template" name="Productos en Oferta">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2 class="text-center" style="font-family: 'Questrial', sans-serif; font-size: 25px;">Productos en Oferta</h2>
                <div class="row">
                    <!-- Filtros de la izquierda -->
                    <div class="col-lg-3 col-md-4">
                        <div class="filters">
                            <!-- <h5>Marcas</h5>
                            <ul>
                                <t t-foreach="brands" t-as="brand">
                                    <li>
                                        <a t-att-href="'/shop/offers?brand_id=' + str(brand.id)">
                                            <t t-esc="brand.name" />
                                        </a>
                                    </li>
                                </t>
                            </ul> -->
                            <h5>Categor√≠as</h5>
                            <ul>
                                <t t-foreach="categories" t-as="category">
                                    <li>
                                        <a t-att-href="'/shop/category/all-' + str(category.id) + ('?offers=true' if offers else '')">
                                            <t t-esc="category.name" />
                                        </a>
                                    </li>
                                </t>
                            </ul>                     
                         </div>
                    </div>

                    <!-- Productos en oferta -->
                    <div class="col-lg-9 col-md-8">
                        <div class="row">
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="col-6 col-md-4 col-lg-3 mb-4">
                                    <div class="card">
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" class="card-img-top" />
                                        </a>
                                        <div class="card-body text-center">
                                            <h6 class="card-title"><t t-esc="product.name" /></h6>
                                            <div>
                                                <span class="text-decoration-line-through text-muted">$<t t-esc="'%.2f' % product.list_price" /></span>
                                                <span class="text-success">$<t t-esc="'%.2f' % product.discounted_price" /></span>
                                            </div>
                                            <span class="badge bg-primary">Oferta</span>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>