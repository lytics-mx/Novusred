<odoo>
    <template id="offers_template" name="Productos en Oferta">
        <t t-call="website.layout">
            <div class="container mt-4">
                <!-- Sección de encabezado con texto e íconos -->
                <div class="d-flex align-items-center justify-content-between p-4 mb-4" style="background-color: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); margin-top: -32px; margin-bottom: 24px; width: 100vw; position: relative; left: 50%; transform: translateX(-50%);">
                    <!-- Texto Ofertas -->
                    <div class="d-flex align-items-center" style="flex: 1; justify-content: flex-end;">
                        <div class="text-end" style="max-width: 300px;">
                            <div class="text-center" style="margin-right: auto; margin-left: auto;">
                                <h2 class="mb-1" style="font-family: 'Questrial', sans-serif; font-size: 28px; font-weight: bold; letter-spacing: 0.5px;">Ofertas</h2>
                                <p class="mb-0" style="font-size: 14px; color: #6c757d;">¡Aquí verás las mejores ofertas!</p>
                            </div>
                        </div>
                    </div>
                    <!-- Iconos de tags -->
                    <div class="d-flex align-items-start justify-content-start" style="flex: 2;">
                        <div class="tags-container w-100">
                            
                            <t t-if="product_tags">
                                <div class="tags-wrapper d-flex justify-content-center">
                                    <t t-foreach="product_tags" t-as="tag">
                                        <div class="text-center position-relative tag-item clickable-tag" 
                                             t-att-data-tag-id="tag.id"
                                             t-att-data-tag-name="tag.name">
                                            
                                            <!-- Imagen del tag -->
                                            <div class="tag-icon-container">
                                                <img t-att-src="'/web/image/product.tag/' + str(tag.id) + '/image'"
                                                     t-att-alt="tag.name"
                                                     class="tag-icon" />
                                            </div>
                                            
                                            <!-- Nombre del tag -->
                                            <div class="tag-name">
                                                <t t-esc="tag.name" />
                                            </div>
                                            
                                            <!-- Línea azul (solo visible al hover) -->
                                            <div class="tag-underline"></div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                            
                            <t t-else="">
                                <div style="color: #666; font-size: 14px; padding: 10px;">
                                    No hay categorías disponibles
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <!-- CSS para manejar el hover y responsive -->
                    <style>
                    /* Estilos base para tags */
                    .tags-container {
                        overflow: hidden;
                    }
                    
                    .tags-wrapper {
                        display: flex;
                        align-items: center;
                        justify-content: flex-end;
                        gap: 20px;
                        transition: transform 0.3s ease;
                    }
                    
                    .tag-item {
                        min-width: 80px;
                        cursor: pointer;
                        transition: all 0.2s ease;
                        flex-shrink: 0;
                        position: relative;
                        padding-bottom: 5px;
                    }
                    
                    /* Estilo específico para tags clickeables */
                    .clickable-tag:hover {
                        transform: translateY(-2px);
                    }
                    
                    .clickable-tag:active {
                        transform: translateY(0);
                    }
                    
                    .tag-icon-container {
                        margin-bottom: 8px;
                    }
                    
                    .tag-icon {
                        height: 60px;
                        width: 60px;
                        object-fit: contain;
                        border: none;
                        background: none;
                        box-shadow: none;
                        transition: transform 0.2s ease;
                    }
                    
                    .tag-name {
                        font-size: 14px;
                        color: #222;
                        font-family: 'Questrial', sans-serif;
                        line-height: 1.2;
                        margin-bottom: 5px;
                    }
                    
                    .tag-underline {
                        height: 2px;
                        background-color: #007bff;
                        width: 0;
                        position: absolute;
                        bottom: 0;
                        left: 50%;
                        transform: translateX(-50%);
                        transition: width 0.3s ease;
                        opacity: 0;
                    }
                    
                    .tag-item:hover .tag-underline {
                        width: 100%;
                        opacity: 1;
                    }
                    
                    .tag-item:hover .tag-icon {
                        transform: scale(1.05);
                    }
                    
                    /* Responsive - Tablets */
                    @media (max-width: 991.98px) {
                        .tags-wrapper {
                            gap: 15px;
                            justify-content: flex-start;
                        }
                        
                        .tag-item {
                            min-width: 70px;
                        }
                        
                        .tag-icon {
                            height: 50px;
                            width: 50px;
                        }
                        
                        .tag-name {
                            font-size: 12px;
                        }
                    }
                    
                    /* Responsive - Móviles */
                    @media (max-width: 767.98px) {
                        .tags-container {
                            overflow-x: auto;
                            -webkit-overflow-scrolling: touch;
                            scrollbar-width: none;
                            -ms-overflow-style: none;
                        }
                        
                        .tags-container::-webkit-scrollbar {
                            display: none;
                        }
                        
                        .tags-wrapper {
                            gap: 12px;
                            padding-bottom: 5px;
                        }
                        
                        .tag-item {
                            min-width: 60px;
                        }
                        
                        .tag-icon {
                            height: 40px;
                            width: 40px;
                        }
                        
                        .tag-name {
                            font-size: 11px;
                            white-space: nowrap;
                            overflow: hidden;
                            text-overflow: ellipsis;
                            max-width: 60px;
                        }
                    
                        .tag-underline {
                            height: 2px;
                        }
                    }
                    </style>
                    
                    <!-- JavaScript para manejo de clicks y hover en móvil -->
                    <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const tagItems = document.querySelectorAll('.tag-item');
                        
                        tagItems.forEach(function(item) {
                            // Manejo de clicks en tags
                            item.addEventListener('click', function() {
                                const tagId = this.getAttribute('data-tag-id');
                                
                                // Construir la URL con el filtro de tag
                                let params = new URLSearchParams();
                                params.append('tag_id', tagId);
                                
                                // Mantener el filtro de envío gratis si está activo
                                const currentUrl = new URL(window.location);
                                if (currentUrl.searchParams.get('free_shipping') === 'true') {
                                    params.append('free_shipping', 'true');
                                }
                                
                                // Redirigir a la nueva URL
                                window.location.href = '/offers?' + params.toString();
                            });
                            
                            // Manejo de eventos touch para móvil
                            item.addEventListener('touchstart', function() {
                                this.querySelector('.tag-underline').style.width = '100%';
                                this.querySelector('.tag-underline').style.opacity = '1';
                            });
                            
                            item.addEventListener('touchend', function() {
                                setTimeout(() => {
                                    this.querySelector('.tag-underline').style.width = '0';
                                    this.querySelector('.tag-underline').style.opacity = '0';
                                }, 300);
                            });
                        });
                    });
                    </script>
