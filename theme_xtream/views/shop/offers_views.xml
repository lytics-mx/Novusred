<odoo>
    <template id="offers_template" name="Productos en Oferta">
        <t t-call="website.layout">
            <div class="container-fluid mt-4 px-0">
                <!-- Sección de encabezado con texto e íconos -->
                <div class="d-flex flex-column flex-md-row align-items-center justify-content-between p-3 p-md-4 mb-4"
                     style="background-color: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); margin-top: -32px; margin-bottom: 24px; width: 100vw; position: relative; left: 50%; transform: translateX(-50%);">
                    <!-- Texto Ofertas -->
                    <div class="d-flex align-items-center w-100 w-md-auto justify-content-center justify-content-md-end mb-3 mb-md-0" style="flex: 1;">
                        <div class="text-center" style="max-width: 300px;">
                            <h2 class="mb-1" style="font-family: 'Questrial', sans-serif; font-size: 28px; font-weight: bold; letter-spacing: 0.5px;">Ofertas</h2>
                            <p class="mb-0" style="font-size: 14px; color: #6c757d;">¡Aquí verás las mejores ofertas!</p>
                        </div>
                    </div>
                    <!-- Iconos de tags -->
                    <div class="d-flex align-items-end justify-content-center justify-content-md-end flex-wrap w-100 w-md-auto" style="flex: 2;">
                        <t t-if="product_tags and product_tags|length > 0">
                            <t t-foreach="product_tags[:6]" t-as="tag" t-index="i">
                                <div class="text-center mx-2 mx-md-4 mb-2" style="min-width: 90px; position: relative;">
                                    <img t-att-src="'/web/image/product.tag/' + str(tag.id) + '/image'"
                                         t-att-alt="tag.name"
                                         class="img-fluid mb-2"
                                         style="height: 60px; width: 60px; object-fit: contain; border: none; background: none; box-shadow: none;" />
                                    <div style="font-size: 14px; color: #222; font-family: 'Questrial', sans-serif; margin-top: 6px;">
                                        <t t-esc="tag.name" />
                                    </div>
                                    <t t-if="i == 0">
                                        <div style="height: 4px; background: #3b7cff; border-radius: 2px; width: 70%; margin: 0 auto; margin-top: 4px;"></div>
                                    </t>
                                </div>
                            </t>
                        </t>
                    </div>
                </div>
                
                <div class="row gx-0">
                    <!-- Filtros de la izquierda -->
                    <div class="col-12 col-md-4 col-lg-3 mb-4 mb-md-0">
                        <div class="filters px-2 px-md-0">
                            <!-- ... (sin cambios en filtros) ... -->
                            <!-- (Pega aquí tu código de filtros igual que antes) -->
                        </div>
                    </div>
                    <!-- Productos en oferta -->
                    <div class="col-12 col-md-8 col-lg-9">
                        <div class="row gy-4">
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="col-12 col-sm-6 col-md-12 col-lg-4 d-flex mb-3 mb-lg-0">
                                    <div class="card h-100 shadow-sm product-card w-100" style="margin-bottom: 0; min-height: 400px;">
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                class="card-img-top" style="height: 260px; object-fit: contain;" />
                                        </a>
                                        <div class="card-body">
                                            <div class="mt-auto">
                                                <t t-if="product.discounted_price &lt; product.list_price">
                                                    <t t-if="product.product_tag_ids">
                                                        <div class="d-flex justify-content-start mb-2">
                                                            <span class="badge bg-primary" style="display: inline-block; border-radius: 0;">
                                                                <t t-esc="product.product_tag_ids[0].name if product.product_tag_ids else ''"/>
                                                            </span>
                                                        </div>
                                                    </t>
                                                    <div class="d-flex align-items-center justify-content-between">
                                                        <span class="text-dark fw-bold" style="font-size: 25px;">
                                                            $<t t-esc="'{:,}'.format(int(product.discounted_price))" />
                                                        </span>
                                                        <span class="text-danger" style="font-size: 18px; font-weight: normal;">
                                                            <t t-if="product.discount_percentage">
                                                                <t t-esc="int(product.discount_percentage)" />% OFF
                                                            </t>
                                                            <t t-elif="product.fixed_discount">
                                                                -$<t t-esc="'{:,}'.format(int(product.fixed_discount))" /> MXN
                                                            </t>
                                                        </span>
                                                    </div>
                                                    <div class="mt-0">
                                                        <span class="text-muted" style="font-size: 18px;">
                                                            $<t t-esc="'{:,}'.format(int(product.list_price - product.discounted_price))" /> descuento
                                                        </span>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <span class="fw-bold d-block" style="font-size: 25px;">
                                                        $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                    </span>
                                                </t>
                                                <t t-if="not product.product_tag_ids">
                                                    <div style="height: 29px;"></div>
                                                </t>
                                                <t t-if="product.free_shipping">
                                                    <div class="mt-0">
                                                        <span class="text-orange" style="color: #FF5207; font-size: 0.9rem; font-weight: bold; font-style: italic;">
                                                            Envío gratis
                                                        </span>
                                                    </div>
                                                </t>
                                            </div>
                                            <div class="product-name-container" style="max-height: 0; overflow: hidden; transition: max-height 0.3s ease;">
                                                <h6 class="card-title mb-2 text-truncate product-name" style="font-size: 0.9rem; white-space: normal;">
                                                    <t t-esc="product.name.upper()" />
                                                </h6>                                                            
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                <div style="height: 105px;"></div>                
            </div>
            <style>
                @media (max-width: 767.98px) {
                    .filters {
                        background: #fff;
                        border-radius: 8px;
                        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
                        margin-bottom: 24px;
                    }
                    .product-card {
                        min-height: 350px !important;
                    }
                }
                @media (max-width: 575.98px) {
                    .card-img-top {
                        height: 180px !important;
                    }
                    .product-card {
                        min-height: 300px !important;
                    }
                }
            </style>
        </t>
    </template>
</odoo>
