<odoo>
    <template id="offers_template" name="Productos en Oferta">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2 class="text-center" style="font-family: 'Questrial', sans-serif; font-size: 25px;">Productos en Oferta</h2>
                <div class="row">
                    <!-- Filtros de la izquierda -->
                    <div class="col-lg-3 col-md-4">
                        <div class="filters">
                            <!-- Todos -->
                            <div class="mb-3">
                                <h5>Todos</h5>
                                <ul class="list-unstyled">
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true'">
                                            Todos <small> (<t t-esc="total_products" />) </small>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        
                            <!-- Envío gratis -->
                            <div class="mb-3 p-3 border rounded-3">
                                <h5 class="text-orange fw-bold" style="color: #FF5207; font-size: 16px; font-style: italic;">Envío gratis</h5>

                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="freeShippingToggle" t-att-data-url="'/shop/category/all?offers=true&amp;free_shipping=' + ('true' if free_shipping else 'false')" />
                                    <label class="form-check-label" for="freeShippingToggle">Todo en tu carrito de compras</label>
                                </div>
                            </div>
                        
                            <!-- Tipos de oferta -->
                            <div class="mb-3">
                                <h5>Tipos de oferta</h5>
                                <ul class="list-unstyled">
                                    <li><a t-att-href="'/shop/category/all?offers=true&amp;type=day'">Oferta del día</a></li>
                                    <li><a t-att-href="'/shop/category/all?offers=true&amp;type=flash'">Oferta relámpago</a></li>
                                    <li><a t-att-href="'/shop/category/all?offers=true&amp;type=hour'">Oferta hasta esta hora</a></li>
                                </ul>
                            </div>
                        
                            <!-- Categorías -->
                            <!-- Categorías -->
                            <h5>Categorías</h5>
                            <div>
                                <t t-call="website.categories_recursive">
                                    <t t-set="categories" t-value="categories"/>
                                </t>
                            </div>
                        
                            <!-- Filtro por precio -->
                            <h5>Precio</h5>
                            <form method="get" action="/shop/category/all">
                                <div class="mb-2">
                                    <label for="minPrice" class="form-label">Desde</label>
                                    <input type="number" class="form-control" id="minPrice" name="min_price" placeholder="0" />
                                </div>
                                <div class="mb-2">
                                    <label for="maxPrice" class="form-label">Hasta</label>
                                    <input type="number" class="form-control" id="maxPrice" name="max_price" placeholder="1000" />
                                </div>
                                <button type="submit" class="btn btn-primary">Buscar</button>
                            </form>
                        </div>
                    </div>

                    <!-- Productos en oferta -->
                    <div class="col-lg-9 col-md-8">
                        <div class="row">
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="col-6 col-md-4 col-lg-3 mb-4">
                                    <div class="card">
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" class="card-img-top" />
                                        </a>
                                        <div class="card-body text-center">
                                            <h6 class="card-title"><t t-esc="product.name" /></h6>
                                            <div>
                                                <span class="text-decoration-line-through text-muted">$<t t-esc="'%.2f' % product.list_price" /></span>
                                                <span class="text-success">$<t t-esc="'%.2f' % product.discounted_price" /></span>
                                            </div>
                                            <span class="badge bg-primary">Oferta</span>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>