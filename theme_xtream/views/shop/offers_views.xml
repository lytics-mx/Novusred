<odoo>
    <template id="offers_template" name="Productos en Oferta">
        <t t-call="website.layout">
            <div class="container mt-4">
                <!-- Sección de encabezado con texto e íconos -->
                <div class="d-flex align-items-center justify-content-between p-4 mb-4" style="background-color: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); margin-top: -32px; margin-bottom: 24px; width: 100vw; position: relative; left: 50%; transform: translateX(-50%);">
                    <!-- Texto Ofertas -->
                    <div class="d-flex align-items-center" style="flex: 1; justify-content: flex-end;">
                        <div class="text-end" style="max-width: 300px;">
                            <div class="text-center" style="margin-right: auto; margin-left: auto;">
                                <h2 class="mb-1" style="font-family: 'Questrial', sans-serif; font-size: 28px; font-weight: bold; letter-spacing: 0.5px;">Ofertas</h2>
                                <p class="mb-0" style="font-size: 14px; color: #6c757d;">¡Aquí verás las mejores ofertas!</p>
                            </div>
                        </div>
                    </div>
                    <!-- Iconos de tags -->
                    <div class="d-flex align-items-end justify-content-end flex-wrap" style="flex: 2;">
                        <div class="d-flex align-items-end justify-content-end flex-wrap w-100">
                            <t t-if="product_tags and product_tags|length > 0">
                                <t t-foreach="product_tags[:6]" t-as="tag" t-index="i">
                                    <div class="text-center mx-4" style="min-width: 90px; position: relative;">
                                        <img t-att-src="'/web/image/product.tag/' + str(tag.id) + '/image'"
                                             t-att-alt="tag.name"
                                             class="img-fluid mb-2"
                                             style="height: 60px; width: 60px; object-fit: contain; border: none; background: none; box-shadow: none;" />
                                        <div style="font-size: 14px; color: #222; font-family: 'Questrial', sans-serif; margin-top: 6px;">
                                            <t t-esc="tag.name" />
                                        </div>
                                        <t t-if="i == 0">
                                            <div style="height: 4px; background: #3b7cff; border-radius: 2px; width: 70%; margin: 0 auto; margin-top: 4px;"></div>
                                        </t>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <!-- Filtros de la izquierda -->
                    <div class="col-lg-3 col-md-4">
                        <!-- ... (igual que antes, filtros sin cambios) ... -->
                        <!-- Puedes copiar aquí la sección de filtros si la necesitas -->
                    </div>
                    <!-- Productos en oferta en cuadros grandes, 3 por fila, scroll infinito -->
                    <div class="col-lg-9 col-md-8">
                        <div id="offers-product-list" class="row gy-4">
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="col-12 col-md-12 col-lg-4 d-flex">
                                    <div class="card h-100 shadow-sm product-card w-100" style="min-height: 420px;">
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                 class="card-img-top" style="height: 260px; object-fit: contain; background: #f8f8f8;" />
                                        </a>
                                        <div class="card-body d-flex flex-column">
                                            <t t-if="product.discounted_price &lt; product.list_price">
                                                <t t-if="product.product_tag_ids">
                                                    <div class="d-flex justify-content-start mb-2">
                                                        <span class="badge bg-primary" style="border-radius: 0;">
                                                            <t t-esc="product.product_tag_ids[0].name if product.product_tag_ids else ''"/>
                                                        </span>
                                                    </div>
                                                </t>
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <span class="text-dark fw-bold" style="font-size: 28px;">
                                                        $<t t-esc="'{:,}'.format(int(product.discounted_price))" />
                                                    </span>
                                                    <span class="text-danger" style="font-size: 20px;">
                                                        <t t-if="product.discount_percentage">
                                                            <t t-esc="int(product.discount_percentage)" />% OFF
                                                        </t>
                                                        <t t-if="not product.discount_percentage and product.fixed_discount">
                                                            -$<t t-esc="'{:,}'.format(int(product.fixed_discount))" /> MXN
                                                        </t>
                                                    </span>
                                                </div>
                                                <div>
                                                    <span class="text-muted" style="font-size: 18px;">
                                                        $<t t-esc="'{:,}'.format(int(product.list_price - product.discounted_price))" /> descuento
                                                    </span>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <span class="fw-bold d-block" style="font-size: 28px;">
                                                    $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                </span>
                                            </t>
                                            <t t-if="not product.product_tag_ids">
                                                <div style="height: 29px;"></div>
                                            </t>
                                            <t t-if="product.free_shipping">
                                                <div>
                                                    <span class="text-orange" style="color: #FF5207; font-size: 1rem; font-weight: bold; font-style: italic;">
                                                        Envío gratis
                                                    </span>
                                                </div>
                                            </t>
                                            <div class="mt-auto">
                                                <h6 class="card-title mb-2 text-truncate" style="font-size: 1.1rem; white-space: normal;">
                                                    <t t-esc="product.name.upper()" />
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <!-- Scroll infinito -->
                        <div id="offers-infinite-scroll-loader" class="text-center my-4" style="display: none;">
                            <span class="spinner-border text-primary"></span>
                        </div>
                        <script type="text/javascript">
                            (function() {
                                var loading = false;
                                var page = 1;
                                var endReached = false;
                                window.addEventListener('scroll', function() {
                                    if (endReached || loading) return;
                                    var loader = document.getElementById('offers-infinite-scroll-loader');
                                    var rect = loader.getBoundingClientRect();
                                    if (rect.top < window.innerHeight + 100) {
                                        loading = true;
                                        loader.style.display = 'block';
                                        page += 1;
                                        fetch(window.location.pathname + '?page=' + page + window.location.search.replace(/^\?/, '&'))
                                            .then(function(resp) { return resp.text(); })
                                            .then(function(html) {
                                                var parser = new DOMParser();
                                                var doc = parser.parseFromString(html, 'text/html');
                                                var newProducts = doc.querySelectorAll('#offers-product-list > div');
                                                if (newProducts.length === 0) {
                                                    endReached = true;
                                                    loader.style.display = 'none';
                                                } else {
                                                    var container = document.getElementById('offers-product-list');
                                                    newProducts.forEach(function(el) {
                                                        container.appendChild(el);
                                                    });
                                                    loader.style.display = 'none';
                                                    loading = false;
                                                }
                                            })
                                            .catch(function() {
                                                loader.style.display = 'none';
                                                loading = false;
                                            });
                                    }
                                });
                            })();
                        </script>
                    </div>
                </div>

            <div style="height: 105px;"></div>                
            </div>
        </t>
    </template>
</odoo>