<odoo>
    <template id="offers_template" name="Productos en Oferta">
        <t t-call="website.layout">
            <div class="container mt-4">
                <!-- Sección de encabezado con texto e íconos -->
                <div class="d-flex align-items-center justify-content-between p-4 mb-4 w-100" style="background-color:rgb(255, 255, 255); border-radius: 0; margin-left: -15px; margin-right: -15px; width: calc(100% + 30px) !important; max-width: none;">

                    <!-- Texto a la izquierda -->
                    <div>
                        <h2 class="mb-2" style="font-family: 'Questrial', sans-serif; font-size: 25px;">Ofertas</h2>
                        <p style="font-size: 16px; color: #6c757d;">¡Aquí verás las mejores ofertas!</p>
                    </div>
                    
                    <!-- Imágenes a la derecha -->
                    <div class="d-flex align-items-center">
                        <t t-foreach="[
                            {'src': '/theme_xtream/static/src/img/ofertas/etiqueta.png', 'alt': 'Todas las ofertas', 'text': 'Todas las ofertas', 'href': '/shop/category/all?offers=true'},
                            {'src': '/theme_xtream/static/src/img/ofertas/etiqueta3.png', 'alt': 'Todas las ofertas', 'text': 'Ofertas del día', 'href': '/shop/category/all?offers=true&type=day'},
                            {'src': '/theme_xtream/static/src/img/ofertas/relampago3.png', 'alt': 'Ofertas relámpago', 'text': 'Ofertas relámpago', 'href': '/shop/category/all?offers=true&type=flash'},
                            {'src': '/theme_xtream/static/src/img/ofertas/relampago.png', 'alt': 'Ofertas relámpago', 'text': 'Flash Sale', 'href': '/shop/category/all?offers=true&type=flash'},
                            {'src': '/theme_xtream/static/src/img/ofertas/reloj.png', 'alt': 'Hasta las 3 del día', 'text': 'Hasta las 3', 'href': '/shop/category/all?offers=true&type=daily'},
                            {'src': '/theme_xtream/static/src/img/ofertas/reloj3.png', 'alt': 'Hasta las 3 del día', 'text': 'Ofertas limitadas', 'href': '/shop/category/all?offers=true&type=limited'}

                        ]" t-as="icon">
                            <div class="text-center mx-3">
                                <a href="#" class="text-decoration-none">
                                    <img t-att-src="icon['src']" t-att-alt="icon['alt']" class="img-fluid mb-2" style="height: 50px;" />
                                    <p class="mb-0" style="font-size: 14px; color: #000;"><t t-esc="icon['text']" /></p>
                                </a>
                            </div>
                        </t>
                    </div>
                </div>
                
                <div class="row">
                    <!-- Filtros de la izquierda -->
                    <div class="col-lg-3 col-md-4">
                        <div class="filters">
                            <!-- Todos -->
                            <div class="mb-3">
                                <h5>Todos</h5>
                                <ul class="list-unstyled">
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true'">
                                            Todos <small> (<t t-esc="total_products" />) </small>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        
                            <!-- Envío gratis -->
                            <div class="mb-3 p-3 border rounded-3 bg-white">
                                <h5 class="text-orange fw-bold" style="color: #FF5207; font-size: 16px; font-style: italic; background-color: white;">Envío gratis</h5>

                                <div class="form-check form-switch bg-white">
                                    <input class="form-check-input" type="checkbox" id="freeShippingToggle" t-att-data-url="'/shop/category/all?offers=true&amp;free_shipping=' + ('true' if free_shipping else 'false')" />
                                    <label class="form-check-label" for="freeShippingToggle" style="background-color: white;">Todo en tu carrito de compras</label>
                                </div>
                            </div>
                        
                            <!-- Tipos de oferta -->
                            <div class="mb-3">
                                <h5>Tipos de oferta</h5>
                                <ul class="list-unstyled">
                                    <li><a t-att-href="'/shop/category/all?offers=true&amp;type=day'">Oferta del día</a></li>
                                    <li><a t-att-href="'/shop/category/all?offers=true&amp;type=flash'">Oferta relámpago</a></li>
                                </ul>
                            </div>
                        
                            <!-- Categorías -->
                            <h5>Categorías</h5>
                            <div>
                                <t t-call="theme_xtream.website_recursive_categories">
                                    <t t-set="children" t-value="categories"/>
                                </t>
                            </div>                        
                            
                            <!-- Filtro por precio -->
                            <div class="mb-2"></div>
                            <h5>Precio</h5>
                            <div class="mb-3 p-3 border rounded-3">
                                <ul class="list-unstyled">
                                    <li>
                                        <a t-att-href="'/shop/category/all?min_price=0&amp;max_price=500'" class="d-flex justify-content-between">
                                            <span>Hasta $500</span>
                                            <span class="text-muted">(<t t-esc="price_ranges['0_500']"/>)</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a t-att-href="'/shop/category/all?min_price=500&amp;max_price=1000'" class="d-flex justify-content-between">
                                            <span>De $500 a $1000</span>
                                            <span class="text-muted">(<t t-esc="price_ranges['500_1000']"/>)</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a t-att-href="'/shop/category/all?min_price=1000'" class="d-flex justify-content-between">
                                            <span>Más de $1000</span>
                                            <span class="text-muted">(<t t-esc="price_ranges['1000_plus']"/>)</span>
                                        </a>
                                    </li>
                                </ul>
                                <form method="get" action="/shop/category/all">
                                    <div class="d-flex align-items-center">
                                        <input type="number" class="form-control me-2 bg-white" id="minPrice" name="min_price" placeholder="Desde" style="background-color: #ffffff;" />
                                        <span class="me-2">—</span>
                                        <input type="number" class="form-control me-2 bg-white" id="maxPrice" name="max_price" placeholder="Hasta" style="background-color: #ffffff;" />
                                        <button type="submit" class="btn" style="background-color: #5a5a5a; color: white;">Buscar</button>
                                    </div>
                                </form>
                        </div>
                        </div>
                    </div>
                    <!-- Productos en oferta -->
                    <div class="col-lg-9 col-md-8">
                        <div class="row">
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="col-6 col-md-4 col-lg-3 mb-4">
                                    <div class="card shadow-sm bg-white">
                                        <!-- Imagen del producto -->
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                 class="card-img-top" 
                                                 alt="Imagen del producto" 
                                                 style="height: 180px; object-fit: cover;" />
                                        </a>
                                        <div class="card-body bg-white">
                                            <!-- Etiqueta de oferta -->
                                            <t t-if="product.product_tag_ids">
                                                <span class="badge bg-primary mb-2" style="font-size: 0.8rem;">
                                                    <t t-esc="product.product_tag_ids[0].name if product.product_tag_ids else ''"/>
                                                </span>
                                            </t>
                                            
                                            <!-- Precio del producto -->
                                            <div class="mb-2">
                                                <span class="text-decoration-line-through text-muted d-block" style="font-size: 0.9rem;">
                                                    $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                </span>
                                                <span class="text-success fw-bold d-block" style="font-size: 1.5rem;">
                                                    $<t t-esc="'{:,}'.format(int(product.discounted_price))" />
                                                </span>
                                                <span class="text-danger fw-bold d-block" style="font-size: 0.9rem;">
                                                    <t t-if="product.discount_percentage">
                                                        <t t-esc="int(product.discount_percentage)" />% OFF
                                                    </t>
                                                    <t t-elif="product.fixed_discount">
                                                        $<t t-esc="'{:,}'.format(int(product.fixed_discount))" /> de descuento
                                                    </t>
                                                </span>
                                            </div>
                                            
                                            <!-- Descuento adicional -->
                                            <!-- Descuento adicional -->
                                            <div class="mb-2">
                                                <span class="text-muted" style="font-size: 0.9rem;">
                                                    <t t-if="product.list_price and product.discounted_price">
                                                        Te ahorras: $<t t-esc="'{:,}'.format(int(product.list_price - product.discounted_price))" />
                                                    </t>
                                                </span>
                                            </div>
                                            
                                            <!-- Envío gratis -->
                                            <div class="mb-2">
                                                <span class="text-orange fw-bold" style="font-size: 0.9rem; font-style: italic; color: #FF5207;">
                                                    Envío gratis
                                                </span>
                                            </div>
                                            
                                            <!-- Nombre del producto -->
                                            <h6 class="card-title text-truncate" style="font-size: 0.9rem;">
                                                <t t-esc="product.name" />
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>