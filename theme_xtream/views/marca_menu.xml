<odoo>
    <!-- Acción para abrir la vista de tipos de marca -->
    <record id="action_brand_type" model="ir.actions.act_window">
        <field name="name">Tipos de Marca</field>
        <field name="res_model">brand.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Gestiona los tipos de marca asociados a los productos.</field>
    </record>

    <!-- Menú para "Tipo de Marca" dentro de "Productos" -->
    <menuitem id="menu_brand_type" 
              name="Tipo de Marca" 
              parent="stock.menu_product_variant_config_stock" 
              action="action_brand_type" 
              sequence="20"/>
</odoo>