<odoo>
    <template id="product_page_template" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_detail']" position="inside">
            <div id="product_additional_images" class="mt-3">
                <h3>Im√°genes adicionales</h3>
                <div class="owl-carousel owl-theme">
                    <t t-foreach="additional_images" t-as="image">
                        <div class="item">
                            <img t-att-src="'data:image/png;base64,%s' % image.image" t-att-alt="image.name or 'Product Image'" class="img-fluid"/>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>