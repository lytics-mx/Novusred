<odoo>
    <template id="product_details" inherit_id="website_sale.product">
        <xpath expr="//div[contains(@class, 'product_name')]" position="after">
            <t t-if="product.brand_website">
                <div class="product-brand">
                    <strong>Marca:</strong>
                    <span t-esc="product.brand_website"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>