<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template name="ProductUpdatedCustom" t-name="theme_xtream_product_custom">
        <t t-call="website.layout">
            <div class="container my-5">
                <h1 class="text-center mb-4">Productos Publicados</h1>
                <div class="row">
                    <t t-foreach="products" t-as="product">
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card">
                                <img t-att-src="website.image_url(product, 'image_1920')" class="card-img-top" t-att-alt="product.name"/>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a t-att-href="product.website_url" class="text-decoration-none">
                                            <t t-esc="product.name"/>
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted">
                                        <t t-esc="product.description_sale or 'Sin descripciÃ³n disponible'"/>
                                    </p>
                                    <p class="card-text text-primary">
                                        <t t-esc="product.list_price"/> $
                                    </p>
                                    <a t-att-href="product.website_url" class="btn btn-primary">Ver Producto</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>