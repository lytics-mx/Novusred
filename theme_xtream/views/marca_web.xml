<odoo>
    <template id="custom_products_sidebar" inherit_id="website_sale.products">
        <xpath expr="//aside[@id='products_grid_before']" position="inside">
            <!-- Categorías -->
            <div class="list-group mt-4">
                <h5 class="mb-3">Categorías</h5>
                <t t-foreach="categories" t-as="category">
                    <a t-att-href="'/shop?category=' + str(category.id)" 
                       t-att-class="'list-group-item list-group-item-action' + (' active' if selected_category == category.id else '')">
                        <t t-esc="category.name"/>
                    </a>
                </t>
            </div>

            <!-- Ofertas -->
            <div class="list-group mt-4">
                <h5 class="mb-3">Ofertas</h5>
                <a href="/shop?offer=true" class="list-group-item list-group-item-action">
                    Productos en oferta
                </a>
            </div>

            <!-- Marcas -->
            <div class="list-group mt-4">
                <h5 class="mb-3">Marcas</h5>
                <t t-foreach="brands" t-as="brand">
                    <a t-att-href="'/shop?brand=' + str(brand.id)" 
                       t-att-class="'list-group-item list-group-item-action' + (' active' if selected_brand == brand.id else '')">
                        <t t-esc="brand.name"/>
                    </a>
                </t>
            </div>

            <!-- Etiquetas -->
            <div class="list-group mt-4">
                <h5 class="mb-3">Etiquetas</h5>
                <t t-foreach="tags" t-as="tag">
                    <a t-att-href="'/shop?tag=' + str(tag.id)" 
                       t-att-class="'list-group-item list-group-item-action' + (' active' if selected_tag == tag.id else '')">
                        <t t-esc="tag.name"/>
                    </a>
                </t>
            </div>
        </xpath>
    </template>
</odoo>