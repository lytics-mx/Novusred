<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.brand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Insertar debajo del campo de categorías públicas -->
            <xpath expr="//field[@name='public_categ_ids']" position="after">
                <field name="brand_type_id" widget="many2one_tags" placeholder="Seleccionar marca"/>
            </xpath>
        </field>
    </record>
</odoo>