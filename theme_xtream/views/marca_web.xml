<odoo>
    <template id="products_sidebar" inherit_id="website_sale.products">
        <xpath expr="//div[@id='wrap']" position="before">
            <div class="container">
                <div class="row">
                    <!-- Categorías y marcas en la misma línea -->
                    <div class="col-12 d-flex justify-content-between align-items-center flex-wrap">
                        <!-- Categorías -->
                        <div class="d-flex align-items-center me-4">
                            <h5 class="me-3 mb-0">Categories:</h5>
                            <div class="d-flex flex-wrap">
                                <t t-foreach="categories" t-as="category">
                                    <a t-att-href="'/shop?category=' + str(category.id)" 
                                       t-att-class="'btn btn-outline-primary me-2 mb-2' + (' active' if selected_category == category.id else '')">
                                        <t t-esc="category.name"/>
                                    </a>
                                </t>
                            </div>
                        </div>
                        
                        <!-- Marcas -->
                        <div class="d-flex align-items-center">
                            <h5 class="me-3 mb-0">Brands:</h5>
                            <div class="d-flex flex-wrap">
                                <t t-foreach="brands" t-as="brand">
                                    <a t-att-href="'/shop?brand=' + str(brand.id)" 
                                       t-att-class="'btn btn-outline-secondary me-2 mb-2' + (' active' if selected_brand == brand.id else '')">
                                        <t t-esc="brand.name"/>
                                    </a>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>