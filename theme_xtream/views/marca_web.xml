<odoo>
    <template id="products_sidebar" inherit_id="website_sale.products">
        <xpath expr="//div[@id='wrap']" position="before">
            <div class="container">
                <div class="row">
                    <!-- Sidebar con rango de precios y categorías -->
                    <div class="col-lg-3 col-md-4">
                        <!-- La sección de rango de precios -->
                        <div class="filters">
                            <!-- Etiquetas -->
                            <div class="mb-4">
                                <h5>Etiquetas</h5>
                                <!-- Aquí puedes agregar el contenido de etiquetas -->
                            </div>
                            <!-- Rango de precio -->
                            <div class="mb-4">
                                <h5>Rango de precio</h5>
                                <!-- Aquí puedes agregar el contenido del rango de precios -->
                            </div>
                            <!-- Categorías -->
                            <div class="list-group mt-4">
                                <h5 class="mb-3">Categories</h5>
                                <t t-foreach="categories" t-as="category">
                                    <a t-att-href="'/shop?category=' + str(category.id)" 
                                       t-att-class="'list-group-item list-group-item-action' + (' active' if selected_category == category.id else '')">
                                        <t t-esc="category.name"/>
                                    </a>
                                </t>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Contenido principal -->
                    <div class="col-lg-9 col-md-8">
                        <!-- Aquí va el contenido principal de los productos -->
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>