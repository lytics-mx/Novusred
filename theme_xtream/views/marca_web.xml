<template id="products_epson_inherit" inherit_id="website_sale.products">
    <xpath expr="//div[@id='wrap']" position="before">
        <div class="container">
            <div class="row">
                <!-- Sidebar con categorÃ­as y marcas -->
                <div class="col-lg-3 col-md-4">
                    <div class="list-group">
                        <h5 class="mb-3">Categories</h5>
                        <t t-foreach="categories" t-as="category">
                            <a t-att-href="'/shop?category=' + str(category.id)" 
                               t-att-class="'list-group-item list-group-item-action' + (' active' if selected_category == category.id else '')">
                                <t t-esc="category.name"/>
                            </a>
                        </t>
                    </div>
                    <div class="list-group mt-4">
                        <h5 class="mb-3">Brands</h5>
                        <t t-foreach="brands" t-as="brand">
                            <a t-att-href="'/shop?brand=' + str(brand.id)" 
                               t-att-class="'list-group-item list-group-item-action' + (' active' if selected_brand == brand.id else '')">
                                <t t-esc="brand.name"/>
                            </a>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </xpath>
</template>