<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Template for About Us page -->
    <template id="xtream_about" name="Xtream About" inherit_id="website.layout">
        <xpath expr="//head" position="inside">
            <link rel="stylesheet" type="text/css" href="/theme_xtream/static/src/css/about.css"/>
            <script type="text/javascript" src="/theme_xtream/static/src/js/about.js"></script>
        </xpath>
        <xpath expr="//main" position="inside">
            <t t-if="request.httprequest.path == '/about'">
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container mt-4 mb-5">
                        <div class="row">
                            <div class="col" style="margin-right: 42%;">
                                <div id="aboutus_section" style="margin-top: 14px;">
                                    <section class="s_website_form">
                                        <div class="container">
                                            <section class="body_section">
                                                <!-- About section starts here -->
                                                <section class="about">
                                                    <div class="container">
                                                        <div class="row">
                                                            <div class="col-lg-8 col-12">
                                                                <div class="about_left">
                                                                    <div class="name">
                                                                        <h3>Acerca de Nosotros</h3>
                                                                        <p>Somos una empresa dedicada a proporcionar soluciones innovadoras y de alta calidad para nuestros clientes.</p>
                                                                        <p>Nuestra misión es mejorar la vida de las personas a través de la tecnología y la innovación.</p>
                                                                        <p>Contamos con un equipo de profesionales altamente capacitados y comprometidos con la excelencia.</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </section>
                                            </section>
                                        </div>
                                    </section>
                                </div>
                            </div>
                            <div class="col">
                                <section class="body_section">
                                    <div class="row">
                                        <section class="about">
                                            <div class="about_right">
                                                <br/>
                                                <div class="wrapper">
                                                    <div class="c_info">
                                                        <h3>Marketing</h3>
                                                        <div class="phone">
                                                            <p>
                                                                <span>Teléfono:</span>
                                                                <a href="tel:+6494461709">+6494461709</a>
                                                            </p>
                                                            <p>
                                                                <span>Email:</span>
                                                                <a href="mailto:info@xtream.com">info@xtream.com</a>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="c_info">
                                                        <h3>Información Adicional</h3>
                                                        <div class="phone">
                                                            <address itemscope="itemscope" itemtype="http://schema.org/Organization">
                                                                <div t-field="res_company.partner_id" t-options='{
                                                                    "widget": "contact",
                                                                    "fields": ["name", "address", "phone", "mobile", "email"]}'/>
                                                            </address>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>