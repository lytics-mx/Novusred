<odoo>
    <record id="view_product_category_form_inherit" model="ir.ui.view">
        <field name="name">product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="icon" widget="image" class="oe_avatar" options="{'preview_image': 'icon'}"/>
            </xpath>
        <xpath expr="//field[@name='parent_id']" position="after">
            <field name="is_visible_in_menu"/>
        </xpath>
        <xpath expr="//notebook" position="inside">
            <page string="Banner de la Categoría">
                <group string="Imagen del Banner">
                    <field name="banner_image" widget="image" string="Banner"/>
                </group>
                <group string="Información">
                    <div class="text-muted">
                        <p><strong>Importante:</strong></p>
                        <p>• La imagen del banner se mostrará en la parte superior de la categoría.</p>
                        <p>• Usa una imagen de alta calidad y formato horizontal para mejores resultados.</p>
                    </div>
                </group>
            </page>
        </xpath>
        </field>
    </record>
</odoo>