<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_xtream.xtream_inicio" name="Inicio">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea vÃ¡lidas -->
                <t t-if="request.httprequest.user_agent and 'Mobile' in request.httprequest.user_agent">
                    <img src="/theme_xtream/static/src/img/product-img/imageneshome_mobile.png" alt="Mobile Image" style="width: 100%; height: auto;" />
                </t>
                <t t-else="">
                    <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" alt="Desktop Image" style="width: 100%; height: auto;" />
                </t>
                <p>Hola</p>
            </div>
        </t>
    </template>
</odoo>