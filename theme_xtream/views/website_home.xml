<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_xtream.xtream_inicio" name="Inicio">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                
                <!-- Sección de Banner -->
                <div style="position: relative; text-align: center;">
                    <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" 
                        alt="Banner" 
                        style="width: 100%; height: auto; display: block;" />

                    <!-- Texto sobre la imagen -->
                    <div style="
                        position: absolute; 
                        top: 30%; left: 50%; 
                        transform: translate(-50%, -50%);
                        text-align: center; 
                        color: white; 
                        font-size: 2em; 
                        font-weight: bold;
                        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);">
                        Envíos a todo México
                        <p style="font-size: 0.6em; font-weight: normal;">Tu compra está 100% segura</p>
                    </div>
                </div>

                <!-- Métodos de Pago -->
                <div style="background: #f5f5f5; padding: 20px; text-align: center;">
                    <p style="font-size: 1.2em; font-weight: bold;">Pago Seguro y Confiable</p>
                    
                    <div style="display: flex; justify-content: center; gap: 15px;">
                        <img src="/theme_xtream/static/src/img/product-img/mastercard.png" alt="Mastercard" width="50">
                        <img src="/theme_xtream/static/src/img/product-img/visa.png" alt="Visa" width="50">
                        <img src="/theme_xtream/static/src/img/product-img/amex.png" alt="American Express" width="50">
                        <img src="/theme_xtream/static/src/img/product-img/paypal.png" alt="PayPal" width="50">
                        <img src="/theme_xtream/static/src/img/product-img/oxxopay.png" alt="Oxxo Pay" width="50">
                        <img src="/theme_xtream/static/src/img/product-img/mercadopago.png" alt="Mercado Pago" width="50">
                    </div>

                    <!-- Botón Ver Todos los Métodos -->
                    <div style="margin-top: 20px;">
                        <a href="#" style="
                            display: inline-block; 
                            background: #007bff; 
                            color: white; 
                            padding: 10px 20px; 
                            text-decoration: none; 
                            border-radius: 5px;">
                            ➜ Ver todos los métodos
                        </a>
                    </div>
                </div>

            </div>
        </t>
    </template>
</odoo>
