<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_xtream.xtream_inicio" name="Inicio">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" alt="Image" style="width: 100%; height: auto;" />
                <div style="display: flex; align-items: center; justify-content: space-between; background-color: white; border-radius: 10px; padding: 20px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
                    <div style="flex: 1; text-align: left; font-size: 16px; font-weight: bold; color: #333;">
                        Pago seguro y confiable
                    </div>
                    <div style="width: 1px; background-color: #ccc; height: 50px; margin: 0 20px;"></div>
                    <div style="flex: 1; text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/pagos.png" alt="Pagos" style="width: auto; height: auto;" />
                    </div>
                    <div style="width: 1px; background-color: #ccc; height: 50px; margin: 0 20px;"></div>
                    <div style="flex: 1; text-align: right;">
                        <a href="/metodos-pago" style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 20px; font-size: 14px; font-weight: bold;">
                            Ver métodos
                        </a>
                    </div>
                </div>
                <p>Hola</p>
            </div>
        </t>
    </template>
</odoo>