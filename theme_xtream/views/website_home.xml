<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_xtream.xtream_inicio" name="Inicio">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" alt="Image" style="width: 100%; height: auto; object-fit: contain;" />
                <div style="display: flex; align-items: center; justify-content: center; background-color: white; border-radius: 10px; padding: 10px 20px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); width: 90%; max-width: 600px; margin: 20px auto; flex-wrap: nowrap; gap: 10px;">
                    <!-- Texto "Pago Seguro" -->
                    <div style="font-size: 14px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-align: center;">
                        Pago Seguro  y Confiable
                    </div>
                    <!-- Línea vertical -->
                    <div style="width: 1px; background-color: #ddd; height: 50px;"></div>
                    <!-- Imagen -->
                    <div style="text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/pagos.png" alt="Pagos" style="height: 50px; max-width: 100%; object-fit: contain;" />
                    </div>
                    <!-- Línea vertical -->
                    <div style="width: 1px; background-color: #ddd; height: 50px;"></div>
                    <!-- Icono y enlace "Ver métodos de pago" -->
                    <div style="display: flex; align-items: center; gap: 5px; font-family: 'Questrial', sans-serif; font-size: 14px; color: #007bff; text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/flecha.png" alt="Flecha" style="height: 20px; object-fit: contain;" />
                        <a href="/payment_policies" style="font-size: 14px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-decoration: none;">Ver métodos</a>
                    </div>
                </div>


                <!-- Bloque de productos en formato carrusel -->
                <div class="container mt-4">
                    <h2 class="text-center">Nuestros Productos</h2>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <t t-foreach="request.env['product.template'].search([('website_published', '=', True)], limit=20)" t-as="product">
                            <div class="col">
                                <div class="card h-100 text-center">
                                    <!-- Imagen del producto -->
                                    <div class="oe_product_image position-relative overflow-hidden">
                                        <a t-att-href="'/shop/product/' + str(product.id)" class="oe_product_image_link d-block position-relative">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                class="card-img-top img-fluid" 
                                                alt="Product Image" 
                                                style="height: 200px; object-fit: contain;" />
                                        </a>
                                    </div>
                                    <!-- Información del producto -->
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a t-att-href="'/shop/product/' + str(product.id)" class="text-decoration-none text-dark">
                                                <t t-esc="product.name" />
                                            </a>
                                        </h5>
                                        <p class="card-text text-muted">
                                            $<t t-esc="'%.2f' % product.list_price" />
                                        </p>
                                    </div>
                                    <!-- Botones de acción -->
                                    <div class="card-footer bg-transparent border-0">
                                        <div class="d-flex justify-content-center gap-2">
                                            <button type="button" class="btn btn-light" title="Agregar a la lista de deseos">
                                                <span class="fa fa-heart"></span>
                                            </button>
                                            <a t-att-href="'/shop/product/' + str(product.id)" class="btn btn-primary">
                                                Ver Producto
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>


            </div>
        </t>
    </template>
</odoo>