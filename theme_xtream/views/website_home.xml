<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_xtream.xtream_inicio" name="Inicio">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" alt="Image" style="width: 100%; height: auto; object-fit: contain;" />
                <div style="display: flex; align-items: center; justify-content: center; background-color: white; border-radius: 10px; padding: 15px 25px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); width: 90%; max-width: 700px; margin: 20px auto; flex-wrap: nowrap; gap: 15px;">
                    <!-- Texto "Pago Seguro" -->
                    <div style="font-size: 16px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-align: center;">
                        Pago Seguro y Confiable
                    </div>
                    <!-- Línea vertical -->
                    <div style="width: 1px; background-color: #ddd; height: 60px;"></div>
                    <!-- Imagen -->
                    <div style="text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/pagos.png" alt="Pagos" style="height: 70px; max-width: 100%; object-fit: contain;" />
                    </div>
                    <!-- Línea vertical -->
                    <div style="width: 1px; background-color: #ddd; height: 60px;"></div>
                    <!-- Icono y enlace "Ver métodos de pago" -->
                    <div style="display: flex; align-items: center; gap: 10px; font-family: 'Questrial', sans-serif; font-size: 16px; color: #007bff; text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/flecha.png" alt="Flecha" style="height: 30px; object-fit: contain;" />
                        <a href="/payment_policies" style="font-size: 16px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-decoration: none;">Ver métodos</a>
                    </div>
                </div>


                <!-- Bloque de productos en formato carrusel -->
                <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                    <div class="container mt-4">
                        <div style="text-align: left;">
                            <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Sugerencias basadas en tu historial</h2>
                        </div>
                        <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                            <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                                <!-- Get recently viewed products -->
                                <t t-set="viewed_products" t-value="request.env['website.track'].sudo().search([
                                    ('visitor_id.partner_id', '=', request.env.user.partner_id.id),
                                    ('product_id', '!=', False)
                                ], limit=10).mapped('product_id.product_tmpl_id')" />
                                <t t-foreach="viewed_products" t-as="product">
                                    <div class="oe_product g-col-6 g-col-md-3 g-col-lg-3" style="--o-wsale-products-grid-product-col-height: 1;" data-name="Producto">
                                        <div class="o_wsale_product_grid_wrapper position-relative h-100 o_wsale_product_grid_wrapper_1_1">
                                            <form action="/shop/cart/update" method="post" class="oe_product_cart h-100 d-flex" itemscope="itemscope" itemtype="http://schema.org/Product" data-publish="on">
                                                <!-- Imagen del producto -->
                                                <div class="oe_product_image position-relative flex-grow-0 overflow-hidden">
                                                    <a class="oe_product_image_link d-block position-relative" itemprop="url" t-att-href="'/shop/product/' + str(product.id)">
                                                        <span class="oe_product_image_img_wrapper d-flex h-100 justify-content-center align-items-center position-absolute">
                                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                                itemprop="image" 
                                                                class="img img-fluid h-100 w-100 position-absolute" 
                                                                t-att-alt="product.name" 
                                                                loading="lazy" />
                                                        </span>
                                                    </a>
                                                </div>
                                                <!-- Información del producto -->
                                                <div class="o_wsale_product_information position-relative d-flex flex-column flex-grow-1 flex-shrink-1">
                                                    <div class="o_wsale_product_information_text">
                                                        <h6 class="o_wsale_products_item_title mb-2 text-break">
                                                            <a class="text-primary text-decoration-none text-primary-emphasis" itemprop="name" t-att-href="'/shop/product/' + str(product.id)">
                                                                <t t-esc="product.name" />
                                                            </a>
                                                        </h6>
                                                    </div>
                                                    <div class="o_wsale_product_sub d-flex justify-content-between align-items-end gap-2 flex-wrap">
                                                        <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                                            <span class="h6 mb-0">$<t t-esc="'%.2f' % product.list_price" /></span>
                                                            <span itemprop="price" style="display:none;"><t t-esc="product.list_price" /></span>
                                                            <span itemprop="priceCurrency" style="display:none;">MXN</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </t>
                            </section>
                        </div>
                    </div>
                </t>

                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Ofertas</h2>
                    </div>
                    <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                        <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                            <!-- Iterar sobre los productos en oferta -->
                            <t t-set="discounted_products" t-value="request.env['product.template'].sudo().search([('website_published', '=', True), ('list_price', '&lt;', 100)], limit=10)" />
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="oe_product g-col-6 g-col-md-3 g-col-lg-3" style="--o-wsale-products-grid-product-col-height: 1;" data-name="Producto">
                                    <div class="o_wsale_product_grid_wrapper position-relative h-100 o_wsale_product_grid_wrapper_1_1">
                                        <form action="/shop/cart/update" method="post" class="oe_product_cart h-100 d-flex" itemscope="itemscope" itemtype="http://schema.org/Product" data-publish="on">
                                            <!-- Imagen del producto -->
                                            <div class="oe_product_image position-relative flex-grow-0 overflow-hidden">
                                                <a class="oe_product_image_link d-block position-relative" itemprop="url" t-att-href="'/shop/product/' + str(product.id)">
                                                    <span class="oe_product_image_img_wrapper d-flex h-100 justify-content-center align-items-center position-absolute">
                                                        <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                            itemprop="image" 
                                                            class="img img-fluid h-100 w-100 position-absolute" 
                                                            t-att-alt="product.name" 
                                                            loading="lazy" />
                                                    </span>
                                                </a>
                                            </div>
                                            <!-- Información del producto -->
                                            <div class="o_wsale_product_information position-relative d-flex flex-column flex-grow-1 flex-shrink-1">
                                                <div class="o_wsale_product_information_text">
                                                    <h6 class="o_wsale_products_item_title mb-2 text-break">
                                                        <a class="text-primary text-decoration-none text-primary-emphasis" itemprop="name" t-att-href="'/shop/product/' + str(product.id)">
                                                            <t t-esc="product.name" />
                                                        </a>
                                                    </h6>
                                                </div>
                                                <div class="o_wsale_product_sub d-flex justify-content-between align-items-end gap-2 flex-wrap">
                                                    <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                                        <span class="h6 mb-0">$<t t-esc="'%.2f' % product.list_price" /></span>
                                                        <span itemprop="price" style="display:none;"><t t-esc="product.list_price" /></span>
                                                        <span itemprop="priceCurrency" style="display:none;">MXN</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </t>
                        </section>
                    </div>
                </div>

                <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                    <div class="container mt-4">
                        <div style="text-align: left;">
                            <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Interés</h2>
                        </div>
                        <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                            <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                                <!-- Iterar sobre los productos en la lista de deseos -->
                                <t t-set="wishlist_products" t-value="request.env['product.wishlist'].sudo().search([])" />
                                <t t-foreach="wishlist_products" t-as="wishlist_item">
                                    <t t-set="product" t-value="wishlist_item.product_id" />
                                    <div class="oe_product g-col-6 g-col-md-3 g-col-lg-3" style="--o-wsale-products-grid-product-col-height: 1;" data-name="Producto">
                                        <div class="o_wsale_product_grid_wrapper position-relative h-100 o_wsale_product_grid_wrapper_1_1">
                                            <form action="/shop/cart/update" method="post" class="oe_product_cart h-100 d-flex" itemscope="itemscope" itemtype="http://schema.org/Product" data-publish="on">
                                                <!-- Imagen del producto -->
                                                <div class="oe_product_image position-relative flex-grow-0 overflow-hidden">
                                                    <a class="oe_product_image_link d-block position-relative" itemprop="url" t-att-href="'/shop/product/' + str(product.id)">
                                                        <span class="oe_product_image_img_wrapper d-flex h-100 justify-content-center align-items-center position-absolute">
                                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                                itemprop="image" 
                                                                class="img img-fluid h-100 w-100 position-absolute" 
                                                                t-att-alt="product.name" 
                                                                loading="lazy" />
                                                        </span>
                                                    </a>
                                                </div>
                                                <!-- Información del producto -->
                                                <div class="o_wsale_product_information position-relative d-flex flex-column flex-grow-1 flex-shrink-1">
                                                    <div class="o_wsale_product_information_text">
                                                        <h6 class="o_wsale_products_item_title mb-2 text-break">
                                                            <a class="text-primary text-decoration-none text-primary-emphasis" itemprop="name" t-att-href="'/shop/product/' + str(product.id)">
                                                                <t t-esc="product.name" />
                                                            </a>
                                                        </h6>
                                                    </div>
                                                    <div class="o_wsale_product_sub d-flex justify-content-between align-items-end gap-2 flex-wrap">
                                                        <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                                            <span class="h6 mb-0">$<t t-esc="'%.2f' % product.list_price" /></span>
                                                            <span itemprop="price" style="display:none;"><t t-esc="product.list_price" /></span>
                                                            <span itemprop="priceCurrency" style="display:none;">MXN</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </t>
                            </section>
                        </div>
                    </div>
                </t>
                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Descubre</h2>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/descubre">
                            <img src="/theme_xtream/static/src/img/home/Descubre5.png" 
                                class="d-block" 
                                alt="Imagen 1" 
                                style="width: 100%; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                        </a>
                        <a href="/events">
                            <img src="/theme_xtream/static/src/img/home/Descrubre3.png" 
                                class="d-block" 
                                alt="Imagen 2" 
                                style="width: 100%; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                        </a>
                    </div>
                </div>

                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Marcas</h2>
                    </div>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a href="/marcas">
                            <img src="/theme_xtream/static/src/img/marcas_productos/epson.png" 
                                class="d-block" 
                                alt="Epson" 
                                style="width: 200px; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                        </a>
                        <a href="/marcas">
                            <img src="/theme_xtream/static/src/img/marcas_productos/lenovo.png" 
                                class="d-block" 
                                alt="Lenovo" 
                                style="width: 200px; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                        </a>
                        <a href="/marcas">
                            <img src="/theme_xtream/static/src/img/marcas_productos/lg.png" 
                                class="d-block" 
                                alt="LG" 
                                style="width: 200px; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                        </a>
                        <a href="/marcas">
                            <img src="/theme_xtream/static/src/img/marcas_productos/microsoft.png" 
                                class="d-block" 
                                alt="Microsoft" 
                                style="width: 200px; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                        </a>
                    </div>


                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Categorías</h2>
                    </div>
                    <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                        <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                            <t t-set="category" t-value="request.env['product.category'].sudo().search([('name', '=', 'Cableado Estructurado')], limit=1)" />
                            <t t-if="category">
                                <t t-set="category_products" t-value="request.env['product.template'].sudo().search([
                                    ('website_published', '=', True),
                                    ('categ_id', '=', category.id)
                                ], limit=10)" />
                                <t t-foreach="category_products" t-as="product">
                                    <div class="oe_product g-col-6 g-col-md-3 g-col-lg-3" style="--o-wsale-products-grid-product-col-height: 1;" data-name="Producto">
                                        <div class="o_wsale_product_grid_wrapper position-relative h-100 o_wsale_product_grid_wrapper_1_1">
                                            <form action="/shop/cart/update" method="post" class="oe_product_cart h-100 d-flex" itemscope="itemscope" itemtype="http://schema.org/Product">
                                                <div class="oe_product_image position-relative flex-grow-0 overflow-hidden">
                                                    <a class="oe_product_image_link d-block position-relative" itemprop="url" t-att-href="'/shop/product/' + str(product.id)">
                                                        <span class="oe_product_image_img_wrapper d-flex h-100 justify-content-center align-items-center position-absolute">
                                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                                itemprop="image" 
                                                                class="img img-fluid h-100 w-100 position-absolute" 
                                                                t-att-alt="product.name" 
                                                                loading="lazy" />
                                                        </span>
                                                    </a>
                                                </div>
                                                <div class="o_wsale_product_information position-relative d-flex flex-column flex-grow-1 flex-shrink-1">
                                                    <div class="o_wsale_product_information_text">
                                                        <h6 class="o_wsale_products_item_title mb-2 text-break">
                                                            <a class="text-primary text-decoration-none text-primary-emphasis" itemprop="name" t-att-href="'/shop/product/' + str(product.id)">
                                                                <t t-esc="product.name" />
                                                            </a>
                                                        </h6>
                                                    </div>
                                                    <div class="o_wsale_product_sub d-flex justify-content-between align-items-end gap-2 flex-wrap">
                                                        <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                                            <span class="h6 mb-0">$<t t-esc="'%.2f' % product.list_price" /></span>
                                                            <span itemprop="price" style="display:none;"><t t-esc="product.list_price" /></span>
                                                            <span itemprop="priceCurrency" style="display:none;">MXN</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </t>
                            </t>
                            <t t-else="">
                                <p style="font-family: 'Questrial', sans-serif; font-size: 16px; color: #666;">No hay productos en la categoría</p>
                            </t>
                        </section>
                    </div>
                </div>
                <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                    <div class="container mt-4">
                        <div style="text-align: left;">
                            <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Historial</h2>
                        </div>
                        <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                            <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                                <!-- Obtener el carrito actual -->
                                <t t-set="cart" t-value="website.sale_get_order()" />
                                <t t-if="cart and cart.order_line">
                                    <t t-foreach="cart.order_line" t-as="line">
                                        <div class="oe_product g-col-6 g-col-md-3 g-col-lg-3" style="--o-wsale-products-grid-product-col-height: 1;" data-name="Producto">
                                            <div class="o_wsale_product_grid_wrapper position-relative h-100 o_wsale_product_grid_wrapper_1_1">
                                                <form action="/shop/cart/update" method="post" class="oe_product_cart h-100 d-flex" itemscope="itemscope" itemtype="http://schema.org/Product">
                                                    <div class="oe_product_image position-relative flex-grow-0 overflow-hidden">
                                                        <a class="oe_product_image_link d-block position-relative" itemprop="url" t-att-href="'/shop/product/' + str(line.product_id.id)">
                                                            <span class="oe_product_image_img_wrapper d-flex h-100 justify-content-center align-items-center position-absolute">
                                                                <img t-att-src="'/web/image/product.product/' + str(line.product_id.id) + '/image_1920'" 
                                                                    itemprop="image" 
                                                                    class="img img-fluid h-100 w-100 position-absolute" 
                                                                    t-att-alt="line.product_id.name" 
                                                                    loading="lazy" />
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div class="o_wsale_product_information position-relative d-flex flex-column flex-grow-1 flex-shrink-1">
                                                        <div class="o_wsale_product_information_text">
                                                            <h6 class="o_wsale_products_item_title mb-2 text-break">
                                                                <a t-att-href="'/shop/product/' + str(line.product_id.id)" class="text-primary text-decoration-none text-primary-emphasis cursor-pointer">
                                                                    <t t-esc="line.product_id.name" />
                                                                </a>
                                                            </h6>
                                                        </div>
                                                        <div class="o_wsale_product_sub d-flex justify-content-between align-items-end gap-2 flex-wrap">
                                                            <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                                                <span class="h6 mb-0">$<t t-esc="'%.2f' % line.price_unit" /></span>
                                                                <span class="text-muted">(Cantidad: <t t-esc="int(line.product_uom_qty)" />)</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <p style="font-family: 'Questrial', sans-serif; font-size: 16px; color: #666;">No hay historial.</p>
                                </t>
                            </section>
                        </div>
                    </div>
                </t>

            </div>                        
        </t>
    </template>
</odoo>