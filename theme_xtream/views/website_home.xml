<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_xtream.xtream_inicio" name="Inicio">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" alt="Image" style="width: 100%; height: auto; object-fit: contain;" />
                <div style="display: flex; align-items: center; justify-content: center; background-color: white; border-radius: 10px; padding: 15px 25px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); width: 90%; max-width: 700px; margin: 20px auto; flex-wrap: nowrap; gap: 15px;">
                    <!-- Texto "Pago Seguro" -->
                    <div style="font-size: 16px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-align: center;">
                        Pago Seguro y Confiable
                    </div>
                    <!-- Línea vertical -->
                    <div style="width: 1px; background-color: #ddd; height: 60px;"></div>
                    <!-- Imagen -->
                    <div style="text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/pagos.png" alt="Pagos" style="height: 70px; max-width: 100%; object-fit: contain;" />
                    </div>
                    <!-- Línea vertical -->
                    <div style="width: 1px; background-color: #ddd; height: 60px;"></div>
                    <!-- Icono y enlace "Ver métodos de pago" -->
                    <div style="display: flex; align-items: center; gap: 10px; font-family: 'Questrial', sans-serif; font-size: 16px; color: #007bff; text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/flecha.png" alt="Flecha" style="height: 30px; object-fit: contain;" />
                        <a href="/payment_policies" style="font-size: 16px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-decoration: none;">Ver métodos</a>
                    </div>
                </div>


                <!-- Bloque de productos en formato carrusel -->
                <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                    <div class="container mt-4">
                        <div style="text-align: left;">
                            <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Sugerencias basadas en tu historial</h2>
                        </div>
                        <div id="carouselViewedProducts" class="carousel slide" data-bs-ride="carousel">
                            <!-- Indicadores -->
                            <div class="carousel-indicators">
                                <t t-set="chunks" t-value="[viewed_products[i:i + 5] for i in range(0, len(viewed_products), 5)]" />
                                <t t-foreach="chunks" t-as="chunk" t-foreach-index="index">
                                    <t t-set="slide_label" t-value="'Slide %s' % (index + 1)" />
                                    <button type="button" data-bs-target="#carouselViewedProducts" t-att-data-bs-slide-to="index" t-att-class="'active' if index == 0 else ''" aria-current="true" t-att-aria-label="slide_label"></button>
                                </t>
                            </div>
                
                            <!-- Contenido del carrusel -->
                            <div class="carousel-inner">
                                <t t-foreach="chunks" t-as="chunk" t-foreach-index="chunk_index">
                                    <div t-att-class="'carousel-item' + (' active' if chunk_index == 0 else '')">
                                        <div class="row row-cols-2 row-cols-md-4 g-3">
                                            <t t-foreach="chunk" t-as="product">
                                                <div class="col">
                                                    <div class="card h-100 shadow-sm">
                                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                                 class="card-img-top"
                                                                 style="height: 200px; object-fit: contain; padding: 10px;" />
                                                        </a>
                                                        <div class="card-body d-flex flex-column">
                                                            <t t-if="product.product_tag_ids">
                                                                <span class="badge bg-primary mb-2">
                                                                    <t t-esc="product.product_tag_ids[0].name if product.product_tag_ids else ''"/>
                                                                </span>
                                                            </t>
                                                            
                                                            <h6 class="card-title text-truncate mb-2">
                                                                <t t-esc="product.name" />
                                                            </h6>
                                                            
                                                            <div class="mt-auto">
                                                                <span class="text-success fw-bold d-block">
                                                                    $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                                </span>
                                                                <span class="text-orange" style="color: #FF5207; font-size: 0.9rem;">
                                                                    Envío gratis
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </t>
                            </div>
                
                            <!-- Controles del carrusel -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselViewedProducts" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselViewedProducts" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Siguiente</span>
                            </button>
                        </div>
                    </div>
                </t>
                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Ofertas</h2>
                    </div>
                    <div class="o_wsale_products_grid_table_wrapper pt-3 pt-lg-0">
                        <section id="o_wsale_products_grid" class="o_wsale_products_grid_table grid">
                            <t t-set="discounted_products" t-value="request.env['product.template'].sudo().search([('website_published', '=', True), ('list_price', '>', 0), ('discounted_price', '>', 0)], limit=10)" />
                            <t t-foreach="discounted_products" t-as="product">
                                <div class="oe_product g-col-6 g-col-md-3 g-col-lg-3">
                                    <div class="o_wsale_product_grid_wrapper">
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" />
                                        </a>
                                        <h6><t t-esc="product.name" /></h6>
                                        <div>
                                            <span class="text-decoration-line-through">$<t t-esc="'%.2f' % product.list_price" /></span>
                                            <span class="text-success">$<t t-esc="'%.2f' % product.discounted_price" /></span>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </section>
                    </div>
                </div>

                <div class="oe_structure container mt-4" id="interes_custom_block">
                    <!-- This empty div allows for customizable content blocks to be inserted -->
                </div>
                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Descubre</h2>
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <a href="/descubre" class="d-block">
                                <img src="/theme_xtream/static/src/img/home/Descubre5.png" 
                                    alt="Imagen 1" 
                                    class="img-fluid w-100"
                                    style="transition: transform 0.3s ease;" 
                                    onmouseover="this.style.transform='scale(1.02)'" 
                                    onmouseout="this.style.transform='scale(1)'" />
                            </a>
                        </div>
                        <div class="col-12 col-md-6">
                            <a href="/events" class="d-block">
                                <img src="/theme_xtream/static/src/img/home/Descrubre3.png" 
                                    alt="Imagen 2" 
                                    class="img-fluid w-100"
                                    style="transition: transform 0.3s ease;" 
                                    onmouseover="this.style.transform='scale(1.02)'" 
                                    onmouseout="this.style.transform='scale(1)'" />
                            </a>
                        </div>
                    </div>
                </div>

                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Marcas</h2>
                    </div>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <t t-set="tags" t-value="request.env['product.tag'].sudo().search([])" />
                        <t t-foreach="tags" t-as="tag">
                            <a t-att-href="'/shop?tag_id=' + str(tag.id)">
                                <img t-att-src="'/web/image/product.tag/' + str(tag.id) + '/image'" 
                                    class="d-block mt-2" 
                                    t-att-alt="tag.name + ' Portada'" 
                                    style="width: 250px; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                            </a>
                        </t>
                    </div>
                </div>


                <div class="container mt-4">
                    <div style="text-align: left;">
                        <h2 style="font-family: 'Questrial', sans-serif; font-size: 25px;">Categorías</h2>
                    </div>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <t t-set="categories" t-value="request.env['product.public.category'].sudo().search([('parent_id', '=', False)], limit=5)" />
                        <t t-foreach="categories" t-as="category">
                            <div style="text-align: center;">
                                <a t-att-href="'/shop/category/' + str(category.id)">
                                    <img t-att-src="'/web/image/product.public.category/' + str(category.id) + '/image_1920'" 
                                        class="d-block" 
                                        t-att-alt="category.name" 
                                        style="width: 150px; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                                    <p style="font-family: 'Questrial', sans-serif; font-size: 16px; color: #333; margin-top: 10px;">
                                        <t t-esc="category.name" />
                                    </p>
                                </a>
                                <div class="d-flex justify-content-center gap-2 flex-wrap mt-2">
                                    <t t-set="subcategories" t-value="request.env['product.public.category'].sudo().search([('parent_id', '=', category.id)], limit=5)" />
                                    <t t-foreach="subcategories" t-as="subcategory">
                                        <a t-att-href="'/shop/category/' + str(subcategory.id)">
                                            <img t-att-src="'/web/image/product.public.category/' + str(subcategory.id) + '/image_1920'" 
                                                class="d-block" 
                                                t-att-alt="subcategory.name" 
                                                style="width: 100px; height: auto; object-fit: contain; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);" />
                                            <p style="font-family: 'Questrial', sans-serif; font-size: 14px; color: #666; margin-top: 5px;">
                                                <t t-esc="subcategory.name" />
                                            </p>
                                        </a>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
                <div class="oe_structure container mt-4" id="sugerencia_custom_block">
                    <!-- This empty div allows for customizable content blocks to be inserted -->
                </div>



            </div>
        </t>
    </template>
</odoo>