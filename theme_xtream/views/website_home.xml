<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_xtream.xtream_inicio" name="Inicio">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty" style="font-family: 'Questrial', sans-serif;">
                <!-- Verifica que la ruta de la imagen sea válidas -->
                <img src="/theme_xtream/static/src/img/product-img/imagenes_home.png" alt="Image" style="width: 100%; height: auto;" />
                <div style="display: flex; align-items: center; justify-content: space-between; background-color: white; border-radius: 10px; padding: 10px 20px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); width: 90%; max-width: 600px; margin: 20px auto; flex-wrap: wrap;">
                    <div style="font-size: 14px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-align: center; flex: 1 1 100%; margin-bottom: 10px;">
                        Pago Seguro y Confiable
                    </div>
                    <div style="flex: 1 1 auto; text-align: center; margin-bottom: 10px;">
                        <img src="/theme_xtream/static/src/img/product-img/pagos.png" alt="Pagos" style="height: 70px; max-width: 100%;"/>
                    </div>
                    <div style="flex: 1 1 100%; display: flex; align-items: center; justify-content: center; font-family: 'Questrial', sans-serif; font-size: 14px; color: #007bff; text-align: center;">
                        <img src="/theme_xtream/static/src/img/product-img/flecha.png" alt="Flecha" style="height: 35px; margin-right: 5px;" />
                        <a href="/payment_policies" style="font-size: 14px; font-weight: bold; color: #333; font-family: 'Questrial', sans-serif; text-align: center; text-decoration: none;">Ver métodos</a>
                    </div>
                </div>

                <!-- Línea divisoria -->
                <hr style="border-top: 1px solid #ddd;"/>

                <!-- Bloque de productos en formato carrusel -->
                <div class="container mt-4">
                    <h2 class="text-center">Nuestros Productos</h2>
                    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <t t-set="visited_products" t-value="request.env['product.template'].search([('website_published', '=', True)], limit=5)" />
                            <t t-foreach="visited_products" t-as="product" t-enumerate="True">
                                <div t-att-class="'carousel-item' + (' active' if enumerate[0] == 0 else '')">
                                    <div class="row justify-content-center">
                                        <div class="col-md-4">
                                            <div class="card h-100 text-center">
                                                <!-- Imagen del producto -->
                                                <div class="oe_product_image position-relative overflow-hidden">
                                                    <a t-att-href="'/shop/product/' + str(product.id)" class="oe_product_image_link d-block position-relative">
                                                        <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                            class="card-img-top img-fluid" 
                                                            alt="Product Image" 
                                                            style="height: 200px; object-fit: contain;" />
                                                    </a>
                                                </div>
                                                <!-- Información del producto -->
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <a t-att-href="'/shop/product/' + str(product.id)" class="text-decoration-none text-dark">
                                                            <t t-esc="product.name" />
                                                        </a>
                                                    </h5>
                                                    <p class="card-text text-muted">
                                                        $<t t-esc="'%.2f' % product.list_price" />
                                                    </p>
                                                </div>
                                                <!-- Botones de acción -->
                                                <div class="card-footer bg-transparent border-0">
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <button type="button" class="btn btn-light" title="Agregar a la lista de deseos">
                                                            <span class="fa fa-heart"></span>
                                                        </button>
                                                        <a t-att-href="'/shop/product/' + str(product.id)" class="btn btn-primary">
                                                            Ver Producto
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <!-- Controles del carrusel -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>