<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- To inherit footer -->
    <template id="theme_xtream_footer" inherit_id="website.layout" name="Xtream Footer">
        <xpath expr="//footer" position="replace">
            <section class="body_section">
                <section class="card-footer" style="background-color: #ededed;">
                    <div class="footer_content">
                        <div class="container">
                            <div class="row">
                                <!-- Left Column - Address -->
                                <div class="col-lg-4 col-12">
                                    <div class="footer_links">
                                        <h4 style="font-family: 'Questrial', sans-serif;">DIRECCIÓN</h4>
                                        <ul style="list-style: none; padding-left: 0;">
                                            <li><i class="fa fa-map-marker"></i> Novusred.mx</li>
                                            <li>Av. Bonampak Supermanzana 4A Manzana 1 Lote 4C- Piso 9 No. 901</li>
                                            <li>Torre Kun 21° 86°</li>
                                            <li>77500 Cancún, México</li>
                                            <li><i class="fa fa-envelope"></i> ventas@novusred.com</li>
                                            <li><i class="fa fa-phone"></i> 554440 8181</li>
                                            <li><i class="fa fa-phone"></i> 998364 2843</li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- Middle Column - Policies -->
                                <div class="col-lg-4 col-12">
                                    <div class="footer_links" style="font-family: 'Questrial', sans-serif;">
                                        <h4>INFORMACIÓN</h4>
                                        <ul>
                                            <li class="slide-in-left"><a href="/policies">Términos y condiciones</a></li>
                                            <li class="slide-in-left"><a href="/privacy_policy">Política de privacidad</a></li>
                                            <li class="slide-in-left"><a href="/delivery_policies">Política de envíos</a></li>
                                            <li class="slide-in-left"><a href="/refund_policies">Política de reembolsos</a></li>
                                            <li class="slide-in-left"><a href="/payment_policies">Política de pagos</a></li>
                                            <li class="slide-in-left"><a href="/warranty_policies">Garantías</a></li>
                                            <li class="slide-in-left"><a href="/purchasing_policies">Política de compras</a></li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- Right Column - My Account -->
                                <div class="col-lg-4 col-12">
                                    <div class="footer_links" style="font-family: 'Questrial', sans-serif;">
                                        <h4>MI CUENTA</h4>
                                        <ul>
                                            <li><a href="/my/account">Mi cuenta</a></li>
                                            <li><a href="/my/addresses">Direcciones</a></li>
                                            <li><a href="/my/orders">Pedidos</a></li>
                                            <li><a href="/my/invoices">Facturas fiscales</a></li>
                                            <li><a href="/contactus">Contacto</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Newsletter and Social Media -->
                            <div class="row mt-4">
                                <div class="col-12 text-center">
                                    <div class="subscribe">
                                        <h4>Suscríbete a nuestro boletín</h4>
                                        <div class="input-group md-form form-sm form-2">
                                            <input class="form-control red-border" type="text" placeholder="Tu correo electrónico" aria-label="Your_email_here"/>
                                            <div class="input-group-append" style="cursor: pointer;">
                                                <span class="input-group-text" id="basic-text1">SUSCRIBIR</span>
                                            </div>
                                        </div>
                                        <div class="footer_icon mt-3">
                                            <a href="#"><span class="fa fa-pinterest"/></a>
                                            <a href="#"><span class="fa fa-linkedin"/></a>
                                            <a href="#"><span class="fa fa-facebook"/></a>
                                            <a href="#"><span class="fa fa-twitter"/></a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Bottom Logo and Copyright -->
                            <div class="row mt-4 text-center">
                                <div class="col-12">
                                    <img src="/theme_xtream/static/src/img/marcas/Novusred 2025.png" alt="Logo" style="max-width: 200px; height: auto; margin-bottom: 15px;"/>
                                    <p style="font-family: 'Questrial', sans-serif;">
                                        Novusred © 2021 Todos los derechos reservados, operado por Novusred Sinergia en Tecnología SAPI de CV
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    </section>
            </section>
        </xpath>
    </template>
</odoo>