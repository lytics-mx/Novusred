                        <!-- Información Section Mobile -->
                        <div class="mb-3">
                            <button class="btn w-100 text-start p-3" type="button" data-bs-toggle="collapse" data-bs-target="#informacionMobile" aria-expanded="false" 
                                    style="background-color: white; border: 1px solid #ddd; border-radius: 8px; font-weight: bold; font-size: 16px;">
                                Información
                                <i class="fa fa-chevron-down float-end mt-1"></i>
                            </button>
                            <div class="collapse" id="informacionMobile">
                                <div class="card card-body" style="border: 1px solid #ddd; border-top: none; border-radius: 0 0 8px 8px;">
                                    <ul style="list-style: none; padding: 0; margin: 0;">
                                        <li class="mb-2"><a href="/delivery_policies" style="text-decoration: none; color: #666;">• Envío</a></li>
                                        <li class="mb-2"><a href="/refund_policies" style="text-decoration: none; color: #666;">• Devoluciones y Conformidades</a></li>
                                        <li class="mb-2"><a href="/purchasing_policies" style="text-decoration: none; color: #666;">• Términos y Condiciones</a></li>
