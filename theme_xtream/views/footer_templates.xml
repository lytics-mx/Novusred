<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="theme_xtream_footer" inherit_id="web.frontend_layout" name="Xtream Footer">
        <xpath expr="//div[@id='footer']" position="replace">
            <div class="footer_content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-12">
                            <div class="wrapper_head">
                                <a href="/">
                                    <img src="/theme_xtream/static/src/img/marcas/Novusred 2025.png" alt="Logo" style="max-width: 150px; height: auto;"/>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-12">
                            <div class="footer_links" style="font-family: 'Questrial', sans-serif;">
                                <ul>
                                    <li><a href="/about">Sobre nosotros</a></li>
                                    <li><a href="/blog">Blog</a></li>
                                    <li><a href="/contactus">Contáctanos</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-12">
                            <div class="footer_links" style="font-family: 'Questrial', sans-serif;">
                                <ul>
                                    <li><a href="/policies">Términos y condiciones</a></li>
                                    <li><a href="/privacy_policy">Política de privacidad</a></li>
                                    <li><a href="/delivery_policies">Política de envíos</a></li>
                                    <li><a href="/refund_policies">Política de reembolsos</a></li>
                                    <li><a href="/payment_policies">Política de pagos</a></li>
                                    <li><a href="/warranty_policies">Garantías</a></li>
                                    <li><a href="/purchasing_policies">Política de compras</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-5 col-12">
                            <div class="subscribe">
                                <h4>Subscribe to our newsletter</h4>
                                <div class="input-group">
                                    <input class="form-control" type="text" placeholder="Your email here"/>
                                    <button class="btn btn-primary">SUBSCRIBE</button>
                                </div>
                            </div>
                            <div class="footer_icon mt-3">
                                <a href="#" class="me-2"><i class="fa fa-pinterest"/></a>
                                <a href="#" class="me-2"><i class="fa fa-linkedin"/></a>
                                <a href="#" class="me-2"><i class="fa fa-facebook"/></a>
                                <a href="#" class="me-2"><i class="fa fa-twitter"/></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
