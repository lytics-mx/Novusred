<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- To inherit footer -->
    <template id="theme_xtream_footer" inherit_id="website.layout" name="Xtream Footer">
        <xpath expr="//footer" position="replace">
            <section class="body_section">
                <section class="card-footer">
                    <div class="footer_content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-3 col-12">
                                    <div class="wrapper_head">
                                        <a href="/">
                                            <div class="heading">
                                                <img src="/theme_xtream/static/src/img/marcas/Novusred 2025.png" alt="Logo" style="max-width: 250px; height: auto;"/>
                                            </div>
                                        </a>
                                        <div class="made_by">
                                            Copyright ©2024 All rights reserved | This template is made
                                            with <span class="fa fa-heart"/> by <a href="#" class="cybro"></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-2 col-12">
                                    <div class="footer_links" style="font-family: 'Questrial', sans-serif;">
                                        <ul>
                                            <li class="scale-up-ver-center"><a href="/about">Sobre nosotros</a></li>
                                            <li class="scale-up-ver-center"><a href="/blog">Blog</a></li>
                                            <li class="scale-up-ver-center"><a href="/contactus">Contáctanos</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-2 col-12">
                                    <div class="footer_links" style="font-family: 'Questrial', sans-serif;">
                                        <ul>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/about">Sobre nosotros</a></li>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/policies">Términos y condiciones</a></li>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/privacy_policy">Política de privacidad</a></li>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/delivery_policies">Política de envíos</a></li>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/refund_policies">Política de reembolsos</a></li>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/payment_policies">Política de pagos</a></li>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/warranty_policies">Garantías</a></li>
                                            <li class="slide-in-left" style="font-family: 'Questrial', sans-serif;"><a href="/purchasing_policies">Política de compras</a></li></ul>
                                    </div>
                                </div>
                                <div class="col-lg-5  col-12">
                                    <div class="subscribe">
                                        <h4>Subscribe to our newsletter</h4>
                                        <div class="input-group md-form form-sm form-2 ">
                                            <input class="form-control  red-border" type="text" placeholder="Your email here"
                                                   aria-label="Your_email_here"/>
                                            <div class="input-group-append" style="cursor: pointer;">
                                                <span class="input-group-text" id="basic-text1">SUBSCRIBE</span>
                                            </div>
                                        </div>
                                        <p class='warning' style='color: red; display: none;'/>
                                    </div>
                                    <div class="footer_icon">
                                        <a href="#"><span class="fa fa-pinterest"/></a>
                                        <a href="#"><span class="fa fa-linkedin"/></a>
                                        <a href="#"><span class="fa fa-facebook"/></a>
                                        <a href="#"><span class="fa fa-twitter"/></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </section>
        </xpath>
    </template>
</odoo>
