<template id="wishlist_template" name="Wishlist Page">
    <t t-call="website.layout">
        <div class="container">
            <h2>
                <a href="/buy">Compras</a> > 
                <a href="/shop/wishlist">Favoritos</a>
            </h2>
            <div class="wishlist">
                <t t-foreach="wishlist_items" t-as="item">
                    <div class="wishlist-item">
                        <img t-att-src="item['image_url']" alt="Product Image" class="product-image"/>
                        <div class="product-details">
                            <h3 t-esc="item['name']"/> por <span t-esc="item['brand']"/>
                            <p>
                                <span class="price" t-esc="item['price']"/> 
                                <span class="discount" t-esc="item['discount']"/>
                            </p>
                            <p>
                                <span class="shipping" t-esc="item['shipping']"/>
                            </p>
                            <p>
                                Resoluci√≥n: <span t-esc="item['resolution']"/>
                            </p>
                            <a href="#" class="remove-link">Eliminar</a>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</template>