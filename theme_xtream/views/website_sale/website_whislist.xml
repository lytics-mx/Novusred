<odoo>
    <template id="wishlist_template" name="Wishlist Page">
        <t t-call="website.layout">
            <div class="container">
                <h2>Compras > Favoritos</h2>
                <div class="products-list">
                    <t t-foreach="wishlist_items" t-as="item" t-key="item.id">
                        <a t-att-href="'/shop/product/%s' % item.product_id.id" style="text-decoration: none; color: inherit;">
                            <div class="product-list-item p-3" style="border: 1px solid #dee2e6; border-radius: 8px; background: #fff; margin-bottom: 0;">
                                <div class="row align-items-center">
                                    <!-- Imagen del producto -->
                                    <div class="col-3">
                                        <img t-att-src="'/web/image/product.template/%s/image_1024' % item.product_id.id" 
                                             class="img-fluid d-block mx-auto" alt="Product Image" style="max-height: 182px; object-fit: contain;"/>
                                    </div>
                                    <!-- Detalles del producto -->
                                    <div class="col-9">
                                        <h6 class="card-title" style="font-size:16px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; margin-bottom:0;">
                                            <t t-esc="item.product_id.name" />
                                        </h6>
                                        <span class="fw-bold d-block mobile-main-price" style="font-size: 25px;">
                                            $<t t-esc="'{:,}'.format(int(item.product_id.list_price))" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>