<odoo>
    <template id="wishlist_template" name="Favoritos">
        <t t-call="website.layout">
            <div class="container">
                <div style="margin-bottom: 10px;">
                    <a href="/checkout" style="font-size:16px; color:#656565; text-decoration:none;">Compras</a>
                    &#160;&gt;&#160;
                    <a href="/shop/whislist" style="font-size:16px; color:#656565; text-decoration:none;">Favoritos</a>
                </div>
                <div style="font-size:22px; color:#000000; font-weight:normal; margin-bottom: 20px;">
                    Favoritos
                </div>
                <div class="products-list">
                    <t t-foreach="wishlist_items" t-as="item" t-key="item.id">
                        <div class="product-list-item p-3" style="border: 1px solid #dee2e6; border-radius: 8px; background: #fff; margin-bottom: 0; position: relative;">
                            <!-- Checkbox arriba del producto -->
                            <div style="position: absolute; top: 10px; left: 10px; z-index: 2; display: flex; align-items: center;">
                                <input type="checkbox" name="wishlist_select" t-att-value="item.id" style="width:18px; height:18px;"/>
                                <span style="font-size:14px; color:#656565; margin-left:6px;">Eliminar favoritos seleccionados</span>
                            </div>
                            <a t-att-href="'/shop/product/%s' % item.product_id.id" style="text-decoration: none; color: inherit;">
                                <div class="row align-items-center">
                                    <!-- Imagen del producto -->
                                    <div class="col-3">
                                        <img t-att-src="'/web/image/product.template/%s/image_1024' % item.product_id.id" 
                                             class="img-fluid d-block mx-auto" alt="Product Image" style="max-height: 182px; object-fit: contain;"/>
                                    </div>
                                    <!-- Detalles del producto -->
                                    <div class="col-9">
                                        <h6 class="card-title" style="font-size:16px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; margin-bottom:0;">
                                            <t t-esc="item.product_id.name" />
                                        </h6>
                                        <span class="fw-bold d-block mobile-main-price" style="font-size: 25px;">
                                            $<t t-esc="'{:,}'.format(int(item.product_id.list_price))" />
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>