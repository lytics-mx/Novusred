<odoo>
<template id="product_template_page" name="Product Template Page">
    <t t-call="web.layout">
        <div class="container my-4">
            <div class="row">
                <!-- Galería de miniaturas a la izquierda -->
                <div class="col-2 d-none d-md-flex flex-column align-items-start">
                    <div class="d-flex flex-column gap-2 align-items-center" id="product-thumbs" style="align-items: flex-start;">
                        <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'"
                             class="img-thumbnail mb-2 product-thumb active thumb-mini"
                             t-att-data-img="'/web/image/product.template/' + str(product.id) + '/image_1920'"
                             style="cursor:pointer;" />
                        <t t-if="product.product_image_ids">
                            <t t-foreach="product.product_image_ids" t-as="img">
                                <img t-att-src="'/web/image/product.image/' + str(img.id) + '/image_1920'"
                                     class="img-thumbnail mb-2 product-thumb thumb-mini"
                                     t-att-data-img="'/web/image/product.image/' + str(img.id) + '/image_1920'"
                                     style="cursor:pointer;" />
                            </t>
                        </t>
                    </div>
                </div>
                <!-- Imagen principal al centro -->
                <div class="col-12 col-md-6 text-center d-flex align-items-start justify-content-center">
                    <img id="main-product-img"
                         t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'"
                         class="img-fluid main-img-large"
                         style="max-height:580px;cursor:pointer;"/>
                </div>
                <!-- Información del producto a la derecha -->
                <div class="col-12 col-md-4">
                    <div class="card p-3 mb-3">
                        <h5 t-esc="product.name"/>
                        <span class="text-muted" t-esc="product.default_code"/>
                        <div class="mt-2">
                            <span class="h4 text-primary" t-esc="formatLang(product.list_price, currency_obj=product.currency_id)"/>
                            <span class="text-danger ml-2">21% OFF</span>
                        </div>
                        <div class="text-success">En stock</div>
                        <div class="mt-2">
                            <span class="badge badge-success">Envío gratis</span>
                        </div>
                        <div class="mt-2">
                            <span class="text-muted" style="font-size:12px;">Código: <t t-esc="product.default_code"/></span>
                        </div>
                        <div class="mt-2">
                            <!-- <img src="/your/payment/icons.png" style="max-width: 120px;"/> -->
                        </div>
                        <div class="mt-3 d-flex flex-column gap-2">
                            <button class="btn btn-primary btn-block">Agregar al carrito</button>
                            <button class="btn btn-outline-primary btn-block">Comprar</button>
                        </div>
                    </div>
                    <!-- Imagen de la marca -->
                    <div class="card mb-3 p-3 text-center brand-image">
                        <!-- <img src="/your/brand/dahua-logo.png" alt="Dahua" style="max-width: 180px; margin: 0 auto;"/> -->
                        <div class="mt-2 mb-2">
                            <strong>Dahua</strong><br/>
                            Más de 3000 productos
                        </div>
                        <a href="#" class="btn btn-primary btn-block">Ir a la marca</a>
                    </div>
                    <!-- Línea visible -->
                    <hr style="border: 2px solid #1976d2; margin: 24px 0 16px 0; width: 100%;" />
                    <!-- Productos que podrían interesarte (lado derecho) -->
                    <div class="card mb-3 p-3">
                        <h5>Productos que podrían interesarte</h5>
                        <div class="d-flex flex-row justify-content-between align-items-center">
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product1.jpg" alt="Producto 1" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 1</div>
                                <div style="font-size: 12px; color: #1976d2;">$600,000</div>
                            </div>
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product2.jpg" alt="Producto 2" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 2</div>
                                <div style="font-size: 12px; color: #1976d2;">$100,000</div>
                            </div>
                            <div class="text-center mx-1">
                            <!-- <img src="/your/product3.jpg" alt="Producto 3" style="width: 70px;" /> -->
                            <div style="font-size: 12px;">Producto 3</div>
                            <div style="font-size: 12px; color: #1976d2;">$100,000</div>
                            </div>
                        </div>
                        <div class="mt-2 text-center">
                            <strong>Precio total: $800,000</strong>
                            <button class="btn btn-primary btn-sm ml-2">Agregar al carrito</button>
                        </div>
                    </div>
                    <!-- Promociones -->
                    <div class="card p-3">
                        <h5>Promociones</h5>
                        <div class="mb-2">
                            <div class="d-flex align-items-center">
                                <!-- <img src="/your/promo1.jpg" style="width: 40px;"/> -->
                                <div class="ml-2">
                                    <div style="font-size: 13px;">Laptop Gamer Predator Acer</div>
                                    <div style="font-size: 12px; color: #1976d2;">$1,000,000</div>
                                    <span class="text-danger" style="font-size: 11px;">21% OFF</span>
                                </div>
                            </div>
                        </div>
                        <!-- Repite para más promociones -->
                    </div>
                </div>
            </div>
            <!-- Segunda fila: productos sugeridos, descripción, ficha técnica, de la misma marca -->
            <div class="row mt-4">
                <div class="col-12 col-md-8">
                    <!-- Productos que podrían interesarte (lado izquierdo) -->
                    <div>
                        <h5>Productos que podrían interesarte</h5>
                        <hr/>
                        <div class="d-flex flex-row justify-content-between align-items-center">
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product1.jpg" alt="Producto 1" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 1</div>
                                <div style="font-size: 12px; color: #1976d2;">$600,000</div>
                            </div>
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product2.jpg" alt="Producto 2" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 2</div>
                                <div style="font-size: 12px; color: #1976d2;">$100,000</div>
                            </div>
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product3.jpg" alt="Producto 3" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 3</div>
                                <div style="font-size: 12px; color: #1976d2;">$100,000</div>
                            </div>
                        </div>
                        <div class="mt-2 text-center">
                            <strong>Precio total: $800,000</strong>
                            <button class="btn btn-primary btn-sm ml-2">Agregar al carrito</button>
                        </div>
                    </div>
                    <!-- Descripción -->
                    <div class="mt-4">
                        <h5>Descripción</h5>
                        <ul>
                            <li>Alto de frecuencia: 2200-2600 MHz.</li>
                            <li>Organizador de cables.</li>
                            <li>Teclado retroiluminado.</li>
                            <li>Disco SSD: 1 TB.</li>
                            <li>Memoria RAM: 16 GB.</li>
                            <li>Peso: 2.4 kg.</li>
                        </ul>
                    </div>
                    <!-- Ficha técnica -->
                    <div class="mt-4">
                        <h5>Ficha técnica</h5>
                        <table class="table table-bordered">
                            <tr>
                                <th>Modelo</th>
                                <td>PT315-53S72V2</td>
                            </tr>
                            <tr>
                                <th>Marca</th>
                                <td>Acer</td>
                            </tr>
                            <tr>
                                <th>Actualizado</th>
                                <td>2023-03-13 17:12:53</td>
                            </tr>
                        </table>
                    </div>
                    <!-- De la misma marca -->
                    <div class="mt-4">
                        <h5>De la misma marca</h5>
                        <div class="d-flex flex-row justify-content-between align-items-center">
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product1.jpg" alt="Producto 1" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 1</div>
                                <div style="font-size: 12px; color: #1976d2;">$800,000</div>
                            </div>
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product2.jpg" alt="Producto 2" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 2</div>
                                <div style="font-size: 12px; color: #1976d2;">$800,000</div>
                            </div>
                            <div class="text-center mx-1">
                                <!-- <img src="/your/product3.jpg" alt="Producto 3" style="width: 70px;"> -->
                                <div style="font-size: 12px;">Producto 3</div>
                                <div style="font-size: 12px; color: #1976d2;">$800,000</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Script para galería -->
        <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', function() {
                var mainImg = document.getElementById('main-product-img');
                var thumbs = document.querySelectorAll('#product-thumbs .product-thumb');
                thumbs.forEach(function(thumb) {
                    thumb.addEventListener('click', function() {
                        mainImg.src = thumb.getAttribute('data-img');
                        thumbs.forEach(function(t) { t.classList.remove('active'); });
                        thumb.classList.add('active');
                    });
                });
                mainImg.addEventListener('click', function() {
                    var firstThumb = document.querySelector('#product-thumbs .product-thumb');
                    if (firstThumb) {
                        mainImg.src = firstThumb.getAttribute('data-img');
                        thumbs.forEach(function(t) { t.classList.remove('active'); });
                        firstThumb.classList.add('active');
                    }
                });
            });
        </script>
    </t>
</template>
</odoo>
