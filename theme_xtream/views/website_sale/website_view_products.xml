<odoo>
    <template id="website_view_product_xtream" inherit_id="website_sale.product">
        <xpath expr="//div[@id='wrap']" position="replace">
            <t t-call-assets="website.assets_frontend" t-js="true"/>
            <t t-call-assets="website_sale.assets_frontend" t-js="true"/>
            <div id="wrap" class="oe_structure oe_website_sale" style="padding: 40px; background: #f5f5f5;">
                <div id="product_option_block"></div>
                <div class="container" style="max-width: 1200px;">
                    <div class="row" style="display: flex;">
                        <!-- Galería lateral izquierda -->
                        <div class="col-2" style="padding: 10px;">
                            <div>
                                <img t-att-src="product.image_1920 and '/web/image/product.template/' + str(product.id) + '/image_1920'" style="width:100%; border-radius: 8px;"/>
                            </div>
                            <div style="margin-top: 10px;">
                                <t t-foreach="product.product_variant_ids" t-as="variant">
                                    <img t-att-src="'/web/image/product.product/' + str(variant.id) + '/image_128'" style="width: 60px; margin-bottom: 8px; border: 1px solid #ccc; border-radius: 4px; display: block;"/>
                                </t>
                            </div>
                        </div>
                        <!-- Detalles del producto centro -->
                        <div class="col-6" style="padding: 10px;">
                            <h3 t-esc="product.name"/>
                            <p style="color: #888;" t-esc="product.default_code"/>
                            <div>
                                <span style="font-size: 24px; color: #222; font-weight: bold;">
                                    <t t-esc="product.lst_price"/> <span style="font-size: 16px;">MXN</span>
                                </span>
                                <span style="color: #e74c3c; font-size: 14px; margin-left: 10px;">21% OFF</span>
                            </div>
                            <div style="margin: 10px 0;">
                                <span style="color: #27ae60;">En stock</span>
                            </div>
                            <div>
                                <button class="btn btn-primary" style="width: 200px;">Agregar al carrito</button>
                            </div>
                            <!-- Descripción y ficha técnica centradas debajo -->
                            <div style="margin-top: 20px; background: #fff; border-radius: 8px; padding: 16px;">
                                <h5>Descripción</h5>
                                <p t-esc="product.description_sale"/>
                                <h5 style="margin-top:20px;">Ficha técnica</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td>Modelo</td>
                                        <td t-esc="product.default_code"/>
                                    </tr>
                                    <tr>
                                        <td>SKU</td>
                                        <td t-esc="product.id"/>
                                    </tr>
                                    <!-- Más filas si es necesario -->
                                </table>
                            </div>
                        </div>
                        <!-- Promociones y marca derecha -->
                        <div class="col-4" style="padding: 10px;">
                            <div style="background: #fff; border-radius: 8px; padding: 16px; margin-bottom: 20px;">
                                <img src="/path/to/brand_logo.png" style="width: 100%; max-width: 180px;"/>
                                <div style="margin-top: 10px;">
                                    <span>Más de 3000 productos</span>
                                </div>
                            </div>
                            <div style="background: #fff; border-radius: 8px; padding: 16px;">
                                <h5>Promociones</h5>
                                <t t-foreach="promotions" t-as="promo">
                                    <div style="margin-bottom: 10px;">
                                        <img t-att-src="promo.image_url" style="width: 60px;"/>
                                        <span t-esc="promo.name"/>
                                        <span style="color: #e74c3c;" t-esc="promo.discount"/>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                    <!-- Productos que podrían interesarte -->
                    <div style="margin-top: 40px;">
                        <h4>Productos que podrían interesarte</h4>
                        <div class="row" style="display: flex;">
                            <t t-foreach="related_products" t-as="rel">
                                <div class="col-3" style="padding: 10px;">
                                    <div style="background: #fff; border-radius: 8px; padding: 10px;">
                                        <img t-att-src="'/web/image/product.template/' + str(rel.id) + '/image_1920'" style="width: 100%;"/>
                                        <div t-esc="rel.name" style="font-size: 14px;"/>
                                        <div style="color: #222; font-weight: bold;" t-esc="rel.lst_price"/>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                    <!-- De la misma marca -->
                    <div style="margin-top: 40px;">
                        <h4>De la misma marca</h4>
                        <div class="row" style="display: flex;">
                            <t t-foreach="same_brand_products" t-as="brand_prod">
                                <div class="col-3" style="padding: 10px;">
                                    <div style="background: #fff; border-radius: 8px; padding: 10px;">
                                        <img t-att-src="'/web/image/product.template/' + str(brand_prod.id) + '/image_1920'" style="width: 100%;"/>
                                        <div t-esc="brand_prod.name" style="font-size: 14px;"/>
                                        <div style="color: #222; font-weight: bold;" t-esc="brand_prod.lst_price"/>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                
            <div id="product_option_block"></div>
            <div id="o_product_terms_and_share"></div>
            </div>
        </xpath>
    </template>
</odoo>
