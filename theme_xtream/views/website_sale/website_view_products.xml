<odoo>
    <template id="website_view_product_xtream" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_option_block']" position="replace">
            <t t-call-assets="website.assets_frontend" t-js="true"/>
            <t t-call-assets="website_sale.assets_frontend" t-js="true"/>
            <div id="wrap" class="oe_structure oe_website_sale" style="background:#f5f6fa; padding: 30px;">
                <div class="container" style="background:#fff; border-radius:8px; padding:30px;">
                    <div class="row">
                        <!-- Imagenes del producto -->
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-2">
                                    <t t-foreach="product.image_ids" t-as="img">
                                        <img t-att-src="img.url" class="img-thumbnail mb-2" style="width:60px;"/>
                                    </t>
                                </div>
                                <div class="col-10">
                                    <img t-att-src="product.image_1920" class="img-fluid" style="max-height:350px;"/>
                                </div>
                            </div>
                        </div>
                        <!-- Detalles del producto -->
                        <div class="col-md-6">
                            <h4 t-esc="product.name"/>
                            <span class="text-muted" t-esc="product.default_code"/>
                            <div class="mt-3">
                                <span class="h3 text-danger" t-esc="product.website_price"/>
                                <span class="text-muted" style="text-decoration:line-through;" t-if="product.list_price &gt; product.website_price" t-esc="product.list_price"/>
                                <span class="badge bg-success ms-2" t-if="product.list_price &gt; product.website_price">
                                    <t t-esc="int((1 - product.website_price/product.list_price)*100)"/>% OFF
                                </span>
                            </div>
                            <div class="mt-2">
                                <span class="text-success">Envío gratis</span>
                            </div>
                            <div class="mt-2">
                                <span class="text-muted">Código: </span>
                                <span t-esc="product.default_code"/>
                            </div>
                            <div class="mt-4">
                                <form t-att-action="'/shop/cart/update'" method="post">
                                    <input type="hidden" name="product_id" t-att-value="product.id"/>
                                    <button type="submit" class="btn btn-primary btn-block mb-2">Agregar al carrito</button>
                                    <button type="submit" class="btn btn-success btn-block">Comprar</button>
                                </form>
                            </div>
                            <div class="mt-3">
                                <img src="/path/to/visa.png" style="height:24px;"/>
                                <img src="/path/to/mastercard.png" style="height:24px;"/>
                                <img src="/path/to/paypal.png" style="height:24px;"/>
                            </div>
                        </div>
                    </div>
                    <!-- Productos relacionados -->
                    <div class="mt-5">
                        <h5>Productos que podrían interesarte</h5>
                        <div class="row">
                            <t t-foreach="related_products" t-as="rel_prod">
                                <div class="col-md-3">
                                    <div class="card mb-3">
                                        <img t-att-src="rel_prod.image_1920" class="card-img-top" style="height:120px; object-fit:contain;"/>
                                        <div class="card-body">
                                            <h6 class="card-title" t-esc="rel_prod.name"/>
                                            <span class="text-danger" t-esc="rel_prod.website_price"/>
                                            <form t-att-action="'/shop/cart/update'" method="post">
                                                <input type="hidden" name="product_id" t-att-value="rel_prod.id"/>
                                                <button type="submit" class="btn btn-outline-primary btn-sm mt-2">Agregar</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                    <!-- Marca y promociones -->
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card p-3">
                                <img src="/path/to/dahua_logo.png" style="height:40px;"/>
                                <div class="mt-2">
                                    <span>Dahua</span>
                                    <br/>
                                    <span class="text-muted">Más de 3000 productos</span>
                                </div>
                                <a href="/shop/brand/dahua" class="btn btn-link p-0 mt-2">Ir a la marca</a>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card p-3">
                                <h6>Promociones</h6>
                                <!-- Aquí puedes agregar promociones -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>