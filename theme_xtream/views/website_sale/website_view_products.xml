                <style>
                    .product-thumb.thumb-mini {
                        width: 60px;
                        height: 60px;
                        object-fit: cover;
                        border-radius: 6px;
                    }
                    .main-img-large {
                        max-width: 100%;
                        max-height: 350px;
                        border-radius: 8px;
                        /* box-shadow: 0 2px 8px rgba(0,0,0,0.08); */ /* Eliminado el sombreado */
                    }
                    .product-thumb.active {
                        border: 2px solid #4285f4;
                    }

                    
                </style>
            </t>

            </div>
        </xpath>
    </template>
