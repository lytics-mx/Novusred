<odoo>
    <data>
        <template id="website_view_product_xtream" name="Custom Product Page">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <h1 t-esc="product.name"/>
                            <p>Precio: <span t-esc="product.list_price"/></p>
                            <p>Stock: <span t-esc="stock_message"/></p>
                            
                            <form action="/shop/cart/update" method="POST">
                                <input type="hidden" name="product_id" t-att-value="product.id"/>
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="number" name="add_qty" value="1" min="1"/>
                                <button type="submit" class="btn btn-primary">Agregar al carrito</button>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>