<odoo>
    <template id="website_discover" name="Tendencias">
        <t t-call="website.layout">
            <div id="wrap" style="background:#ededed;min-height:100vh;">
                <div class="container py-5">
                    <h2 class="text-left" style="margin-top:0; font-size:24px;">Tendencias</h2>
                    <p class="text-left" style="margin-bottom:2rem;">Lo más buscado</p>
                    <div class="row">
                        <!-- Categorías -->
                        <div class="col-md-3">
                            <div class="card p-3 shadow-sm" style="background:#fff;">
                                <h3 class="card-title" style="font-size:22px;">Categorías</h3>
                                <ul class="list-unstyled">
                                    <t t-foreach="categories" t-as="category">
                                        <li>
                                            <a t-att-href="'/subcategoria?category_id=%s' % category['category_id']" style="color:#777777;">
                                                <t t-esc="category['name']"/> (<t t-esc="category['product_count']"/>)
                                            </a>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                        <!-- Búsquedas populares -->
                        <div class="col-md-9">
                            <div class="card p-3 shadow-sm" style="background:#fff;">
                                <h3 class="card-title" style="font-size:22px;">Las búsquedas más populares en novusred</h3>
                                <div class="row">
                                    <t t-foreach="columns" t-as="column">
                                        <div class="col-md-4">
                                            <ul class="list-unstyled">
                                                <t t-foreach="column" t-as="category">
                                                    <li>
                                                        <a t-att-href="'/subcategoria?category_id=%s' % category['category_id']" style="color:#777777;">
                                                            <t t-esc="category['name']"/> (<t t-esc="category['product_count']"/>)
                                                        </a>
                                                    </li>
                                                </t>
                                            </ul>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>