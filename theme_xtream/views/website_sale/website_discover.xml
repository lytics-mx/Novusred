<odoo>
    <template id="website_discover" name="Tendencias">
        <t t-call="website.layout">
            <div id="wrap" style="background:#ededed;min-height:100vh;">
                <div class="container py-5">
                    <h2 class="text-left" style="margin-top:0;">Tendencias</h2>
                    <p class="text-left" style="margin-bottom:2rem;">Lo más buscado</p>
                    <div class="row">
                        <!-- Categorías -->
                        <div class="col-md-3">
                            <div class="card p-3 shadow-sm" style="background:#fff;">
                                <h3 class="card-title">Categorías</h3>
                                <ul class="list-unstyled">
                                    <t t-foreach="categories" t-as="category">
                                        <li>
                                            <t t-esc="category['name']"/> (<t t-esc="category['product_count']"/>)
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                        <!-- Búsquedas populares -->
                        <div class="col-md-9">
                            <div class="card p-3 shadow-sm" style="background:#fff;">
                                <h3 class="card-title">Las búsquedas más populares en novusred</h3>
                                <div class="row">
                                    <!-- <t t-foreach="columns" t-as="column">
                                        <div class="col-md-4">
                                            <ul class="list-unstyled">
                                                <t t-foreach="column" t-as="category">
                                                    <li>
                                                        <t t-esc="category['name']"/> (<t t-esc="category['product_count']"/>)
                                                    </li>
                                                </t>
                                            </ul>
                                        </div>
                                    </t> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>