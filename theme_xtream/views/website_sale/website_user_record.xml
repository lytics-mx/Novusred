<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_signup" name="Registro">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5" style="width: 1200px; height: 431px; opacity: 1; position: relative; top: 276px; left: 359px; border-radius: 7px; border: 2px solid #ccc; padding: 20px;">
                <h3 class="text-center mb-4">Ingresa tu información</h3>
                <form method="post" class="oe_signup_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    
                    <div class="row mb-3">
                        <div class="col-md-6" style="width: 482px; height: 36px; position: relative; top: 487px; left: 419px;">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" name="name" id="name" class="form-control" required="required" style="width: 482px; height: 36px; border-radius: 7px; border-width: 2px;"/>
                            <small class="form-text text-muted">Solo se permiten caracteres alfabéticos (letras) y el punto (.), seguidos de un espacio.</small>
                        </div>
                        <div class="col-md-6" style="width: 482px; height: 36px; position: relative; top: 487px; left: 419px;">
                            <label for="last_name" class="form-label">Apellidos</label>
                            <input type="text" name="last_name" id="last_name" class="form-control" required="required" style="width: 482px; height: 36px; border-radius: 7px; border-width: 2px;"/>
                            <small class="form-text text-muted">Solo se permiten caracteres alfabéticos (letras) y el punto (.), seguidos de un espacio.</small>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6" style="width: 482px; height: 36px; position: relative; top: 487px; left: 419px;">
                            <label for="login" class="form-label">Correo electrónico</label>
                            <input type="email" name="login" id="login" class="form-control" required="required" style="width: 482px; height: 36px; border-radius: 7px; border-width: 2px;"/>
                        </div>
                        <div class="col-md-6" style="width: 482px; height: 36px; position: relative; top: 487px; left: 419px;">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" name="password" id="password" class="form-control" required="required" style="width: 482px; height: 36px; border-radius: 7px; border-width: 2px;"/>
                            <small class="form-text text-muted">La contraseña debe tener un mínimo de 8 caracteres</small>
                        </div>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input type="checkbox" name="terms" id="terms" class="form-check-input" required="required"/>
                        <label for="terms" class="form-check-label">Acepto las condiciones generales y la política de confidencialidad</label>
                    </div>
                    
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary">Crear cuenta</button>
                    </div>
                    
                    <div class="text-center">
                        <p>¿Ya tienes una cuenta? <a href="/shop/login" class="text-decoration-none">Inicia sesión</a></p>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
