<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_signup" name="Registro">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-md-9">
                        <div class="card p-4 shadow-sm" style="background:#fff; border-radius: 12px;">
                            <h3 class="card-title text-center mb-4" style="font-size:24px;"><strong>Crear nueva cuenta</strong></h3>
                            <form method="post" class="oe_signup_form">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                
                                <div t-if="error" class="alert alert-danger" role="alert">
                                    <t t-esc="error"/>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-12 mb-3">
                                        <label for="name" class="form-label" style="font-size: 14px;">Nombre</label>
                                        <input type="text" name="name" id="name" class="form-control" required="required" style="border-radius: 4px;"/>
                                        <small class="form-text text-muted" style="font-size: 12px;">Solo se permiten caracteres alfabéticos (letras) y el punto (.), seguidos de un espacio.</small>
                                    </div>
                                    <div class="col-12">
                                        <label for="last_name" class="form-label" style="font-size: 14px;">Apellidos</label>
                                        <input type="text" name="last_name" id="last_name" class="form-control" required="required" style="border-radius: 4px;"/>
                                        <small class="form-text text-muted" style="font-size: 12px;">Solo se permiten caracteres alfabéticos (letras) y el punto (.), seguidos de un espacio.</small>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <label for="login" class="form-label" style="font-size: 14px;">Correo electrónico</label>
                                        <input type="email" name="login" id="login" class="form-control" required="required" style="border-radius: 4px;"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="password" class="form-label" style="font-size: 14px;">Contraseña</label>
                                        <input type="password" name="password" id="password" class="form-control" required="required" style="border-radius: 4px;"/>
                                        <small class="form-text text-muted" style="font-size: 12px;">La contraseña debe tener un mínimo de 8 caracteres</small>
                                    </div>
                                </div>
                                
                                <div class="mb-3 form-check">
                                    <input type="checkbox" name="terms" id="terms" class="form-check-input" required="required" style="border-radius: 4px;"/>
                                    <label for="terms" class="form-check-label" style="font-size: 14px;">Acepto las condiciones generales y la política de confidencialidad</label>
                                </div>
                                
                                <div class="d-grid gap-2 mb-3">
                                    <button type="submit" class="btn btn-primary" style="font-size: 16px; border-radius: 4px;">Crear cuenta</button>
                                </div>
                                
                                <div class="text-center">
                                    <p style="font-size: 14px;">¿Ya tienes una cuenta? <a href="/shop/login" class="text-decoration-none" style="color: #007bff;">Inicia sesión</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>