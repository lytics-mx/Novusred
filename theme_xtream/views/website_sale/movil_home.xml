<odoo>
    <template id="xtream_inicio_mobile" name="Inicio Móvil">
        <t t-call="website.layout">
            <div class="container mt-4">
                <!-- Banner principal -->
                <div class="row">
                    <div class="col-12">
                        <img src="/path/to/banner.jpg" alt="Envíos a todo México" class="img-fluid" />
                    </div>
                </div>

                <!-- Métodos de pago -->
                <div class="row text-center mt-3">
                    <div class="col-12">
                        <p class="mb-1">Pago Seguro y Confiable</p>
                        <img src="/path/to/payment-icons.png" alt="Métodos de pago" class="img-fluid" />
                    </div>
                </div>

                <!-- Última visita -->
                <div class="row mt-4">
                    <div class="col-12">
                        <h5 class="mb-3">Última visita</h5>
                        <div class="card shadow-sm product-card">
                            <a t-att-href="'/shop/product/' + str(last_viewed_product.id)">
                                <img t-att-src="'/web/image/product.template/' + str(last_viewed_product.id) + '/image_1920'" 
                                     class="card-img-top" alt="Última visita" />
                            </a>
                            <div class="card-body">
                                <h6 class="card-title product-name mb-2">
                                    <t t-esc="last_viewed_product.name.upper()" />
                                </h6>
                                <p class="text-orange mb-0">Envío gratis</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Productos recomendados -->
                <div class="row mt-4">
                    <div class="col-12">
                        <h5 class="mb-3">Te puede interesar</h5>
                        <div class="row row-cols-2 g-3">
                            <t t-foreach="recommended_products" t-as="product">
                                <div class="col">
                                    <div class="card shadow-sm product-card">
                                        <a t-att-href="'/shop/product/' + str(product.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                 class="card-img-top" alt="Producto recomendado" />
                                        </a>
                                        <div class="card-body">
                                            <h6 class="card-title product-name mb-2">
                                                <t t-esc="product.name.upper()" />
                                            </h6>
                                            <p class="text-orange mb-0">Envío gratis</p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Ofertas -->
                <div class="row mt-4">
                    <div class="col-12">
                        <h5 class="mb-3">Ofertas</h5>
                        <div class="row row-cols-2 g-3">
                            <t t-foreach="offers" t-as="offer">
                                <div class="col">
                                    <div class="card shadow-sm product-card">
                                        <a t-att-href="'/shop/product/' + str(offer.id)">
                                            <img t-att-src="'/web/image/product.template/' + str(offer.id) + '/image_1920'" 
                                                 class="card-img-top" alt="Oferta" />
                                        </a>
                                        <div class="card-body">
                                            <h6 class="card-title product-name mb-2">
                                                <t t-esc="offer.name.upper()" />
                                            </h6>
                                            <p class="text-orange mb-0">Envío gratis</p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Publicidad -->
                <div class="row mt-4">
                    <div class="col-12">
                        <img src="/path/to/ad-banner.jpg" alt="Publicidad" class="img-fluid" />
                    </div>
                </div>

                <!-- Marcas -->
                <div class="row mt-4 text-center">
                    <div class="col-3">
                        <img src="/path/to/brand1.png" alt="Marca 1" class="img-fluid" />
                    </div>
                    <div class="col-3">
                        <img src="/path/to/brand2.png" alt="Marca 2" class="img-fluid" />
                    </div>
                    <div class="col-3">
                        <img src="/path/to/brand3.png" alt="Marca 3" class="img-fluid" />
                    </div>
                    <div class="col-3">
                        <img src="/path/to/brand4.png" alt="Marca 4" class="img-fluid" />
                    </div>
                </div>

                <!-- Características adicionales -->
                <div class="row mt-4 text-center">
                    <div class="col-4">
                        <img src="/path/to/icon1.png" alt="Envíos rápidos" class="img-fluid mb-2" />
                        <p>Envíos rápidos</p>
                    </div>
                    <div class="col-4">
                        <img src="/path/to/icon2.png" alt="Pago seguro" class="img-fluid mb-2" />
                        <p>Pago seguro</p>
                    </div>
                    <div class="col-4">
                        <img src="/path/to/icon3.png" alt="Garantía" class="img-fluid mb-2" />
                        <p>Garantía</p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>