<odoo>
    <template id="website_subcategory" name="Subcategorias">
        <t t-call="website.layout">
            <div class="container mt-4">
                <!-- Sección de encabezado con texto e íconos -->
                
                <!-- Filtro móvil (solo visible en móvil) -->
                <div class="d-block d-md-none mb-3">
                   
                    <div class="mobile-filters-container">
                        <!-- Botón para abrir filtros con ícono de líneas -->
                        <button class="btn btn-outline-dark w-100 d-flex justify-content-between align-items-center" 
                                type="button" 
                                data-bs-toggle="collapse" 
                                data-bs-target="#mobileFilters" 
                                aria-expanded="false" 
                                aria-controls="mobileFilters"
                                style="border: 1px solid #dee2e6; border-radius: 8px; padding: 12px 16px; background: white; font-family: 'Questrial', sans-serif;">
                            <div class="d-flex align-items-center">
                                <span style="font-size: 14px; color: #848484;"><t t-esc="total_products"/> productos</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <span style="font-size: 14px; color: #333;">Filtros</span>
                                <div class="filter-icon ms-2">
                                    <div style="width: 16px; height: 2px; background: #333; margin: 2px 0;"></div>
                                    <div style="width: 16px; height: 2px; background: #333; margin: 2px 0;"></div>
                                    <div style="width: 16px; height: 2px; background: #333; margin: 2px 0;"></div>
                                </div>
                            </div>
                        </button>
                        
                        <!-- Panel de filtros colapsable -->
                        <div class="collapse" id="mobileFilters">
                            <div class="card card-body mobile-filters-panel" style="margin-top: 10px; font-family: 'Questrial', sans-serif;">
                                
                                <!-- Envío gratis -->
                                <div class="mb-3">
                                    <h6 class="text-orange fw-bold mb-2" style="color: #FF5207; font-size: 14px; font-family: 'Questrial', sans-serif;">Envío gratis</h6>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="mobileFreeShippingToggle"
                                               t-att-checked="'checked' if free_shipping else None" />
                                        <label class="form-check-label" for="mobileFreeShippingToggle" style="font-size: 13px; font-family: 'Questrial', sans-serif;">
                                            Solo productos con envío gratis
                                        </label>
                                    </div>
                                </div>
                                
                                <!-- Tipos de oferta -->
                                <div class="mb-3">
                                    <h6 style="font-size: 14px; color: #333; margin-bottom: 8px; font-family: 'Questrial', sans-serif;">Tipos de oferta</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=day%s' % ('&amp;free_shipping=true' if free_shipping else '')" 
                                           class="btn btn-sm btn-outline-secondary" style="font-size: 12px; padding: 4px 8px; font-family: 'Questrial', sans-serif;">
                                            Oferta del día
                                        </a>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=flash%s' % ('&amp;free_shipping=true' if free_shipping else '')" 
                                           class="btn btn-sm btn-outline-secondary" style="font-size: 12px; padding: 4px 8px; font-family: 'Questrial', sans-serif;">
                                            Oferta relámpago
                                        </a>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=current%s' % ('&amp;free_shipping=true' if free_shipping else '')" 
                                           class="btn btn-sm btn-outline-secondary" style="font-size: 12px; padding: 4px 8px; font-family: 'Questrial', sans-serif;">
                                            Ofertas activas
                                        </a>
                                    </div>
                                </div>
                                
                                <!-- Categorías -->
                                <div class="mb-3">
                                    <h6 style="font-size: 14px; color: #333; margin-bottom: 8px; font-family: 'Questrial', sans-serif;">Categorías</h6>
                                    <div class="mobile-categories-grid">
                                        <t t-foreach="categories_with_count" t-as="cat">
                                            <a t-att-href="'/shop/category/all?offers=true&amp;category_id=%s%s' % (cat['id'], '&amp;free_shipping=true' if free_shipping else '')" 
                                               class="btn btn-sm btn-outline-secondary mb-2" style="font-size: 12px; padding: 4px 8px; font-family: 'Questrial', sans-serif;">
                                                <span t-esc="cat['name']"/> (<span t-esc="cat['product_count']"/>)
                                            </a>
                                        </t>
                                    </div>
                                </div>
                                
                                <!-- Filtro por precio -->
                                <div class="mb-3">
                                    <h6 style="font-size: 14px; color: #333; margin-bottom: 8px; font-family: 'Questrial', sans-serif;">Precio</h6>
                                    <div class="d-flex flex-wrap gap-2 mb-3">
                                        <a t-att-href="'/shop/category/all?min_price=0&amp;max_price=500%s' % ('&amp;free_shipping=true' if free_shipping else '')" 
                                           class="btn btn-sm btn-outline-secondary" style="font-size: 12px; padding: 4px 8px; font-family: 'Questrial', sans-serif;">
                                            Hasta $500 (<t t-esc="price_ranges['0_500']"/>)
                                        </a>
                                        <a t-att-href="'/shop/category/all?min_price=500&amp;max_price=1000%s' % ('&amp;free_shipping=true' if free_shipping else '')" 
                                           class="btn btn-sm btn-outline-secondary" style="font-size: 12px; padding: 4px 8px; font-family: 'Questrial', sans-serif;">
                                            $500-$1000 (<t t-esc="price_ranges['500_1000']"/>)
                                        </a>
                                        <a t-att-href="'/shop/category/all?min_price=1000%s' % ('&amp;free_shipping=true' if free_shipping else '')" 
                                           class="btn btn-sm btn-outline-secondary" style="font-size: 12px; padding: 4px 8px; font-family: 'Questrial', sans-serif;">
                                            +$1000 (<t t-esc="price_ranges['1000_plus']"/>)
                                        </a>
                                    </div>
                                    
                                    <!-- Filtro personalizado de precio -->
                                    <form method="get" action="/shop/category/all" class="mobile-price-form">
                                        <div class="row g-2">
                                            <div class="col-5">
                                                <input type="number" class="form-control form-control-sm" name="min_price" placeholder="Desde" style="font-size: 13px; font-family: 'Questrial', sans-serif;" />
                                            </div>
                                            <div class="col-2 text-center pt-1" style="font-size: 13px;">—</div>
                                            <div class="col-5">
                                                <input type="number" class="form-control form-control-sm" name="max_price" placeholder="Hasta" style="font-size: 13px; font-family: 'Questrial', sans-serif;" />
                                            </div>
                                            <div class="col-12 mt-2">
                                                <t t-if="free_shipping">
                                                    <input type="hidden" name="free_shipping" value="true"/>
                                                </t>
                                                <button type="submit" class="btn btn-primary btn-sm w-100" style="font-size: 13px; padding: 8px; font-family: 'Questrial', sans-serif;">
                                                    Aplicar filtro
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                            <script>
                            document.addEventListener('DOMContentLoaded', function() {
                                // Toggle de envío gratis desktop
                                var toggle = document.getElementById('freeShippingToggle');
                                if (toggle) {
                                    toggle.checked = <t t-esc="'true' if free_shipping else 'false'"/>;
                                    toggle.addEventListener('change', function() {
                                        var newUrl = '/offers?free_shipping=' + (this.checked ? 'true' : 'false');
                                        window.location.href = newUrl;
                                    });
                                }
                                
                                // Toggle de envío gratis móvil
                                var mobileToggle = document.getElementById('mobileFreeShippingToggle');
                                if (mobileToggle) {
                                    mobileToggle.checked = <t t-esc="'true' if free_shipping else 'false'"/>;
                                    mobileToggle.addEventListener('change', function() {
                                        var newUrl = '/offers?free_shipping=' + (this.checked ? 'true' : 'false');
                                        window.location.href = newUrl;
                                    });
                                }
                            });
                            </script>                

                <div class="row">
                            <div class="products-header mb-4">
                                <div class="row align-items-center">
                                    <!-- Breadcrumb -->
                                    <div class="col-md-8">
                                        <nav aria-label="breadcrumb">
                                            <ol class="breadcrumb mb-0">
                                                <li class="breadcrumb-item">
                                                    <a href="/subcategory">Todas las categorías</a>
                                                </li>
                                                <t t-if="selected_category">
                                                    <li class="breadcrumb-item">
                                                        <a t-att-href="'/subcategory?category_id=' + str(selected_category.id)">
                                                            <t t-esc="selected_category.name"/>
                                                        </a>
                                                    </li>
                                                </t>
                                                <t t-if="selected_subcategory">
                                                    <li class="breadcrumb-item active" aria-current="page">
                                                        <t t-esc="selected_subcategory.name"/>
                                                    </li>
                                                </t>
                                                <t t-if="selected_brand">
                                                    <li class="breadcrumb-item active" aria-current="page">
                                                        <t t-esc="selected_brand.name"/>
                                                    </li>
                                                </t>
                                            </ol>
                                        </nav>
                                    </div>
                                    
                                    <!-- Ordenamiento -->
                                    <div class="col-md-4 text-end">
                                        <div class="d-flex align-items-center justify-content-end">
                                            <label for="sort-select" class="form-label me-2 mb-0 small">Ordenar por:</label>
                                            <select id="sort-select" class="form-select form-select-sm" style="width: auto;" onchange="updateSort()">
                                                <option value="relevance" t-att-selected="'selected' if current_filters.get('sort') == 'relevance' or not current_filters.get('sort') else ''">Más relevante</option>
                                                <option value="newest" t-att-selected="'selected' if current_filters.get('sort') == 'newest' else ''">Más reciente</option>
                                                <option value="best_sellers" t-att-selected="'selected' if current_filters.get('sort') == 'best_sellers' else ''">Más vendidos</option>
                                                <option value="offers" t-att-selected="'selected' if current_filters.get('sort') == 'offers' else ''">Ofertas</option>
                                                <option value="price_low" t-att-selected="'selected' if current_filters.get('sort') == 'price_low' else ''">Precio: menor a mayor</option>
                                                <option value="price_high" t-att-selected="'selected' if current_filters.get('sort') == 'price_high' else ''">Precio: mayor a menor</option>
                                                <option value="alphabetical" t-att-selected="'selected' if current_filters.get('sort') == 'alphabetical' else ''">A-Z</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>                
                    <!-- Filtros de la izquierda -->
                    <div class="col-lg-3 col-md-4 d-none d-md-block">
                    
                        <div class="filters">
                            <!-- Todos -->
                            <div class="mb-3">
                                <h5>Todos</h5>
                                <ul class="list-unstyled">
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true%s' % ('&amp;free_shipping=true' if free_shipping else '')">
                                            <span style="color: #848484;"><t t-esc="total_products" /></span> <span style="color: #848484;">productos</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        
                            <!-- Envío gratis -->
                            <div class="mb-3 p-3 border rounded-3 bg-white">
                                <h5 class="text-orange fw-bold" style="color: #FF5207; font-size: 16px; font-style: italic; background-color: white;">Envío gratis</h5>

                                <div class="form-check form-switch bg-white">
                                    <input class="form-check-input" type="checkbox" id="freeShippingToggle"
                                           t-att-checked="'checked' if free_shipping else None"
                                           t-att-data-url="'/offers?free_shipping=' + ('false' if free_shipping else 'true')" />
                                    <label class="form-check-label" for="freeShippingToggle" style="background-color: white;">
                                        Solo productos con envío gratis
                                    </label>
                                </div>
                            </div>
                            <script>
                            document.addEventListener('DOMContentLoaded', function() {
                                var toggle = document.getElementById('freeShippingToggle');
                                if (toggle) {
                                    // Establecer el estado inicial del checkbox
                                    toggle.checked = <t t-esc="'true' if free_shipping else 'false'"/>;
                                    
                                    toggle.addEventListener('change', function() {
                                        var newUrl = '/offers?free_shipping=' + (this.checked ? 'true' : 'false');
                                        window.location.href = newUrl;
                                    });
                                }
                            });
                            </script>
                        
                            <!-- Tipos de oferta -->
                            <div class="mb-3">
                                <h5>Tipos de oferta</h5>
                                <ul class="list-unstyled">
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=day%s' % ('&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                            Oferta del día
                                        </a>
                                    </li>
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=flash%s' % ('&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                            Oferta relámpago
                                        </a>
                                    </li>
                                    <li>
                                        <a t-att-href="'/shop/category/all?offers=true&amp;type=current%s' % ('&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                            <span>Ofertas activas ahora</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                                                    
                            <!-- Categorías -->
                            <div class="mb-3">
                                <h5>Categorías</h5>
                                <ul class="list-unstyled">
                                    <t t-foreach="categories_with_count" t-as="cat">
                                        <li>
                                            <a t-att-href="'/shop/category/all?offers=true&amp;category_id=%s%s' % (cat['id'], '&amp;free_shipping=true' if free_shipping else '')" style="color: #848484;">
                                                <span t-esc="cat['name']"/> (<span t-esc="cat['product_count']"/>)
                                            </a>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                            
                            <!-- Filtro por precio -->
                            <div class="mb-2"></div>
                                <h5>Precio</h5>
                                
                                    <ul class="list-unstyled">
                                        <li>
                                            <a t-att-href="'/shop/category/all?min_price=0&amp;max_price=500%s' % ('&amp;free_shipping=true' if free_shipping else '')" class="d-flex justify-content-between" style="color: #848484;">
                                                <span>Hasta $500</span>
                                                <span class="text-muted">(<t t-esc="price_ranges['0_500']"/>)</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a t-att-href="'/shop/category/all?min_price=500&amp;max_price=1000%s' % ('&amp;free_shipping=true' if free_shipping else '')" class="d-flex justify-content-between" style="color: #848484;">
                                                <span>De $500 a $1000</span>
                                                <span class="text-muted">(<t t-esc="price_ranges['500_1000']"/>)</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a t-att-href="'/shop/category/all?min_price=1000%s' % ('&amp;free_shipping=true' if free_shipping else '')" class="d-flex justify-content-between" style="color: #848484;">
                                                <span>Más de $1000</span>
                                                <span class="text-muted">(<t t-esc="price_ranges['1000_plus']"/>)</span>
                                            </a>
                                        </li>
                                    </ul>
                                    <form method="get" action="/shop/category/all">
                                        <div class="d-flex align-items-center">
                                            <input type="number" class="form-control me-2 bg-white" id="minPrice" name="min_price" placeholder="Desde" style="background-color: #ffffff;" />
                                            <span class="me-2">—</span>
                                            <input type="number" class="form-control me-2 bg-white" id="maxPrice" name="max_price" placeholder="Hasta" style="background-color: #ffffff;" />
                                            <!-- Hidden input to maintain free_shipping parameter -->
                                            <t t-if="free_shipping">
                                                <input type="hidden" name="free_shipping" value="true"/>
                                            </t>
                                            <button type="submit" class="btn" style="background-color: #5a5a5a; color: white;">Buscar</button>
                                        </div>
                                    </form>
                            </div>
                    </div>
                    
                    <!-- Productos en oferta -->
                            <div class="products-list">
                                 <t t-foreach="period_products" t-as="product_data" t-key="product_data['product'].id">
                                    <div class="product-list-item mb-3 p-3" style="border: 1px solid #dee2e6; border-radius: 8px;">
                                        <div class="row align-items-center">
                                            <!-- Imagen del producto -->
                                            <div class="col-3">
                                                <img t-att-src="'/web/image/product.template/%s/image_1024' % product_data['product'].id" 
                                                     class="img-fluid" alt="Product Image" style="max-height: 150px; object-fit: contain;"/>
                                            </div>
                                            <!-- Detalles del producto -->
                                            <div class="col-6">
                                                <h5 class="mb-2" t-field="product_data['product'].name"/>
                                                <p class="text-muted mb-2" t-field="product_data['product'].description_sale"/>
                                                <div class="text-success" t-if="product_data['product'].free_shipping">Envío gratis</div>
                                            </div>
                                            <!-- Precio y descuento -->
                                            <div class="col-3 text-end">
                                                <t t-if="product_data['product'].discount_percentage > 0 or product_data['product'].fixed_discount > 0">
                                                    <div class="text-decoration-line-through text-muted mb-1">
                                                        <span t-esc="product_data['product'].list_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                    </div>
                                                    <div class="h5 mb-2 text-danger">
                                                        <span t-esc="product_data['product'].discounted_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                    </div>
                                                    <div class="badge bg-danger">
                                                        <t t-if="product_data['product'].discount_percentage > 0">
                                                            <t t-esc="product_data['product'].discount_percentage"/>% OFF
                                                        </t>
                                                        <t t-else="">
                                                            $<t t-esc="product_data['product'].fixed_discount"/> OFF
                                                        </t>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="h5 mb-2">
                                                        <span t-esc="product_data['product'].list_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                            <!-- PAGINACIÓN -->
                            <!-- ...existing code... -->
                            <!-- PAGINACIÓN -->
                            <t t-if="total_pages > 1">
                                <div class="d-flex justify-content-start mt-4">
                                    <nav aria-label="Paginación de productos">
                                        <ul class="pagination mb-0">
                                            <!-- Botón anterior -->
                                            <li class="page-item" t-att-class="'disabled' if current_page == 1 else ''">
                                                <a class="page-link"
                                                   t-att-href="'/subcategory?' + '&amp;'.join(['%s=%s' % (k, v) for k, v in current_filters.items() if v and k != 'page'] + ['page=%s' % (current_page-1)]) if current_page &gt; 1 else '#'"
                                                   aria-label="Anterior">
                                                    <span aria-hidden="true">&#171;</span>
                                                </a>
                                            </li>
                                            <!-- Números de página dinámicos -->
                                            <t t-set="window_size" t-value="5"/>
                                            <t t-set="start_page" t-value="max(1, min(current_page - window_size//2, total_pages - window_size + 1))"/>
                                            <t t-set="end_page" t-value="min(total_pages, start_page + window_size - 1)"/>
                                            <t t-if="start_page &gt; 1">
                                                <li class="page-item">
                                                    <a class="page-link"
                                                       t-att-href="'/subcategory?' + '&amp;'.join(['%s=%s' % (k, v) for k, v in current_filters.items() if v and k != 'page'] + ['page=1'])">1</a>
                                                </li>
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            </t>
                                            <t t-foreach="range(start_page, end_page+1)" t-as="page">
                                                <li class="page-item" t-att-class="'active' if page == current_page else ''">
                                                    <a class="page-link"
                                                       t-att-href="'/subcategory?' + '&amp;'.join(['%s=%s' % (k, v) for k, v in current_filters.items() if v and k != 'page'] + ['page=%s' % page]) if page != current_page else '#'">
                                                        <t t-esc="page"/>
                                                    </a>
                                                </li>
                                            </t>
                                            <t t-if="end_page &lt; total_pages">
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                       t-att-href="'/subcategory?' + '&amp;'.join(['%s=%s' % (k, v) for k, v in current_filters.items() if v and k != 'page'] + ['page=%s' % total_pages])"><t t-esc="total_pages"/></a>
                                                </li>
                                            </t>
                                            <!-- Botón siguiente -->
                                            <li class="page-item" t-att-class="'disabled' if current_page == total_pages else ''">
                                                <a class="page-link"
                                                   t-att-href="'/subcategory?' + '&amp;'.join(['%s=%s' % (k, v) for k, v in current_filters.items() if v and k != 'page'] + ['page=%s' % (current_page+1)]) if current_page &lt; total_pages else '#'"
                                                   aria-label="Siguiente">
                                                    <span aria-hidden="true">&#187;</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </t>
                            <!-- ...existing code... -->                          
                        </div>

                </div>

            <div style="height: 105px;"></div>                
            </div>
            
            <!-- CSS para diseño móvil -->
            <!-- CSS para diseño móvil -->
                        <style>
                            /* Regla global para envío gratis - aplicar a todos los tamaños */
                            .mobile-shipping-text {
                                color: #FF5207 !important;
                                font-weight: bold !important;
                                font-style: italic !important;
                            }
                            
                            /* Regla global para badges sin redondeo */
                            .mobile-badge {
                                border-radius: 0 !important; /* Bordes rectos para todos los tamaños */
                            }
                            
                            /* Espaciado general mejorado */
                            .mobile-product-col {
                                padding: 2px;
                                margin-bottom: 5px; /* Aumentado de 15px a 25px */
                            }
                            
                            /* Estilos para móvil */
                            @media (max-width: 767.98px) {
                                .mobile-badge {
                                    font-size: 12px;
                                    padding: 2px 6px;
                                }
                                
                                .mobile-product-col {
                                    padding: 2px;
                                    margin-bottom: 5px;
                                }
                                
                                .mobile-product-card {
                                    min-height: 240px;
                                    border: 1px solid #e0e0e0;
                                    margin: 0 2px;
                                }
                                
                                .mobile-product-image {
                                    height: 160px;
                                    object-fit: contain;
                                    padding: 10px;
                                }
                                
                                .mobile-card-body {
                                    padding: 6px 10px 10px 10px;
                                    display: flex;
                                    flex-direction: column;
                                    justify-content: space-between;
                                    flex-grow: 1;
                                }
                                
                                .mobile-badge-container {
                                    margin-bottom: 4px;
                                }
                                
                                .mobile-price-container {
                                    flex-wrap: wrap;
                                    margin-bottom: 5px;
                                }
                                
                                .mobile-main-price {
                                    font-size: 20px !important;
                                    font-weight: bold;
                                }
                                
                                .mobile-discount {
                                    font-size: 16px !important;
                                    font-weight: normal;
