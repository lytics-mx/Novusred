<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <div class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Logo first -->
                                <a class="navbar-brand me-3" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                                </a>
                                <!-- Search bar after logo -->
                                <form class="d-flex flex-grow-1" action="/search_redirect" method="get" style="width: 100%;">
                                    <div class="input-group w-100">
                                        <input type="search" name="search" class="form-control"
                                               placeholder="Buscar productos, marcas o categorías..." aria-label="Search"
                                               style="border-radius: 20px; font-size: 14px; height: 36px;"/>
                                        <input type="hidden" name="search_type" value="all"/>
                                        <!-- Filtro visible en todas las pantallas -->
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                                    style="border-radius: 20px; height: 36px;">
                                                <i class="fa fa-filter"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='all';return false;">
                                                        <i class="fa fa-list"></i> Todo
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='brand';return false;">
                                                        <i class="fa fa-tag"></i> Marca
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='category';return false;">
                                                        <i class="fa fa-folder"></i> Categoría
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <button class="btn btn-outline-secondary" type="submit"
                                                style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        var dropdownItems = document.querySelectorAll('.dropdown-menu .dropdown-item');
                                        var searchInput = document.querySelector('input[name="search"]');
                                        var searchTypeInput = document.querySelector('input[name="search_type"]');
                                        dropdownItems.forEach(function(item) {
                                            item.addEventListener('click', function() {
                                                var value = '';
                                                var placeholder = '';
                                                if (this.textContent.includes('Todo')) {
                                                    value = 'all';
                                                    placeholder = 'Buscar productos...';
                                                } else if (this.textContent.includes('Marca')) {
                                                    value = 'brand';
                                                    placeholder = 'Buscar marca...';
                                                } else if (this.textContent.includes('Categoría')) {
                                                    value = 'category';
                                                    placeholder = 'Buscar categoría...';
                                                }
                                                searchTypeInput.value = value;
                                                searchInput.placeholder = placeholder;
                                            });
                                        });
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                </nav>
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Navbar links -->
                                <ul class="nav nav-pills flex-grow-1 justify-content-center" style="width: 100%;">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Categorías
                                        </a>
                                        <ul class="dropdown-menu category-menu" aria-labelledby="categoriesDropdown">
                                            <!-- Obtenemos las categorías de segundo nivel -->
                                            <t t-set="second_level_categories" t-value="request.env['product.category'].search([('parent_id.parent_id', '=', False), ('parent_id', '!=', False)])" />
                                            <t t-set="counter" t-value="1" />
                                            <t t-foreach="second_level_categories" t-as="category">
                                                <li class="parent-category">
                                                    <a class="dropdown-item main-category" t-att-href="'/subcategory?category_id=' + str(category.id)">
                                                        <span class="category-number"><t t-esc="counter"/>. </span>
                                                        <t t-esc="category.name"/>
                                                    </a>
                                                    <!-- Función recursiva para mostrar subcategorías sin límite de niveles -->
                                                    <t t-call="theme_xtream.recursive_subcategories">
                                                        <t t-set="subcategories" t-value="category.child_id"/>
                                                        <t t-set="level" t-value="1"/>
                                                    </t>
                                                </li>
                                                <t t-set="counter" t-value="counter + 1" />
                                            </t>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/offers">Ofertas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/brand">Marcas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/shop/history">Historial</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/about">Sobre Nosotros</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/contactus">Contacto</a>
                                    </li>
                                    <li class="nav-item d-flex align-items-center">
                                        <t t-if="request.env.user.id == request.website.user_id.id">
                                            <a class="nav-link d-flex align-items-center" href="/shop/login">
                                                <span>Login</span>
                                                <i class="fa fa-user ms-2"></i>
                                            </a>
                                        </t>
                                        <t t-else="">
                                            <div class="dropdown">
                                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span><t t-esc="request.env.user.name or 'Usuario'"/></span>
                                                    <i class="fa fa-user ms-2"></i>
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                                    <li>
                                                        <a class="dropdown-item" href="/web/logout">
                                                            <i class="fa fa-sign-out-alt me-2"></i> Logout
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </t>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/shop/cart">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/shop/notifications">
                                            <i class="fa fa-bell"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                        <style>
                        .category-menu {
                            min-width: 300px;
                            padding: 10px;
                        }

                        .main-category {
                            font-weight: bold;
                        }

                        .subcategory-list {
                            list-style: none;
                            padding-left: 20px;
                            margin-bottom: 5px;
                        }

                        .grandchild-list {
                            list-style: none;
                            padding-left: 20px;
                        }

                        .child-category, .grandchild-category {
                            margin: 5px 0;
                        }

                        .category-number {
                            font-weight: bold;
                            margin-right: 5px;
                        }

                        .subcategory-letter {
                            font-weight: normal;
                            margin-right: 5px;
                        }

                        .sub-category {
                            font-weight: normal;
                        }

                        .dropdown-menu li {
                            position: relative;
                        }

                        .dropdown-menu .dropdown-item {
                            padding: .25rem 1rem;
                        }
                        /* Estilos para niveles adicionales */
                        .level-1 {
                            padding-left: 20px;
                        }
                        
                        .level-2 {
                            padding-left: 20px;
                        }
                        
                        .level-3, .level-4, .level-5 {
                            padding-left: 20px;
                        }
                        
                        .level-1-item, .level-2-item, .level-3-item, .level-4-item, .level-5-item {
                            margin: 5px 0;
                        }
                        
                        .level-1 .dropdown-item {
                            font-weight: normal;
                        }
                        
                        .level-2 .dropdown-item, .level-3 .dropdown-item, .level-4 .dropdown-item, .level-5 .dropdown-item {
                            font-size: 0.95em;
                            color: #555;
                        }                           
                        </style>                     
                </nav>                
            </div>
        </xpath>
    </template>

        <template id="recursive_subcategories" name="Recursive Subcategories">
        <t t-if="subcategories">
            <ul t-attf-class="subcategory-list level-#{level}">
                <t t-set="subcounter" t-value="'a'" />
                <t t-foreach="subcategories" t-as="subcat">
                    <li t-attf-class="child-category level-#{level}-item">
                        <a class="dropdown-item sub-category" t-att-href="'/subcategory?category_id=' + str(subcat.id)">
                            <t t-if="level == 1">
                                <span class="subcategory-letter"><t t-esc="subcounter"/>. </span>
                            </t>
                            <t t-esc="subcat.name"/>
                        </a>
                        <t t-if="subcat.child_id">
                            <t t-call="theme_xtream.recursive_subcategories">
                                <t t-set="subcategories" t-value="subcat.child_id"/>
                                <t t-set="level" t-value="level + 1"/>
                            </t>
                        </t>
                    </li>
                    <t t-if="level == 1">
                        <t t-set="subcounter" t-value="chr(ord(subcounter) + 1)" />
                    </t>
                </t>
            </ul>
        </t>
    </template>
</odoo>
