<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <div class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Logo first -->
                                <a class="navbar-brand me-3" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                                </a>
                                <!-- Search bar after logo -->
                                <form class="d-flex flex-grow-1" action="/search_redirect" method="get" style="width: 100%;">
                                    <div class="input-group w-100">
                                        <input type="search" name="search" class="form-control"
                                               placeholder="Buscar productos, marcas o categorías..." aria-label="Search"
                                               style="border-radius: 20px; font-size: 14px; height: 36px;"/>
                                        <input type="hidden" name="search_type" value="all"/>
                                        <!-- Filtro visible en todas las pantallas -->
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                                    style="border-radius: 20px; height: 36px;">
                                                <i class="fa fa-filter"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='all';return false;">
                                                        <i class="fa fa-list"></i> Todo
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='brand';return false;">
                                                        <i class="fa fa-tag"></i> Marca
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='category';return false;">
                                                        <i class="fa fa-folder"></i> Categoría
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <button class="btn btn-outline-secondary" type="submit"
                                                style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        var dropdownItems = document.querySelectorAll('.dropdown-menu .dropdown-item');
                                        var searchInput = document.querySelector('input[name="search"]');
                                        var searchTypeInput = document.querySelector('input[name="search_type"]');
                                        dropdownItems.forEach(function(item) {
                                            item.addEventListener('click', function() {
                                                var value = '';
                                                var placeholder = '';
                                                if (this.textContent.includes('Todo')) {
                                                    value = 'all';
                                                    placeholder = 'Buscar productos...';
                                                } else if (this.textContent.includes('Marca')) {
                                                    value = 'brand';
                                                    placeholder = 'Buscar marca...';
                                                } else if (this.textContent.includes('Categoría')) {
                                                    value = 'category';
                                                    placeholder = 'Buscar categoría...';
                                                }
                                                searchTypeInput.value = value;
                                                searchInput.placeholder = placeholder;
                                            });
                                        });
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                </nav>
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Navbar links -->
                                <ul class="nav nav-pills flex-grow-1 justify-content-center" style="width: 100%;">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Categorías
                                        </a>
                                        <ul class="dropdown-menu category-menu" aria-labelledby="categoriesDropdown">
                                            <t t-set="top_categories" t-value="request.env['product.category'].search([('parent_id', '=', False)])" />
                                            <t t-set="counter" t-value="1" />
                                            <t t-foreach="top_categories" t-as="category">
                                                <li class="parent-category">
                                                    <a class="dropdown-item main-category" t-att-href="'/subcategory?category_id=' + str(category.id)">
                                                        <span class="category-number"><t t-esc="counter"/>. </span>
                                                        <t t-esc="category.name"/>
                                                    </a>
                                                    <!-- Children categories -->
                                                    <t t-if="category.child_id">
                                                        <ul class="subcategory-list">
                                                            <t t-set="subcounter" t-value="'a'" />
                                                            <t t-foreach="category.child_id" t-as="child">
                                                                <li class="child-category">
                                                                    <a class="dropdown-item sub-category" t-att-href="'/subcategory?category_id=' + str(child.id)">
                                                                        <span class="subcategory-letter"><t t-esc="subcounter"/>. </span>
                                                                        <t t-esc="child.name"/>
                                                                    </a>
                                                                    <!-- Grandchildren categories -->
                                                                    <t t-if="child.child_id">
                                                                        <ul class="grandchild-list">
                                                                            <t t-foreach="child.child_id" t-as="grandchild">
                                                                                <li class="grandchild-category">
                                                                                    <a class="dropdown-item grand-sub-category" t-att-href="'/subcategory?category_id=' + str(grandchild.id)">
                                                                                        <t t-esc="grandchild.name"/>
                                                                                    </a>
                                                                                </li>
                                                                            </t>
                                                                        </ul>
                                                                    </t>
                                                                </li>
                                                                <t t-set="subcounter" t-value="chr(ord(subcounter) + 1)" />
                                                            </t>
                                                        </ul>
                                                    </t>
                                                </li>
                                                <t t-set="counter" t-value="counter + 1" />
                                            </t>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/offers">Ofertas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/brand">Marcas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/shop/history">Historial</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/about">Sobre Nosotros</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/contactus">Contacto</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/user">Usuario</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                        <style>
                        .category-menu {
                            min-width: 300px;
                            padding: 10px;
                        }

                        .main-category {
                            font-weight: bold;
                        }

                        .subcategory-list {
                            list-style: none;
                            padding-left: 20px;
                            margin-bottom: 5px;
                        }

                        .grandchild-list {
                            list-style: none;
                            padding-left: 20px;
                        }

                        .child-category, .grandchild-category {
                            margin: 5px 0;
                        }

                        .category-number {
                            font-weight: bold;
                            margin-right: 5px;
                        }

                        .subcategory-letter {
                            font-weight: normal;
                            margin-right: 5px;
                        }

                        .sub-category {
                            font-weight: normal;
                        }

                        .dropdown-menu li {
                            position: relative;
                        }

                        .dropdown-menu .dropdown-item {
                            padding: .25rem 1rem;
                        }   
                        </style>                     
                </nav>                
            </div>
        </xpath>
    </template>
</odoo>
