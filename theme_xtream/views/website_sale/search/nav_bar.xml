<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <header class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Logo first -->
                                <a class="navbar-brand me-3" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                                </a>
                                <!-- Search bar after logo -->
                                <!-- ...existing code... -->
                                <form class="d-flex flex-grow-1" action="/search_redirect" method="get" style="width: 100%;">
                                    <div class="input-group w-100">
                                        <input type="search" name="search" class="form-control"
                                               placeholder="Buscar productos, marcas o categorías..." aria-label="Search"
                                               style="border-radius: 20px; font-size: 14px; height: 36px;"/>
                                        <input type="hidden" name="search_type" value="all"/>
                                        <!-- Filtro visible en todas las pantallas -->
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                                    style="border-radius: 20px; height: 36px;">
                                                <i class="fa fa-filter"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='all';return false;">
                                                        <i class="fa fa-list"></i> Todo
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='brand';return false;">
                                                        <i class="fa fa-tag"></i> Marca
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="document.getElementsByName('search_type')[0].value='category';return false;">
                                                        <i class="fa fa-folder"></i> Categoría
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <!-- Select solo en pantallas grandes/medianas -->
                                        <!-- <select name="search_type" class="form-select d-none d-lg-block"
                                                style="max-width: 120px; border-radius: 20px; font-size: 14px; height: 36px;">
                                            <option value="all">Todo</option>
                                            <option value="brand">Marca</option>
                                            <option value="category">Categoría</option>
                                        </select> -->
                                        <button class="btn btn-outline-secondary" type="submit"
                                                style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <!-- ...existing code... -->
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        var dropdownItems = document.querySelectorAll('.dropdown-menu .dropdown-item');
                                        var searchInput = document.querySelector('input[name="search"]');
                                        var searchTypeInput = document.querySelector('input[name="search_type"]');
                                        dropdownItems.forEach(function(item) {
                                            item.addEventListener('click', function() {
                                                var value = '';
                                                var placeholder = '';
                                                if (this.textContent.includes('Todo')) {
                                                    value = 'all';
                                                    placeholder = 'Buscar productos...';
                                                } else if (this.textContent.includes('Marca')) {
                                                    value = 'brand';
                                                    placeholder = 'Buscar marca...';
                                                } else if (this.textContent.includes('Categoría')) {
                                                    value = 'category';
                                                    placeholder = 'Buscar categoría...';
                                                }
                                                searchTypeInput.value = value;
                                                searchInput.placeholder = placeholder;
                                            });
                                        });
                                    });
                                </script>
                                <!-- ...existing code... -->
                            </div>                            
                        </div>

<!-- crear el navbar                     -->

                    </div>
                </nav>
            </header>
        </xpath>
    </template>
</odoo>