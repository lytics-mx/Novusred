<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <div class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Logo first -->
                                <a class="navbar-brand me-3" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px;"/>
                                </a>
                                <!-- Search bar after logo -->
                                <form class="d-flex flex-grow-1" action="/search_redirect" method="get" style="width: 100%;">
                                    <div class="input-group w-100">
                                        <input type="search" name="search" id="searchInput" class="form-control"
                                            placeholder="Buscar productos, marcas o categorías..." aria-label="Search"
                                            style="border-radius: 20px; font-size: 14px; height: 36px;" autocomplete="off"/>
                                        <input type="hidden" name="search_type" value="all"/>
                                        <div id="searchResults" class="dropdown-menu" style="display: none; position: absolute; z-index: 1000; width: 100%; top: 100%; left: 0; background-color: white; border: 1px solid #ccc; padding: 10px;"></div>                                                                            
                                        <!-- Filtro visible en todas las pantallas -->
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                                    style="border-radius: 20px; height: 36px;">
                                                <i class="fa fa-filter"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center" href="#" onclick="document.getElementsByName('search_type')[0].value='all';return false;">
                                                        <i class="fa fa-list me-2"></i>
                                                        <span>Todo</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center" href="#" onclick="document.getElementsByName('search_type')[0].value='brand';return false;">
                                                        <i class="fa fa-tag me-2"></i>
                                                        <span>Marca</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center" href="#" onclick="document.getElementsByName('search_type')[0].value='category';return false;">
                                                        <i class="fa fa-folder me-2"></i>
                                                        <span>Categoría</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <button class="btn btn-outline-secondary" type="submit"
                                                style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <script>
                                <![CDATA[
                                    document.addEventListener('DOMContentLoaded', function() {
                                        const searchInput = document.getElementById('searchInput');
                                        const searchResults = document.getElementById('searchResults');
                                        const searchTypeInput = document.querySelector('input[name="search_type"]');

                                        if (!searchInput || !searchResults) {
                                            console.error('searchInput or searchResults element not found in the DOM.');
                                            return;
                                        }

                                        searchInput.addEventListener('input', function() {
                                            const query = searchInput.value.trim();
                                            const searchType = searchTypeInput ? searchTypeInput.value : 'all';
                                            // Solo mostrar productos si el filtro es "all"
                                            if (query.length > 0 && searchType === 'all') {
                                                fetch(`/search_live?query=${encodeURIComponent(query)}`)
                                                    .then(response => {
                                                        if (!response.ok) {
                                                            throw new Error(`HTTP error! status: ${response.status}`);
                                                        }
                                                        return response.json();
                                                    })
                                                    .then(data => {
                                                        searchResults.innerHTML = '';
                                                        if (data.results.length > 0) {
                                                            searchResults.style.display = 'block';
                                                            data.results.slice(0, 5).forEach(result => {
                                                                const truncatedName = result.name.length > 160 ? result.name.substring(0, 160) + '...' : result.name;
                                                                const item = document.createElement('a');
                                                                item.className = 'dropdown-item';
                                                                item.href = `/shop/product/${result.id}`;
                                                                item.innerHTML = `
                                                                    <img src="/web/image/product.template/${result.id}/image_1024" alt="${truncatedName}" style="width: 40px; height: 40px; object-fit: contain; margin-right: 10px;" />
                                                                    <span style="display: inline-block; vertical-align: middle; max-width: 1000px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">${truncatedName}</span>
                                                                `;
                                                                searchResults.appendChild(item);
                                                            });
                                                            const allResultsLink = document.createElement('a');
                                                            allResultsLink.className = 'dropdown-item text-center';
                                                            allResultsLink.href = `/subcategory?category_id=${encodeURIComponent(query)}`;
                                                            allResultsLink.innerHTML = 'Ver todos los resultados';
                                                            searchResults.appendChild(allResultsLink);
                                                        } else {
                                                            searchResults.style.display = 'none';
                                                        }
                                                    })
                                                    .catch(error => {
                                                        console.error('Error fetching search results:', error);
                                                        searchResults.style.display = 'none';
                                                    });
                                            } else {
                                                searchResults.style.display = 'none';
                                            }
                                        });

                                        document.addEventListener('click', function(event) {
                                            if (!searchResults.contains(event.target) && event.target !== searchInput) {
                                                searchResults.style.display = 'none';
                                            }
                                        });

                                        // Manejo de los filtros para cambiar el placeholder y el tipo de búsqueda
                                        var dropdownItems = document.querySelectorAll('.dropdown-menu .dropdown-item');
                                        dropdownItems.forEach(function(item) {
                                            item.addEventListener('click', function() {
                                                var value = '';
                                                var placeholder = '';
                                                if (this.textContent.includes('Todo')) {
                                                    value = 'all';
                                                    placeholder = 'Buscar productos, marcas o categorías...';
                                                } else if (this.textContent.includes('Marca')) {
                                                    value = 'brand';
                                                    placeholder = 'Buscar marca...';
                                                } else if (this.textContent.includes('Categoría')) {
                                                    value = 'category';
                                                    placeholder = 'Buscar categoría...';
                                                }
                                                if (searchTypeInput) searchTypeInput.value = value;
                                                if (searchInput) searchInput.placeholder = placeholder;
                                                // Oculta los resultados si no es "all"
                                                if (value !== 'all') {
                                                    searchResults.style.display = 'none';
                                                }
                                            });
                                        });
                                    });
                                ]]>
                                </script>
                            </div>
                        </div>
                    </div>
                </nav>
                <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #5081FF;">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-between w-100 flex-wrap flex-lg-nowrap">
                            <!-- Left side: Categories, Offers, Brands, History, About Us, Contact -->
                            <div class="d-flex align-items-center flex-grow-1 justify-content-start" style="width: 50%;">
                                <ul class="nav nav-pills flex-grow-1 justify-content-start" style="width: 100%; color: white;">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-white" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Categorías
                                        </a>
                                        <ul class="dropdown-menu category-menu shadow" aria-labelledby="categoriesDropdown" style="box-shadow: 0 4px 16px rgba(0,0,0,0.15) !important;">
                                            <t t-set="second_level_categories" t-value="request.env['product.category'].search([('parent_id.parent_id', '=', False), ('parent_id', '!=', False)])" />
                                            <t t-set="counter" t-value="1" />
                                            <t t-foreach="second_level_categories" t-as="category">
                                                <li class="parent-category">
                                                    <a class="dropdown-item main-category" t-att-href="'/subcategory?category_id=' + str(category.id)">
                                                        <span class="category-number"><t t-esc="counter"/>. </span>
                                                        <t t-esc="category.name"/>
                                                    </a>
                                                    <t t-call="theme_xtream.recursive_subcategories">
                                                        <t t-set="subcategories" t-value="category.child_id"/>
                                                        <t t-set="level" t-value="1"/>
                                                    </t>
                                                </li>
                                                <t t-set="counter" t-value="counter + 1" />
                                            </t>
                                        </ul>
                                    </li>
                                    <script>
                                        document.addEventListener('DOMContentLoaded', function () {
                                            const dropdownItems = document.querySelectorAll('.dropdown-item[data-bs-toggle="dropdown"]');
                                            dropdownItems.forEach(item => {
                                                item.addEventListener('click', function (e) {
                                                    e.preventDefault();
                                                    const target = document.querySelector(this.dataset.bsTarget);
                                                    if (target) {
                                                        // Ocultar otros cuadros emergentes
                                                        document.querySelectorAll('.subcategory-popup').forEach(popup => popup.classList.remove('show'));
                                                        // Mostrar el cuadro emergente actual
                                                        target.classList.toggle('show');
                                                    }
                                                });
                                            });
                                    
                                            // Cerrar cuadros emergentes al hacer clic fuera
                                            document.addEventListener('click', function (event) {
                                                if (!event.target.closest('.dropdown-item') && !event.target.closest('.subcategory-popup')) {
                                                    document.querySelectorAll('.subcategory-popup').forEach(popup => popup.classList.remove('show'));
                                                }
                                            });
                                        });
                                    </script>

                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/offers">Ofertas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/brand">Marcas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/shop/history">Historial</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/about">Sobre Nosotros</a>
                                    </li>
                                    <!-- <li class="nav-item">
                                        <a class="nav-link text-white" href="/contactus">Contacto</a>
                                    </li> -->
                                </ul>
                            </div>
                            <!-- Right side: User, Cart, Notifications -->
                            <div class="d-flex align-items-center justify-content-end" style="width: 50%;">
                                <ul class="nav nav-pills flex-grow-1 justify-content-end" style="width: 100%; color: white;">
                                    <li class="nav-item d-flex align-items-center">
                                        <t t-if="request.env.user.id == request.website.user_id.id">
                                            <a class="nav-link text-white d-flex align-items-center" href="/web/login">
                                                <span>Log in</span>
                                                <i class="fa fa-user ms-2"></i>
                                            </a>
                                        </t>
                                        <t t-else="">
                                            <div class="dropdown">
                                                <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span><t t-esc="request.env.user.name or 'Usuario'"/></span>
                                                    <i class="fa fa-user ms-2"></i>
                                                </a>
                                                <ul class="dropdown-menu shadow" aria-labelledby="userDropdown" style="box-shadow: 0 4px 16px rgba(0,0,0,0.15) !important;">
                                                    <li>
                                                        <a class="dropdown-item" href="/web/session/logout">
                                                            <i class="fa fa-sign-out-alt me-2"></i> Logout
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </t>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/shop/cart">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/delivered_products">
                                            <i class="fa fa-bell"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                        <style>

                         .navbar {
                            display: flex;
                            flex-wrap: nowrap; /* Evita que los elementos se desplacen a otra línea */
                            align-items: center;
                            justify-content: space-between;
                        }
                        
                        .nav-pills {
                            display: flex;
                            flex-wrap: nowrap; /* Mantiene los elementos en una sola fila */
                            gap: 16px; /* Espaciado uniforme entre los elementos */
                        }
                        
                        .nav-item {
                            white-space: nowrap; /* Evita que el texto se divida en varias líneas */
                        }
                        
                        .nav-link {
                            font-size: 1rem; /* Tamaño de fuente base */
                            padding: 0.5rem 1rem; /* Espaciado interno */
                            text-align: center;
                        }
                        
                        /* Ajustes para pantallas pequeñas */
                        @media (max-width: 767.98px) {
                            .nav-link {
                                font-size: 0.85rem; /* Reduce el tamaño de la fuente */
                                padding: 0.4rem 0.8rem; /* Ajusta el espaciado interno */
                            }
                        
                            .nav-pills {
                                gap: 8px; /* Reduce el espacio entre los elementos */
                            }
                        }
                        
                        /* Ajustes para pantallas medianas */
                        @media (max-width: 991.98px) {
                            .nav-link {
                                font-size: 0.9rem; /* Tamaño de fuente ligeramente más pequeño */
                                padding: 0.45rem 0.9rem; /* Ajusta el espaciado interno */
                            }
                        
                            .nav-pills {
                                gap: 12px; /* Espaciado moderado entre los elementos */
                            }
                        }
                        
                        /* Ajustes para pantallas grandes */
                        @media (min-width: 992px) {
                            .nav-link {
                                font-size: 1rem; /* Tamaño de fuente estándar */
                                padding: 0.5rem 1rem; /* Espaciado interno estándar */
                            }
                        
                            .nav-pills {
                                gap: 16px; /* Espaciado amplio entre los elementos */
                            }
                        }
                                               
                        /* Estilo para categorías padre e hijo */
                        .category-menu {
                            min-width: 300px;
                            padding: 10px;
                            background-color: white;
                            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
                        }
                        
                        .subcategory-popup {
                            position: absolute;
                            top: 0;
                            left: 100%;
                            min-width: 300px;
                            padding: 10px;
                            background-color: #f8f8f8;
                            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
                            display: none; /* Oculto por defecto */
                        }
                        
                        .subcategory-list {
                            list-style: none;
                            padding-left: 0;
                            margin-bottom: 0;
                        }
                        
                        .child-category {
                            margin: 5px 0;
                        }
                        
                        .dropdown-item {
                            display: flex;
                            align-items: center;
                            justify-content: space-between;
                            padding: 10px;
                            border-bottom: 1px solid #eee;
                            cursor: pointer;
                        }
                        
                        .dropdown-item i {
                            font-size: 1rem;
                            color: #555;
                        }
                        
                        .dropdown-item:hover {
                            background-color: #eaeaea;
                        }
                        
                        .dropdown-menu.show {
                            display: block; /* Mostrar cuando se despliega */
                        }

                        #searchResults {
                            display: none;
                            position: absolute;
                            top: 100%; /* Posiciona debajo del input */
                            left: 0;
                            z-index: 1000;
                            background-color: white;
                            border: 1px solid #ccc;
                            width: 100%;
                            max-height: 300px;
                            overflow-y: auto;
                            padding: 10px;
                        }
                        
                        .dropdown-item {
                            display: flex;
                            align-items: start;
                            padding: 10px;
                            border-bottom: 1px solid #eee;
                        }
                        
                        .dropdown-item img {
                            margin-right: 10px;
                            width: 40px;
                            height: 40px;
                            object-fit: contain;
                        }
                        
                        .dropdown-item div {
                            display: flex;
                            flex-direction: column;
                        }
                        
                        .dropdown-item span:first-child {
                            font-size: 14px;
                            font-weight: normal;
                            color: #333;
                        }
                        
                        .dropdown-item span:last-child {
                            font-size: 16px;
                            font-weight: bold;
                            color: #000;
                        }                      

                        </style>                     
                </nav>                
            </div>
        </xpath>
    </template>

    <!-- Template para subcategorías -->
    <template id="recursive_subcategories" name="Recursive Subcategories">
        <t t-if="subcategories">
            <ul t-attf-class="subcategory-list level-#{level}">
                <t t-foreach="subcategories" t-as="subcat">
                    <li t-attf-class="child-category level-#{level}-item">
                        <a class="dropdown-item sub-category d-flex align-items-center justify-content-between" 
                           t-att-href="'/subcategory?category_id=' + str(subcat.id)" 
                           t-att-data-bs-toggle="'dropdown'" 
                           t-att-data-bs-target="'#subcategory-' + str(subcat.id)">
                            <i class="fa fa-folder me-2"></i>
                            <span><t t-esc="subcat.name"/></span>
                            <t t-if="subcat.child_id">
                                <i class="fa fa-chevron-right ms-auto"></i>
                            </t>
                        </a>
                        <t t-if="subcat.child_id">
                            <div t-attf-id="subcategory-#{subcat.id}" class="dropdown-menu subcategory-popup shadow">
                                <t t-call="theme_xtream.recursive_subcategories">
                                    <t t-set="subcategories" t-value="subcat.child_id"/>
                                    <t t-set="level" t-value="level + 1"/>
                                </t>
                            </div>
                        </t>
                    </li>
                </t>
            </ul>
        </t>
    </template>
</odoo>
