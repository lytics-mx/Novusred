<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <div class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <div
                            class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!--  Logo first  -->
                                <a class="navbar-brand me-3" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png"
                                        alt="Logo" class="img-fluid"
                                        style="max-height: 68px; min-height: 50px;" />
                                </a>
                                <!--  Search bar after logo  -->
                                <form class="d-flex flex-grow-1" action="/search_redirect"
                                    method="get" style="width: 100%;">
                                    <div class="input-group w-100">
                                        <input type="search" name="search" id="searchInput"
                                            class="form-control"
                                            placeholder="Buscar productos, marcas o categorías..."
                                            aria-label="Search"
                                            style="border-radius: 20px; font-size: 14px; height: 36px;"
                                            autocomplete="off" />
                                        <input type="hidden" name="search_type" value="all" />
                                        <div id="searchResults" class="dropdown-menu"
                                            style="display: none; position: absolute; z-index: 1000; width: 100%; top: 100%; left: 0; background-color: white; border: 1px solid #ccc; padding: 10px;" />
                                        <!--  Filtro visible en todas las pantallas  -->
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary" type="button"
                                                data-bs-toggle="dropdown" aria-expanded="false"
                                                style="border-radius: 20px; height: 36px;">
                                                <i class="fa fa-filter" />
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a
                                                        class="dropdown-item d-flex align-items-center"
                                                        href="#"
                                                        onclick="document.getElementsByName('search_type')[0].value='all';return false;">
                                                        <i class="fa fa-list me-2" />
                                                        <span>Todo</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a
                                                        class="dropdown-item d-flex align-items-center"
                                                        href="#"
                                                        onclick="document.getElementsByName('search_type')[0].value='brand';return false;">
                                                        <i class="fa fa-tag me-2" />
                                                        <span>Marca</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a
                                                        class="dropdown-item d-flex align-items-center"
                                                        href="#"
                                                        onclick="document.getElementsByName('search_type')[0].value='category';return false;">
                                                        <i class="fa fa-folder me-2" />
                                                        <span>Categoría</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <button class="btn btn-outline-secondary" type="submit"
                                            style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search" />
                                        </button>
                                    </div>
                                </form>
                                <script>
<![CDATA[ document.addEventListener('DOMContentLoaded', function() { const searchInput = document.getElementById('searchInput'); const searchResults = document.getElementById('searchResults'); const searchTypeInput = document.querySelector('input[name="search_type"]'); if (!searchInput || !searchResults) { console.error('searchInput or searchResults element not found in the DOM.'); return; } searchInput.addEventListener('input', function() { const query = searchInput.value.trim(); const searchType = searchTypeInput ? searchTypeInput.value : 'all'; // Solo mostrar productos si el filtro es "all" if (query.length > 0 && searchType === 'all') { fetch(`/search_live?query=${encodeURIComponent(query)}`) .then(response => { if (!response.ok) { throw new Error(`HTTP error! status: ${response.status}`); } return response.json(); }) .then(data => { searchResults.innerHTML = ''; if (data.results.length > 0) { searchResults.style.display = 'block'; data.results.slice(0, 5).forEach(result => { const truncatedName = result.name.length > 160 ? result.name.substring(0, 160) + '...' : result.name; const item = document.createElement('a'); item.className = 'dropdown-item'; item.href = `/shop/product/${result.id}`; item.innerHTML = ` <img src="/web/image/product.template/${result.id}/image_1024" alt="${truncatedName}" style="width: 40px; height: 40px; object-fit: contain; margin-right: 10px;" /> <span style="display: inline-block; vertical-align: middle; max-width: 1000px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">${truncatedName}</span> `; searchResults.appendChild(item); }); const allResultsLink = document.createElement('a'); allResultsLink.className = 'dropdown-item text-center'; allResultsLink.href = `/subcategory?category_id=${encodeURIComponent(query)}`; allResultsLink.innerHTML = 'Ver todos los resultados'; searchResults.appendChild(allResultsLink); } else { searchResults.style.display = 'none'; } }) .catch(error => { console.error('Error fetching search results:', error); searchResults.style.display = 'none'; }); } else { searchResults.style.display = 'none'; } }); document.addEventListener('click', function(event) { if (!searchResults.contains(event.target) && event.target !== searchInput) { searchResults.style.display = 'none'; } }); // Manejo de los filtros para cambiar el placeholder y el tipo de búsqueda var dropdownItems = document.querySelectorAll('.dropdown-menu .dropdown-item'); dropdownItems.forEach(function(item) { item.addEventListener('click', function() { var value = ''; var placeholder = ''; if (this.textContent.includes('Todo')) { value = 'all'; placeholder = 'Buscar productos, marcas o categorías...'; } else if (this.textContent.includes('Marca')) { value = 'brand'; placeholder = 'Buscar marca...'; } else if (this.textContent.includes('Categoría')) { value = 'category'; placeholder = 'Buscar categoría...'; } if (searchTypeInput) searchTypeInput.value = value; if (searchInput) searchInput.placeholder = placeholder; // Oculta los resultados si no es "all" if (value !== 'all') { searchResults.style.display = 'none'; } }); }); }); ]]>
</script>
                            </div>
                        </div>
                    </div>
                </nav>
                <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #5081FF;">
                    <div class="container">
                        <div
                            class="d-flex align-items-center justify-content-between w-100 flex-wrap flex-lg-nowrap">
                            <!--  Left side: Categories, Offers, Brands, History, About Us, Contact  -->
                            <div class="d-flex align-items-center flex-grow-1 justify-content-start"
                                style="width: 50%;">
                                <ul class="nav nav-pills flex-grow-1 justify-content-start"
                                    style="width: 100%; color: white;">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-white" href="#"
                                            id="categoriesDropdown" role="button"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            Categorías </a>
                                        <ul class="dropdown-menu category-menu shadow"
                                            aria-labelledby="categoriesDropdown">
                                            <t t-set="second_level_categories"
                                                t-value="request.env['product.category'].search([('parent_id.parent_id', '=', False), ('parent_id', '!=', False)])" />
                                            <t t-foreach="second_level_categories" t-as="category">
                                                <li class="parent-category position-relative">
                                                    <a class="dropdown-item main-category"
                                                        t-att-href="'/category_search?search=' + category.name">
                                                        <t t-esc="category.name" />
                                                    </a>
                                                    <t t-if="category.child_id">
                                                        <ul class="subcategory-menu">
                                                            <t t-foreach="category.child_id"
                                                                t-as="subcat">
                                                                <li class="child-category">
                                                                    <a
                                                                        class="dropdown-item sub-category"
                                                                        t-att-href="'/subcategory?category_id=' + str(subcat.id)">
                                                                        <t t-esc="subcat.name" />
                                                                    </a>
                                                                    <t t-if="subcat.child_id">
                                                                        <ul class="subcategory-menu">
                                                                            <t
                                                                                t-foreach="subcat.child_id"
                                                                                t-as="subsubcat">
                                                                                <li
                                                                                    class="child-category">
                                                                                    <a
                                                                                        class="dropdown-item sub-category"
                                                                                        t-att-href="'/subcategory?category_id=' + str(subsubcat.id)">
                                                                                        <t
                                                                                            t-esc="subsubcat.name" />
                                                                                    </a>
                                                                                    <t
                                                                                        t-if="subsubcat.child_id">
                                                                                        <ul
                                                                                            class="subcategory-menu">
                                                                                            <t
                                                                                                t-foreach="subsubcat.child_id"
                                                                                                t-as="subsubsubcat">
                                                                                                <li
                                                                                                    class="child-category">
                                                                                                    <a
                                                                                                        class="dropdown-item sub-category"
                                                                                                        t-att-href="'/subcategory?category_id=' + str(subsubsubcat.id)">
                                                                                                        <t
                                                                                                            t-esc="subsubsubcat.name" />
                                                                                                    </a>
                                                                                                </li>
                                                                                            </t>
                                                                                        </ul>
                                                                                    </t>
                                                                                </li>
                                                                            </t>
                                                                        </ul>
                                                                    </t>
                                                                </li>
                                                            </t>
                                                        </ul>
                                                    </t>
                                                </li>
                                            </t>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/offers">Ofertas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/brand">Marcas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/shop/history">
                                            Historial</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/about">Sobre Nosotros</a>
                                    </li>
                                    <!--  <li class="nav-item">
                                        <a class="nav-link text-white" href="/contactus">Contacto</a>
                                    </li>  -->
                                </ul>
                            </div>
                            <!--  Right side: User, Cart, Notifications  -->
                            <div class="d-flex align-items-center justify-content-end"
                                style="width: 50%;">
                                <ul class="nav nav-pills flex-grow-1 justify-content-end"
                                    style="width: 100%; color: white;">
                                    <li class="nav-item d-flex align-items-center">
                                        <t t-if="request.env.user.id == request.website.user_id.id">
                                            <a class="nav-link text-white d-flex align-items-center"
                                                href="/web/login">
                                                <span>Log in</span>
                                                <i class="fa fa-user ms-2" />
                                            </a>
                                        </t>
                                        <t t-else="">
                                            <div class="dropdown">
                                                <a
                                                    class="nav-link dropdown-toggle text-white d-flex align-items-center"
                                                    href="#" id="userDropdown" role="button"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span>
                                                        <t
                                                            t-esc="request.env.user.name or 'Usuario'" />
                                                    </span>
                                                    <i class="fa fa-user ms-2" />
                                                </a>
                                                <ul class="dropdown-menu shadow"
                                                    aria-labelledby="userDropdown"
                                                    style="box-shadow: 0 4px 16px rgba(0,0,0,0.15) !important;">
                                                    <li>
                                                        <a class="dropdown-item"
                                                            href="/web/session/logout">
                                                            <i class="fa fa-sign-out-alt me-2" />
                                                            Logout </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </t>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/shop/cart">
                                            <i class="fa fa-shopping-cart" />
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/delivered_products">
                                            <i class="fa fa-bell" />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <style> /* Navbar principal */ .navbar { background: #fff; box-shadow: 0 2px 8px
                        rgba(0,0,0,0.04); padding: 0.5rem 0; } /* Segunda barra azul */
                        .navbar-light[style*="background-color: #5081FF;"] { background:
                        linear-gradient(90deg, #5081FF 0%, #3B5ED7 100%) !important; box-shadow: 0
                        4px 16px rgba(80,129,255,0.10); } /* Categorías */ .category-menu {
                        position: relative; overflow: visible; /* Permite que los elementos hijos
                        sobresalgan */ background: #fff; /* Fondo blanco para la ventana principal
                        */ box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15); /* Sombra para darle
                        profundidad */ border-radius: 8px; padding: 10px 0; z-index: 1050; }
                        .subcategory-menu { display: none; position: absolute; left: 100%; /*
                        Posiciona la subcategoría fuera de la ventana del nivel anterior */ top: 0;
                        min-width: 220px; background: #fff; box-shadow: 0 4px 16px rgba(0, 0, 0,
                        0.15); border-radius: 8px; padding: 10px 0; z-index: 1050; /* Asegura que
                        esté encima de otros elementos */ } .parent-category:hover >
                        .subcategory-menu, .child-category:hover > .subcategory-menu { display:
                        block; } .child-category { position: relative; /* Asegura que las
                        subcategorías se posicionen correctamente */ } .parent-category:hover >
                        .subcategory-menu { display: block; } .parent-category { position: relative;
                        /* Asegura que las subcategorías se posicionen correctamente */ }
                        .child-category:hover > .subcategory-menu { display: block; } .nav-link {
                        font-size: 1rem; font-weight: 500; border-radius: 20px; transition:
                        background 0.2s; } /* Botón de usuario y carrito */ .fa-user,
                        .fa-shopping-cart, .fa-bell { font-size: 1.2rem; } /* Search bar */
                        .form-control { border-radius: 20px !important; font-size: 15px; height:
                        38px; border: 1px solid #e0e0e0; } .input-group .btn { border-radius: 20px
                        !important; height: 38px; background: #5081FF; color: #fff; border: none; }
                        /* Dropdown search results */ #searchResults { display: none; position:
                        absolute; top: 100%; left: 0; z-index: 1000; background: #fff; border: 1px
                        solid #e0e0e0; border-radius: 8px; width: 100%; max-height: 340px;
                        overflow-y: auto; padding: 0; box-shadow: 0 8px 32px rgba(80,129,255,0.10);
                        } .dropdown-item { display: flex; align-items: center; padding: 10px 16px;
                        border-bottom: 1px solid #f2f2f2; font-size: 15px; color: #222; background:
                        none; } .dropdown-item:last-child { border-bottom: none; } .dropdown-item
                        img { margin-right: 12px; width: 40px; height: 40px; object-fit: contain;
                        border-radius: 6px; background: #f7f7f7; } .dropdown-item span { display:
                        inline-block; vertical-align: middle; max-width: 1000px; white-space:
                        nowrap; overflow: hidden; text-overflow: ellipsis; }
                        .dropdown-item.text-center { justify-content: center; color: #5081FF;
                        font-weight: 600; background: #f7faff; } /* Responsive */ @media (max-width:
                        991.98px) { .nav-link { font-size: 0.95rem; padding: 0.4rem 0.8rem; }
                        .nav-pills { gap: 10px; } .category-menu { min-width: 220px; font-size:
                        0.97rem; } } @media (max-width: 767.98px) { .navbar,
                        .navbar-light[style*="background-color: #5081FF;"] { border-radius: 0;
                        box-shadow: none; } .nav-link { font-size: 0.9rem; padding: 0.3rem 0.6rem; }
                        .nav-pills { gap: 6px; } .category-menu { min-width: 160px; font-size:
                        0.93rem; } .form-control, .input-group .btn { height: 32px; font-size:
                        0.95rem; } } </style>
                </nav>
                <script> document.addEventListener('DOMContentLoaded', function() { const
                    parentCategories = document.querySelectorAll('.parent-category'); const
                    childCategories = document.querySelectorAll('.child-category');
                    parentCategories.forEach(parent => { parent.addEventListener('mouseenter',
                    function() { const subMenu = parent.querySelector('.subcategory-menu'); if
                    (subMenu) { if (subMenu.children.length > 0) { subMenu.style.display = 'block';
                    } }); parent.addEventListener('mouseleave', function() { const subMenu =
                    parent.querySelector('.subcategory-menu'); if (subMenu) { subMenu.style.display
                    = 'none'; } }); }); childCategories.forEach(child => {
                    child.addEventListener('mouseenter', function() { const subMenu =
                    child.querySelector('.subcategory-menu'); if (subMenu) { if
                    (subMenu.children.length > 0) { subMenu.style.display = 'block'; } });
                    child.addEventListener('mouseleave', function() { const subMenu =
                    child.querySelector('.subcategory-menu'); if (subMenu) { subMenu.style.display =
                    'none'; } }); }); }); </script>
            </div>
        </xpath>
    </template>
    <template id="recursive_subcategories" name="Recursive Subcategories">
        <t t-if="subcategories">
            <ul t-attf-class="subcategory-list level-#{level}">
                <t t-set="subcounter" t-value="'a'" />
                <t t-foreach="subcategories" t-as="subcat">
                    <li t-attf-class="child-category level-#{level}-item">
                        <a class="dropdown-item sub-category"
                            t-att-href="'/subcategory?category_id=' + str(subcat.id)">
                            <t t-if="level == 1">
                                <span class="subcategory-letter">
                                    <t t-esc="subcounter" /> . </span>
                            </t>
                            <t t-esc="subcat.name" />
                        </a>
                        <t t-if="subcat.child_id">
                            <t t-call="theme_xtream.recursive_subcategories">
                                <t t-set="subcategories" t-value="subcat.child_id" />
                                <t t-set="level" t-value="level + 1" />
                            </t>
                        </t>
                    </li>
                    <t t-if="level == 1">
                        <t t-set="subcounter" t-value="chr(ord(subcounter) + 1)" />
                    </t>
                </t>
            </ul>
        </t>
    </template>
</odoo>