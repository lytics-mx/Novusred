<odoo>
    <template id="custom_navbar" name="Custom Navbar" inherit_id="website.template_header_default">
        <xpath expr="//header" position="before">
            <!-- Incluir los archivos CSS y JavaScript -->
            <link rel="stylesheet" type="text/css" href="/theme_xtream/static/src/css/navbar.css"/>
            <script type="text/javascript" src="/theme_xtream/static/src/js/navbar.js"></script>
            <t t-call-assets="website.assets_frontend" t-js="true"/>
            <t t-call-assets="website_sale.assets_frontend" t-js="true"/>            
            <div class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-white d-none d-lg-block">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                        
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Logo first -->
                                <a class="navbar-brand me-3" href="/">
                                    <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" class="img-fluid" style="max-height: 68px; min-height: 50px; width: auto;"/>
                                </a>
                                <!-- Search bar after logo -->
                                <form class="d-flex flex-grow-1" action="/search_redirect" method="get" style="width: 100%;">
                                    <div class="input-group w-100">
                                        <input type="search" name="search" id="searchInput" class="form-control"
                                            placeholder="Buscar productos, marcas o categorías..." aria-label="Search"
                                            style="border-radius: 20px; font-size: 14px; height: 36px;" autocomplete="off"/>
                                        <input type="hidden" name="search_type" value="all"/>
                                        <div id="searchResults" class="dropdown-menu" style="display: none; position: absolute; z-index: 1000; width: 100%; top: 100%; left: 0; background-color: white; border: 1px solid #ccc; padding: 10px;"></div>                                                                            

                                        <button class="btn btn-outline-secondary" type="submit"
                                                style="border-radius: 20px; height: 36px;">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </nav>
                <nav class="navbar navbar-expand-lg navbar-light d-none d-lg-block" style="background-color: #33333e;">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-between w-100 flex-wrap flex-lg-nowrap">
                            <!-- Left side: Categories, Offers, Brands, History, About Us, Contact -->
                            <div class="d-flex align-items-center flex-grow-1 justify-content-start" style="width: 50%;">
                                <ul class="nav nav-pills flex-grow-1 justify-content-start" style="width: 100%; color: white;">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-white" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Categorías
                                        </a>
                                        <ul class="dropdown-menu category-menu shadow" aria-labelledby="categoriesDropdown">
                                            <t t-set="second_level_categories" t-value="request.env['product.category'].search([('parent_id.parent_id', '=', False), ('parent_id', '!=', False)])" />
                                            <t t-foreach="second_level_categories" t-as="category">
                                                <li class="parent-category position-relative">
                                                    <a class="dropdown-item main-category" t-att-href="'/category_search?search=' + category.name.replace(' ', '-')">
                                                        <t t-esc="category.name"/>
                                                    </a>
                                                    <t t-if="category.child_id">
                                                        <ul class="subcategory-menu">
                                                            <t t-foreach="category.child_id" t-as="subcat">
                                                                <li class="child-category">
                                                                    <a class="dropdown-item sub-category" t-att-href="'/subcategory?category_id=' + str(subcat.id).replace(' ', '-')">
                                                                        <t t-esc="subcat.name"/>
                                                                    </a>
                                                                    <t t-if="subcat.child_id">
                                                                        <ul class="subcategory-menu">
                                                                            <t t-foreach="subcat.child_id" t-as="subsubcat">
                                                                                <li class="child-category">
                                                                                    <a class="dropdown-item sub-category" t-att-href="'/subcategory?category_id=' + str(subsubcat.id)">
                                                                                        <t t-esc="subsubcat.name"/>
                                                                                    </a>
                                                                                    <t t-if="subsubcat.child_id">
                                                                                        <ul class="subcategory-menu">
                                                                                            <t t-foreach="subsubcat.child_id" t-as="subsubsubcat">
                                                                                                <li class="child-category">
                                                                                                    <a class="dropdown-item sub-category" t-att-href="'/subcategory?category_id=' + str(subsubsubcat.id)">
                                                                                                        <t t-esc="subsubsubcat.name"/>
                                                                                                    </a>
                                                                                                </li>
                                                                                            </t>
                                                                                        </ul>
                                                                                    </t>
                                                                                </li>
                                                                            </t>
                                                                        </ul>
                                                                    </t>
                                                                </li>
                                                            </t>
                                                        </ul>
                                                    </t>
                                                </li>
                                            </t>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/offers">Ofertas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/brand">Marcas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/shop/history">Historial</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/about">Sobre Nosotros</a>
                                    </li>                                  
                                </ul>
                            </div>
                            <!-- Right side: User, Cart, Notifications -->
                            <div class="d-flex align-items-center justify-content-end" style="width: 50%;">
                                <ul class="nav nav-pills flex-grow-1 justify-content-end" style="width: 100%; color: white;">
                                    <li class="nav-item dropdown ms-auto" style="position: relative; margin-left: auto;">
                                        <!-- Notificación de registro exitoso -->
                                        <!-- <a class="nav-link text-white position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="margin-left: auto;">
                                            <i class="fa fa-bell"></i>
                                            <span id="notificationCounter" class="badge bg-danger position-absolute top-0 end-0 translate-middle" style="display: none;">1</span>                                        
                                        </a> -->
                                        <ul class="dropdown-menu shadow" aria-labelledby="notificationDropdown" style="background-color: #f8f9fa; border-radius: 8px; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15); position: absolute; right: 0; left: auto; min-width: 220px; max-width: 400px; width: auto; white-space: normal; word-break: break-word; padding: 0.5rem 0.75rem;">
                                            <li id="notificationMessage" style="display: none;">
                                                <div class="dropdown-item">                                                    
                                                    <a href="/web/login" style="text-decoration: none;">
                                                    <p class="mb-0 text-break" style="white-space: normal; cursor: pointer;" onclick="window.location.href='/web/login';">
                                                        Bienvenido a Novusred, inicia sesión con tu usuario registrado.
                                                    </p>
                                                    </a>                                               
                                                </div>
                                            </li>
                                            <li id="noNotificationsMessage" style="display: none;">
                                                <div class="dropdown-item text-center">
                                                    <p class="mb-0 text-muted">No hay notificaciones</p>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>                          
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/shop/cart">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                                                        
                                    <li class="nav-item d-flex align-items-center">
                                        <t t-if="request.env.user.id == request.website.user_id.id">
                                            <a class="nav-link text-white d-flex align-items-center" href="/web/login">
                                                <span>Log in</span>
                                                <i class="fa fa-user ms-2"></i>
                                            </a>
                                        </t>
                                        <t t-else="">
                                            <div class="dropdown">
                                                <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span><t t-esc="request.env.user.name or 'Usuario'"/></span>
                                                    <i class="fa fa-user ms-2"></i>
                                                </a>
                                                <ul class="dropdown-menu shadow" aria-labelledby="userDropdown" style="box-shadow: 0 4px 16px rgba(0,0,0,0.15) !important;">
                                                    <li>
                                                        <a class="dropdown-item" href="/web/session/logout">
                                                            <i class="fa fa-sign-out-alt me-2"></i> Logout
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </t>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>                 
                </nav>
                <!-- NAVBAR SOLO PARA MOVIL -->
                <!-- Solo visible en móvil -->
                <nav class="mobile-navbar d-flex d-lg-none align-items-center px-3 py-2" style="background:#33333e; height:56px;">
                    <button id="mobileMenuBtn" style="background:none; border:none; font-size:28px; color:#fff;">
                        <i class="fa fa-bars"></i>
                    </button>
                    <a href="/" class="ms-3">
                        <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" style="height:36px;" />                    
                    </a>
                </nav>
                <script>
                    <![CDATA[
                    document.addEventListener('DOMContentLoaded', function() {
                        var menuBtn = document.getElementById('mobileMenuBtn');
                        var sideMenu = document.getElementById('mobileSideMenu');
                        var closeBtn = document.getElementById('closeMobileMenu');
                        var backdrop = document.getElementById('mobileSideMenuBackdrop');

                        function openMenu() {
                            if (sideMenu && backdrop) {
                                sideMenu.style.transform = 'translateX(0)';
                                sideMenu.style.display = 'block';
                                backdrop.style.display = 'block';
                            }
                        }
                        function closeMenu() {
                            if (sideMenu && backdrop) {
                                sideMenu.style.transform = 'translateX(-100%)';
                                setTimeout(function() {
                                    sideMenu.style.display = 'none';
                                    backdrop.style.display = 'none';
                                }, 300);
                            }
                        }

                        if (menuBtn) menuBtn.addEventListener('click', openMenu);
                        if (closeBtn) closeBtn.addEventListener('click', closeMenu);
                        if (backdrop) backdrop.addEventListener('click', closeMenu);
                    });
                    ]]>
                </script>
                
                <!-- Menú lateral móvil -->
                <div id="mobileSideMenu" class="mobile-side-menu" style="display:none; position:fixed; top:0; left:0; width:80vw; max-width:320px; height:100vh; background:#fff; z-index:2000; box-shadow:2px 0 8px rgba(0,0,0,0.08); transition:transform 0.3s; transform:translateX(-100%);">
                    <div class="p-3">
                        <button id="closeMobileMenu" style="background:none; border:none; font-size:28px; color:#2976f6; float:right;">×</button>
                        <div style="clear:both;"></div>
                        <ul style="list-style:none; padding:0; margin-top:40px;">
                            <li><a href="/category" style="color:#2976f6; font-size:18px; font-weight:500;">Categorías</a></li>
                            <li><a href="/offers" style="color:#2976f6; font-size:18px;">Ofertas</a></li>
                            <li><a href="/brand" style="color:#2976f6; font-size:18px;">Marcas</a></li>
                            <li><a href="/shop/history" style="color:#2976f6; font-size:18px;">Historial</a></li>
                            <li><a href="/about" style="color:#2976f6; font-size:18px;">Sobre Nosotros</a></li>
                        </ul>
                    </div>
                </div>
                <div id="mobileSideMenuBackdrop" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.18); z-index:1999;"></div>                
                
               
            </div>
        </xpath>
    </template>

    <template id="recursive_subcategories" name="Recursive Subcategories">
        <t t-if="subcategories">
            <ul t-attf-class="subcategory-list level-#{level}">
                <t t-set="subcounter" t-value="'a'" />
                <t t-foreach="subcategories" t-as="subcat">
                    <li t-attf-class="child-category level-#{level}-item">
                        <a class="dropdown-item sub-category" t-att-href="'/subcategory?category_id=' + str(subcat.id)">
                            <t t-if="level == 1">
                                <span class="subcategory-letter"><t t-esc="subcounter"/>. </span>
                            </t>
                            <t t-esc="subcat.name"/>
                        </a>
                        <t t-if="subcat.child_id">
                            <t t-call="theme_xtream.recursive_subcategories">
                                <t t-set="subcategories" t-value="subcat.child_id"/>
                                <t t-set="level" t-value="level + 1"/>
                            </t>
                        </t>
                    </li>
                    <t t-if="level == 1">
                        <t t-set="subcounter" t-value="chr(ord(subcounter) + 1)" />
                    </t>
                </t>
            </ul>
        </t>
    </template>

    <!-- Template de notificación emergente -->
    <template id="notification_popup" name="Notification Popup">
        <div id="notificationPopup" class="notification-popup shadow" style="display:none; position:fixed; top:20px; right:20px; z-index:1050; background:#fff; border-radius:12px; box-shadow:0 4px 16px rgba(0,0,0,0.15); padding:20px; min-width:320px; max-width:400px;">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-bold" style="font-size:16px;">Artículos agregados a su carrito</span>
                <button type="button" class="btn-close" aria-label="Cerrar" onclick="document.getElementById('notificationPopup').style.display='none';"></button>
            </div>
            <div id="notificationPopupContent">
                <!-- Aquí se inserta el contenido dinámico del producto -->
            </div>
            <a href="/shop/cart" class="btn btn-primary w-100 mt-3" style="background:#7c5c8a; border:none;">Ver carrito</a>
        </div>
    </template>


</odoo>
