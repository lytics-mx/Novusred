            <script type="text/javascript" src="/theme_xtream/static/src/js/navbar.js"></script>
            <t t-call-assets="website.assets_frontend" t-js="true"/>
            <t t-call-assets="website_sale.assets_frontend" t-js="true"/>            
            <div class="custom-navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-white d-none d-lg-block">
                    <div class="container">
                        <div class="d-flex align-items-center justify-content-center w-100 flex-wrap flex-lg-nowrap">
                        
                            <div class="d-flex align-items-center flex-grow-1" style="width: 100%;">
                                <!-- Logo first -->
                                <a class="navbar-brand me-3" href="/">
