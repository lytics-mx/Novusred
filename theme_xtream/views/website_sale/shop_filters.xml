<odoo>
    <template id="products_grid_filters" inherit_id="website_sale.products">
        <xpath expr="//div[@id='products_grid_before']" position="inside">
            <div>
                <label>Filtrar por Marca:</label>
                <select name="brand" id="brand_filter" class="form-control">
                    <option value="">Todas las marcas</option>
                    <t t-foreach="request.env['brand.type'].search([])" t-as="brand">
                        <option t-att-value="brand.id" t-esc="brand.name"/>
                    </t>
                </select>
            </div>
        </xpath>
    </template>
</odoo>