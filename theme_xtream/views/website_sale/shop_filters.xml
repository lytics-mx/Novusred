<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view for Banner Images -->
    <record id="banner_images_list" model="ir.ui.view">
        <field name="name">banner.images.list</field>
        <field name="model">banner.images</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="website_published"/>
            </list>
        </field>
    </record>

    <!-- Form view for Banner Images -->
    <record id="banner_images_form" model="ir.ui.view">
        <field name="name">banner.images.form</field>
        <field name="model">banner.images</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="website_published"/>
                    </group>
                    <notebook>
                        <page string="Cover Images">
                            <field name="cover_images">
                                <list editable="bottom">
                                    <field name="image"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                        <page string="Product Cover Images">
                            <field name="product_cover_images">
                                <list editable="bottom">
                                    <field name="image"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Banner Images -->
    <record id="banner_images_action" model="ir.actions.act_window">
        <field name="name">Banner Images</field>
        <field name="res_model">banner.images</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu item for Banner Images -->
    <menuitem id="menu_banner_images"
              name="Banner Images"
              action="banner_images_action"
              parent="website.menu_website_global_configuration"
              sequence="26"
    />
</odoo>