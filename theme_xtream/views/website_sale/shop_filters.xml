<odoo>
    <!-- Form view for Banner Images -->
    <record id="banner_images_form" model="ir.ui.view">
        <field name="name">banner.images.form</field>
        <field name="model">banner.images</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image_quantity"/>
                        <field name="product_image_quantity"/>
                    </group>
                    <notebook>
                        <page string="Cover Images">
                            <field name="cover_images">
                                <tree editable="bottom">
                                    <field name="image"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Product Cover Images">
                            <field name="product_cover_images">
                                <tree editable="bottom">
                                    <field name="image"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Website">
                            <group>
                                <field name="website_published"/>
                                <field name="website_description"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>