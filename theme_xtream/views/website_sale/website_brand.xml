                                                                $<t t-esc="'{:,}'.format(int(product.list_price))" />
                                                            </span>
                                                        </t>
                                                        <t t-if="not product.product_tag_ids">
                                                            <div class="mobile-spacer"></div>
                                                        </t>
                                                        <t t-if="product.free_shipping">
                                                            <div class="mt-0 mobile-shipping">
                                                                <span class="text-orange mobile-shipping-text">
                                                                    Envío gratis
                                                                </span>
                                                            </div>
                                                        </t>
                                                    </div>
                                                    <h6 class="card-title mb-2" style="font-size: 16px; line-height: 1.2; max-height: 2.4em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                                        <t t-esc="product.name" />
                                                    </h6>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="more-categories py-5">
                    <div class="d-block d-md-none">
                        <h2 class="text-center" style="font-family: 'Questrial', sans-serif; font-size: 25px;">MÁS CATEGORÍAS</h2>
                    </div>
                    <div class="container">
                        <t t-set="all_categories" t-value="request.env['product.category'].sudo().search([('banner_image', '!=', False)])"/>
                        <t t-if="all_categories">
                            <!-- Mobile view: Carousel, 1 per slide -->
                            <div class="d-block d-md-none">
                                <div id="categoryMobileCarousel" class="carousel slide" data-bs-ride="carousel">
