<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Imágenes adicionales">
                    <field name="image_ids" widget="many2many_binary" options="{'mimetype': 'image/*'}"/>
                </group>
                <!-- <group string="Marcas">
                    <field name="brand_ids" widget="many2many_tags"/>
                </group> -->
                <group string="Documentos técnicos">
                    <field name="technical_document_ids" widget="many2many_binary" options="{'mimetype': 'application/*'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>