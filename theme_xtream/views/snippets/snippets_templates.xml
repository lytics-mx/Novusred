<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="xtream_theme_snippets" inherit_id="website.snippets"
              name="About Us">
        <!-- The template defines various snippets of content that will be displayed on the page, such as a amazing, arrival demo,
        discount, main, main product, map, new arrivals, and testimonial. The template uses XPath expressions to position the snippets within the page
        structure. The "inherit_id" attribute indicates that the template inherits from the "website.snippets" template. -->
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="xtream_theme.s_amazing"
               t-thumbnail="/xtream_theme/static/src/img/snippets/amazing_banner.jpg"/>
            <t t-snippet="xtream_theme.s_discount"
               t-thumbnail="/xtream_theme/static/src/img/snippets/discount.jpg"/>
            <t t-snippet="xtream_theme.s_main"
               t-thumbnail="/xtream_theme/static/src/img/snippets/main_banner.jpg"/>
            <t t-snippet="xtream_theme.s_main_product"
               t-thumbnail="/xtream_theme/static/src/img/snippets/main_product.jpg"/>
        </xpath>
        <xpath expr="//snippets[@id='snippet_content']//t[@t-snippet][last()]" position="after">
            <t t-snippet="xtream_theme.s_new_arrivals"
               t-thumbnail="/xtream_theme/static/src/img/snippets/new_arrivals.jpg"/>
            <t t-snippet="xtream_theme.s_testimonial"
               t-thumbnail="/xtream_theme/static/src/img/snippets/testimonial.jpg"/>
        </xpath>
    </template>
</odoo>
