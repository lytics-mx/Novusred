<odoo>
    <!-- List View -->
    <record id="view_brand_type_list" model="ir.ui.view">
        <field name="name">brand.type.list</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <list create="true" delete="true">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_brand_type_search" model="ir.ui.view">
        <field name="name">brand.type.search</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_brand_type_form" model="ir.ui.view">
        <field name="name">brand.type.form</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nombre de la Marca"/></h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <group string="Imágenes">
                        <field name="icon_image" widget="image" class="oe_avatar" options="{'preview_image': 'icon_image'}"/>
                        <field name="cover_image" widget="image" class="oe_avatar" options="{'preview_image': 'cover_image'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_brand_type_kanban" model="ir.ui.view">
        <field name="name">brand.type.kanban</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="description"/>
                <field name="icon_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <!-- Verifica si icon_image tiene valor antes de mostrar la imagen -->
                            <t t-if="record.icon_image.raw_value">
                                <img t-att-src="'data:image/png;base64,' + record.icon_image.raw_value"
                                     class="oe_kanban_avatar"
                                     style="width: 50px; height: 50px; border-radius: 50%;"/>
                            </t>
                            <strong><field name="name"/></strong>
                            <div><field name="description"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_type" model="ir.actions.act_window">
        <field name="name">Tipos de Marca</field>
        <field name="res_model">brand.type</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'auto_save': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree un nuevo tipo de marca
            </p>
        </field>
    </record>

    <!-- Menú "Tipos de Marca" bajo "Almacenes" -->
    <menuitem id="menu_brand_type"
              name="Tipos de Marca"
              action="action_brand_type"
              parent="stock.menu_stock_inventory_control" 
              sequence="3"/>
</odoo>