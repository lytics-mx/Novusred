<odoo>
    <!-- List View -->
    <record id="view_brand_type_tree" model="ir.ui.view">
        <field name="name">brand.type.tree</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="1" delete="1">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>
    <!-- Search View -->
    <record id="view_brand_type_search" model="ir.ui.view">
        <field name="name">brand.type.search</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>


    <!-- Form View with buttons -->
    <record id="view_brand_type_form" model="ir.ui.view">
        <field name="name">brand.type.form</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Action buttons can be placed here if needed -->
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <group string="Imágenes">
                        <field name="icon_image" widget="image" class="oe_avatar" options="{'preview_image': 'icon_image'}"/>
                        <field name="cover_image" widget="image" class="oe_avatar" options="{'preview_image': 'cover_image'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View - Fixed opening tag -->
    <record id="view_brand_type_kanban" model="ir.ui.view">
        <field name="name">brand.type.kanban</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <kanban auto_save="1">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <img t-if="record.icon_image.raw_value" t-att-src="'data:image/png;base64,' + record.icon_image.raw_value" class="oe_kanban_avatar" style="width: 50px; height: 50px; border-radius: 50%;"/>
                            <strong><field name="name"/></strong>
                            <div><field name="description"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Action -->
    <record id="action_brand_type" model="ir.actions.act_window">
        <field name="name">Tipos de Marca</field>
        <field name="res_model">brand.type</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'auto_save': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree un nuevo tipo de marca
            </p>
        </field>
    </record>

    <!-- Menú "Tipos de Marca" bajo "Almacenes" -->
    <menuitem id="menu_brand_type"
              name="Tipos de Marca"
              action="action_brand_type"
              parent="stock.menu_stock_inventory_control" 
              sequence="3"/>

</odoo>
