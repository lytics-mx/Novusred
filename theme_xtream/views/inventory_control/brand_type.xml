<odoo>
    <!-- List View -->
    <record id="view_brand_type_tree" model="ir.ui.view">
        <field name="name">brand.type.tree</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <list> <!-- Cambiado de <tree> a <list> -->
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_brand_type_form" model="ir.ui.view">
        <field name="name">brand.type.form</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_brand_type_kanban" model="ir.ui.view">
        <field name="name">brand.type.kanban</field>
        <field name="model">brand.type</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div><field name="description"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_type" model="ir.actions.act_window">
        <field name="name">Tipos de Marca</field>
        <field name="res_model">brand.type</field>
        <field name="view_mode">kanban,list,form</field> <!-- Agregado "kanban" -->
    </record>

    <!-- MenÃº "Tipos de Marca" bajo "Almacenes" -->
    <menuitem id="menu_brand_type"
              name="Tipos de Marca"
              action="action_brand_type"
              parent="stock.menu_stock_inventory_control" 
              sequence="3"/>
</odoo>
