<odoo>
    <!--  To inherit header  -->
    <template id="xtream_header0" inherit_id="website.template_header_default">
        <xpath expr="//t[@t-call='website.placeholder_header_text_element']" position="replace"> </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_call_to_action']" position="replace">
            <!-- <div class="help-line text-center">
                <a href="tel:+346573556778">
                    <i class="fa fa-headphones">/</i>
                    +34 657 3556 778
                </a>
            </div> -->
        </xpath>
    </template>

    <!-- To replace the logo -->
    <template id="custom_logo" inherit_id="website.layout">
        <xpath expr="//header//a[@class='navbar-brand logo']/img" position="replace">
            <img src="/theme_xtream/static/src/img/logos/logo.png" t-att-alt="'Logo of %s' % company.name" t-att-title="company.name" class="company_logo" style="height: 80px;"/>
        </xpath>
    </template>

