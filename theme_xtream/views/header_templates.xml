<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- To inherit header -->
    <template id="xtream_header0" inherit_id="website.template_header_default">
        <xpath expr="//t[@t-call='website.placeholder_header_text_element']" position="replace">
        </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_call_to_action']" position="replace">
            <div class="help-line text-center">
                <a href="tel:+525544408181"><i class="fa fa-headphones"></i> 5544408181</a>
            </div>
        </xpath>
    </template>
    <!-- Add dropdown menu in header -->
    <template id="xtream_header_dropdown" inherit_id="website.template_header_default">
        <xpath expr="//ul[contains(@class, 'navbar-nav')]" position="inside">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    MÁS <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/descubre">Descubre</a></li>
                    <li><a href="/shop/category">Categorías</a></li>
                    <li><a href="/offers">Ofertas</a></li>
                    <li><a href="/contactus">Contacto</a></li>
                </ul>
            </li>
        </xpath>
    </template>

    <!-- To inherit cart -->
    <template id="xtream_cart" inherit_id="website_sale.header_cart_link">
        <xpath expr="//i[@t-if='_icon']" position="replace">
            <i t-if="_icon" class="fa fa-shopping-bag"/>
        </xpath>
    </template>
</odoo>
