<template id="xtream_header0" inherit_id="website.template_header_default">
    <xpath expr="//header" position="replace">
        <header class="o_header_standard">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <!-- Logo -->
                    <a class="navbar-brand" href="/">
                        <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Company Logo" class="company-logo"/>
                    </a>
                    <!-- Navigation items can be added here -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                        <span class="navbar-toggler-icon"/>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <t t-call="website.navbar_nav_menu"/>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </xpath>
</template>