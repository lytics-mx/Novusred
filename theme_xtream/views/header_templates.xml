<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="xtream_header0" inherit_id="website.template_header_default">
        <xpath expr="//header" position="replace">
            <header class="custom-navbar fixed-top">
                <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #2B65FB;">
                    <div class="container">
                        <!-- Logo con tamaÃ±o fijo -->
                        <a class="navbar-brand" href="/">
                            <img src="/theme_xtream/static/src/img/logos/Imagen2.png" alt="Logo" class="img-fluid" style="width: 250px; height: 250px; object-fit: contain;"/>
                        </a>
                        <!-- Toggle button for mobile -->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <!-- Navbar links -->
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <form class="d-flex w-100 mt-2 mt-lg-0" action="/shop" method="get">
                                <div class="input-group">
                                    <input type="search" name="search" class="form-control" placeholder="Buscar..." aria-label="Search"/>
                                    <button class="btn btn-outline-light" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>
</odoo>
