<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- To inherit header -->
    <template id="xtream_header0" inherit_id="website.template_header_default">
        <!-- Ajuste del XPath -->
        <xpath expr="//div[@id='o_main_nav']//a" position="replace">
            <a class="navbar-brand logo me-4" href="/">
                <img src="/theme_xtream/static/src/img/logos/logo.png" alt="Logo" style="max-height: 50px;"/>
            </a>
        </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_call_to_action']" position="replace">
            <div class="help-line text-center">
                <a href="tel:+525544408181"><i class="fa fa-headphones"></i> 554-440-81-81</a>
            </div>
        </xpath>
    </template>
    <!-- To inherit cart -->
    <template id="xtream_cart" inherit_id="website_sale.header_cart_link">
        <xpath expr="//i[@t-if='_icon']" position="replace">
            <i t-if="_icon" class="fa fa-shopping-bag"/>
        </xpath>
    </template>
</odoo>
