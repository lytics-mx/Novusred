<odoo>
    <data noupdate="1">
        <!-- Cron para eliminar etiquetas expiradas -->
        <record id="ir_cron_remove_expired_tags" model="ir.cron">
            <field name="name">Eliminar etiquetas expiradas</field>
            <field name="model_id" ref="model_product_tag"/>
            <field name="state">code</field>
            <field name="code">model._remove_expired_tags()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <!-- Cron para aplicar descuentos de fines de semana -->
        <record id="ir_cron_apply_weekend_discounts" model="ir.cron">
            <field name="name">Aplicar descuentos de fines de semana</field>
            <field name="model_id" ref="model_product_tag"/>
            <field name="state">code</field>
            <field name="code">model._apply_weekend_discounts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>